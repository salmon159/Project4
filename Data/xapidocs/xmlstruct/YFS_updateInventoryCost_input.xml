<!--updateInventoryCostData Input XML-->
<Cost EnterpriseCode="" InventoryValue="Required" ItemID="Required"
    OrderNo="" OrganizationCode="Required" PrimeLineNo=""
    ProductClass="" Quantity="Required" ShipNode="Required" SubLineNo=""
    UnitOfMeasure="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/updateInventoryCost/input">
    <yfc:doc>
        <Element EntityName="Inventory_Item_Node_Cost">
            <Description>
                <div>
                    <Validation>
                        <Condition>
              Inventory Cost data for the item at the node is not available in the system.
            </Condition>
                        <Error
                            Description="Cost details are already available for the given Item/ShipNode." ErrorCode="YFS10531 "/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="OrgCode" Name="EnterpriseCode">
                <Description>Enterprise Code of the transaction. This is just a reference attribute.</Description>
            </Attribute>
            <Attribute Name="InventoryValue">
                <Description>Amount of Inventory value that has to be adjusted.</Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item" Name="ItemID">
                <Description>
                    <div>
            Item Id of the item for which inventory value has to be adjusted. 
            <Validation>
                            <Condition>
                The Item ID should be passed
              </Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364 "/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="DocumentNo" Name="OrderNo">
                <Description>Order No of the transaction. This is just a reference attribute.</Description>
            </Attribute>
            <Attribute DataType="OrgCode" Name="OrganizationCode">
                <Description>
                    <div>
            Organization Code of the organization maintaining the inventory.
            <Validation>
                            <Condition>
                The value should be passed
              </Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364"/>
                        </Validation>
                        <Validation>
                            <Condition>
                The organization code must be valid
              </Condition>
                            <Error
                                Description="Invalid Organization Code" ErrorCode="YFS10395"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="LineNo" Name="PrimeLineNo">
                <Description>Prime Line No of the transaction. This is just a reference attribute.</Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item" Name="ProductClass">
                <Description>
                    <div>
		            Product Class of the item for which inventory value has to be adjusted.
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Quantity" Name="Quantity">
                <Description>
                    <div>
            Quantity for which inventory value has to be adjusted. This should be a positive non-zero number.
            <Validation>
                            <Condition>
                The quantity must be greather than zero
              </Condition>
                            <Error
                                Description="Invalid Quantity to adjust inventory value. Quantity should be a positive non-zero value." ErrorCode="YFS10532"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="ShipNode" Name="ShipNode">
                <Description>
                    <div>
            Ship Node for which inventory value has to be adjusted.
            <Validation>
                            <Condition>
                The ship node should be passed
              </Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364 "/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="LineNo" Name="SubLineNo">
                <Description>Sub Line No of the transaction. This is just a reference attribute.</Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item" Name="UnitOfMeasure">
                <Description>
                    <div>
					Unit Of Measure of the item for which inventory value has to be adjusted.
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</Cost>
