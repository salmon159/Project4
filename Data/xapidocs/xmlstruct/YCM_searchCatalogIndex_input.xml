<!-- searchCatalogIndex Input XML -->
<CatalogSearch CallingOrganizationCode="Required" CategoryDepth=""
    CategoryDomain="" CategoryPath="" DisplayLocalizedFieldInLocale=""
    OrganizationCode="" PageNumber="" PageSize=""
    SellerOrganizationCode="" SortDescending="" SortField="" xmlns="http://www.sterlingcommerce.com/documentation/YCM/searchCatalogIndex/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
				Search criteria for searching catalog index.
				</div>
            </Description>
        </Element>
        <Attributes>
            <Attribute EntityName="Organization"
                Name="CallingOrganizationCode" NameInEntity="Organization_Code">
                <Description>
                    <div>
					The organization code that the API is being invoked for. 
					<Validation>
                            <Condition>
                                <code>CallingOrganizationCode</code> does not identify a valid organization.</Condition>
                            <Error
                                Description="YFS:Invalid organization code" ErrorCode="YFS10395"/>
                        </Validation>
                        <Validation>
                            <Condition>
                                <code>CallingOrganizationCode</code> is not passed.</Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing." ErrorCode="YFS10364"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Count" Name="CategoryDepth">
                <Description>
                    <div>
					 The number of category levels that should be returned.  Default value: 2.
				</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Category_Domain"
                Name="CategoryDomain" NameInEntity="Category_Domain">
                <Description>
                    <div>
					 The identifier for a category domain representing the catalog in the index.
				</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Category" Name="CategoryPath" NameInEntity="Category_Path">
                <Description>
                    <div>
					 The path of the current category that the user has navigated to.
					 <Validation>
                            <Condition>An invalid category path is specified.</Condition>
                            <Error
                                Description="Invalid category path specified." ErrorCode="YCMTEL_0001"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Locale" Name="DisplayLocalizedFieldInLocale">
                <Description>
                    <div>
					 The locale for which localized data should be presented. The value of this field must be in the format, language_country_variant (e.g. "fr_FR", "en_US_CA").
				</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Organization" Name="OrganizationCode" NameInEntity="Organization_Code">
                <Description>
                    <div>
					The <code>OrganizationCode</code> attribute can be passed to override the catalog organization.  By default, the <code>CallingOrganizationCode</code>'s catalog organization code is used.  The catalog organization code corresponds to the <code>OrganizationCode</code> attribute of the items, and will be used to query the YFS_ITEM table.
				</div>
                </Description>
            </Attribute>
            <Attribute DataType="Count" Name="PageNumber">
                <Description>
                    <div>
					 The number of the page the user is requesting to view.  Default value: 1.
					 <Validation>
                            <Condition>
                                <code>PageNumber</code> value must be a valid non-negative, non-zero integer.</Condition>
                            <Error
                                Description="PageNumber must be greater than 0." ErrorCode="YCM85_042"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Count" Name="PageSize">
                <Description>
                    <div>				
					The number of items to return in the ItemList element to be displayed on a single page.  Default value: 30.
					<Validation>
                            <Condition>
                                <code>PageSize</code> value must be a valid non-negative, non-zero integer.</Condition>
                            <Error
                                Description="PageSize must be greater than 0." ErrorCode="YCM85_030"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Organization"
                Name="SellerOrganizationCode" NameInEntity="Organization_Code">
                <Description>
                    <div>
					The organization code of the Seller Organization
				</div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="SortDescending">
                <Description>
                    <div>
					 This field indicates whether the result should be sorted in descending order.  Default value: N.
				</div>
                </Description>
            </Attribute>
            <Attribute DataType="Text-40" Name="SortField">
                <Description>
                    <div>
					 The name of the index field that should be used for sorting.  Only fields with an <code>Index</code> value of NOT_ANALYZED and a <code>Sortable</code> value of Y in the CatalogSearchConfigProperties.xml file can be used for sorting.
					<Validation>
                            <Condition>Values passed for <code>SortField</code> must be properly configured.</Condition>
                            <Error
                                Description="SortField Must be Sortable and NOT_ANALYZED." ErrorCode="YCM85_029"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <Item Currency="" DemandType="" DistributionRuleId=""
        EntitlementDate="" ExcludeChildItemsOfModelItems=""
        ExecuteQueries="" FulfillmentType="" GetAvailabilityFromCache=""
        IgnoreInvalidItems="" IsForOrdering="" IsItemSuperseded=""
        IsSoldSeparately="" PricingDate="" ShowFinalSupersededItemOnly="">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="Currency" Name="Currency">
                    <Description>
						The currency to return prices in.  If not passed, this is defaulted to the currency of the <code>CallingOrganizationCode</code>'s primary enterprise's locale.
					</Description>
                </Attribute>
                <Attribute EntityName="Inventory_Demand_Type"
                    Name="DemandType" NameInEntity="Demand_Type">
                    <Description>
						The demand type to be used when determining availability for items.  If not passed, <code>OPEN_ORDER</code> demand type is assumed.
					</Description>
                </Attribute>
                <Attribute DataType="DistributionRuleId" Name="DistributionRuleId">
                    <Description>The distribution rule ID to be used to determine the node(s) that 
					will be used for availability checks. 
					</Description>
                </Attribute>
                <Attribute DataType="TimeStamp" Name="EntitlementDate">
                    <Description>
					The date to be used when reading entitlements.  If not passed, this date defaults to the current date.
				</Description>
                </Attribute>
                <Attribute DataType="Flag" Name="ExcludeChildItemsOfModelItems">
                    <Description>
                        <div>
						This flag indicates whether child items of an item with variations should be returned in the search results.
						<br/>Valid values: <b>
                                <code>Y</code>
                            </b> or <b>
                                <code>N</code>
                            </b>
                            <br/>Default value: <b>
                                <code>N</code>
                            </b>
                        </div>
                    </Description>
                </Attribute>
                <Attribute DataType="Flag" Name="ExecuteQueries">
                    <Description>
						Indicates that query-based associations should be executed, and a list of matching items should be returned under the <code>Association</code> element.  If this flag is passed as <code>
                            <b>N</b>
                        </code>, query-based associations will not be returned.<br/>
						The default value is <code>
                            <b>N</b>
                        </code>.
					</Description>
                </Attribute>
                <Attribute EntityName="Sourcing_Rule_Header"
                    Name="FulfillmentType" NameInEntity="Fulfillment_Type">
                    <Description>
						The fulfillment type to be used when determining availability for items.  If not passed, the <code>CallingOrganizationCode</code>'s primary enterprise's default distribution rule will be used.
					</Description>
                </Attribute>
                <Attribute DataType="Flag" Name="GetAvailabilityFromCache">
                    <Description>
                        <div>
						This flag indicates whether the available quantity for the item must be computed or obtained from cache.
						<br/>Valid values: <b>
                                <code>Y</code>
                            </b> or <b>
                                <code>N</code>
                            </b>
                            <br/>Default value: <b>
                                <code>N</code>
                            </b>
                        </div>
                    </Description>
                </Attribute>
                <Attribute DataType="Flag" Name="IgnoreInvalidItems">
                    <Description>
                        <div>
							This flag indicates whether invalid items should be returned in the search results.
							<br/>Valid values: <b>
                                <code>Y</code>
                            </b> or <b>
                                <code>N</code>
                            </b>
                            <br/>Default value: <b>
                                <code>Y</code>
                            </b>
                        </div>
                    </Description>
                </Attribute>
                <Attribute DataType="Flag" Name="IsForOrdering">
                    <Description>
                        <div>
						This flag indicates whether the item search is for ordering purpose.   If passed as <code>Y</code>, the  customer entitlements will be applied.
						<br/>Valid values: <b>
                                <code>Y</code>
                            </b> or <b>
                                <code>N</code>
                            </b>
                            <br/>Default value: <b>
                                <code>Y</code>
                            </b>
                        </div>
                    </Description>
                </Attribute>
                <Attribute DataType="Flag" Name="IsItemSuperseded">
                    <Description>
                        <div>
							This flag indicates whether items that have been superseded by another item should be returned in the search results.
							<br/>Valid values: <b>
                                <code>Y</code>
                            </b> or <b>
                                <code>N</code>
                            </b>
                        </div>
                    </Description>
                </Attribute>
                <Attribute DataType="Flag" Name="IsSoldSeparately">
                    <Description>
						Indicates if the item can be sold separately. If N, then the item must be part of a bundle or kit. 
							<br/>Valid values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>
                        <br/>Default value: <b>
                            <code>Y</code>
                        </b>
                    </Description>
                </Attribute>
                <Attribute DataType="TimeStamp" Name="PricingDate">
                    <Description>
						The date to be used when computing prices.  If not passed, this date defaults to the current date.
					</Description>
                </Attribute>
                <Attribute DataType="Flag" Name="ShowFinalSupersededItemOnly">
                    <Description>When set to <code>Y</code>, only the final valid superseded item will be returned as the superseded item.
					<br/>Default: <code>N</code>
                        <br/>Valid values: <code>Y</code>, <code>N</code>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <ShipNodes>
            <yfc:includeInParent IncludeXMLChildNodes="Y"
                IncludeXMLFileName="YFS_getItemListForOrdering_input.xml" IncludeXMLPath="/Item/ShipNodes"/>
            <ShipNode Node="">
                <yfc:doc>
                    <Element EntityName="Ship_Node">
                        <Description>
						This element can be used to indicate a specific set of nodes that <code>getItemListForOrdering</code> should use when determining availability.
					</Description>
                    </Element>
                    <Attributes>
                        <Attribute EntityName="Ship_Node" Name="Node" NameInEntity="Ship_Node"/>
                    </Attributes>
                </yfc:doc>
            </ShipNode>
        </ShipNodes>
        <ShipToAddress AddressLine1="" AddressLine2="" AddressLine3=""
            AddressLine4="" AddressLine5="" AddressLine6=""
            AlternateEmailID="" Beeper="" City="" Company="" Country=""
            DayFaxNo="" DayPhone="" Department="" EMailID="" ErrorTxt=""
            EveningFaxNo="" EveningPhone="" FirstName="" HttpUrl=""
            IsCommercialAddress="" JobTitle="" LastName="" MiddleName=""
            MobilePhone="" OtherPhone="" PersonID="" PersonInfoKey=""
            PreferredShipAddress="" State="" Suffix="" TaxGeoCode=""
            Title="" UseCount="" VerificationStatus="" ZipCode="">
            <yfc:includeInParent IncludeXMLChildNodes="Y"
                IncludeXMLFileName="YFS_getItemListForOrdering_input.xml" IncludeXMLPath="/Item/ShipToAddress"/>
            <yfc:includeInParent IncludeXMLChildNodes="Y"
                IncludeXMLFileName="YFS_Person_Info_master.xml" IncludeXMLPath="/Address"/>
            <yfc:doc>
                <Element EntityName="Person_Info">
                    <Description>
					The address to be used when computing prices.  This address will be used to determine a pricing region.  Additionally, this address will be used when determining availability.  If this address is not passed, no region information will be available to determine pricing or availability.
				</Description>
                </Element>
            </yfc:doc>
        </ShipToAddress>
        <CustomerInformation BuyerUserId="" CustomerContactID=""
            CustomerID="" CustomerLevel="" CustomerType="" Region=""
            RelationshipType="" Vertical="">
            <yfc:includeInParent IncludeXMLChildNodes="Y"
                IncludeXMLFileName="YFS_getItemListForOrdering_input.xml" IncludeXMLPath="/Item/CustomerInformation"/>
            <yfc:doc>
                <Element EntityName="Entitle_Rule_Assignment">
                    <Description>This is used to provide information about the customer for which items are being retrieved when entitlements need to be applied. CustomerID is used to get 
				customer information from the system. If both CustomerID and CustomerType are not populated, CustomerType is
				defaulted to <code>03 - Anonymous</code>. All other attributes are used as an override to apply corresponding entitlements. </Description>
                </Element>
                <Attributes>
                    <Attribute DataType="ContactUserId" Name="BuyerUserId">
                        <Description>
                            <div>An identifier of the customer. This is a pass through field available to user exits.</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="ID-40" Name="CustomerContactID">
                        <Description>
                            <div>An identifier of the customer. This is a pass through field available to user exits.</div>
                        </Description>
                    </Attribute>
                    <Attribute Name="CustomerID" NameInEntity="Customer_Id"/>
                    <Attribute Name="CustomerLevel" NameInEntity="Customer_Level"/>
                    <Attribute Name="CustomerType">
                        <Description>
                            <div> The type of customer.
							<br/>Valid Values:
							<br/>01 - for B2B customer
							<br/>02 - for B2C customer
							<br/>03 - for anonymous customer 
							<br/>04 - for everyone
						</div>
                        </Description>
                    </Attribute>
                    <Attribute Name="Region">
                        <Description>
                            <div> Region to which entitlement rule is assigned. </div>
                        </Description>
                    </Attribute>
                    <Attribute Name="RelationshipType" NameInEntity="Relationship_Type"/>
                    <Attribute Name="Vertical" NameInEntity="Vertical"/>
                </Attributes>
            </yfc:doc>
        </CustomerInformation>
        <ItemAttributeGroupTypeList>
            <yfc:includeInParent IncludeXMLChildNodes="Y"
                IncludeXMLFileName="YCM_getItemList_input.xml" IncludeXMLPath="/Item/ItemAttributeGroupTypeList"/>
            <yfc:doc>
                <Element>
                    <Description>
                        <div>
				A list of ItemAttributeGroupType can be passed to be used as filter criteria to control the item attribute group types to return in the output XML.
				</div>
                    </Description>
                </Element>
            </yfc:doc>
            <ItemAttributeGroupType ClassificationPurposeCode=""
                ItemAttributeGroupType="" yfc:DTDOccurrence="ZeroOrMany"/>
        </ItemAttributeGroupTypeList>
        <AdditionalCatalogIndexInformationList>
            <AdditionalCatalogIndexInformation IndexFieldName="" yfc:DTDOccurrence="ZeroOrMany">
                <yfc:doc>
                    <Attributes>
                        <Attribute DataType="Text-1000" Name="IndexFieldName">
                            <Description>
                                <div>
									The name of the field within the Search Index as defined in the CatalogSearchConfigProperties or ExtnCatalogSearchConfigProperties XML whose value is desired to be displayed in the output.
								</div>
                            </Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </AdditionalCatalogIndexInformation>
        </AdditionalCatalogIndexInformationList>
    </Item>
    <Terms LastTerm="">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="Text-40" Name="LastTerm">
                    <Description>
                        <div>
							The last term value that will be used for spelling suggestions.  When the search is executed the Lucene search engine will provide suggestions for corrected spellings of the
							word(s) contained in the LastTerm attribute if it is found that the word(s) provided may be spelled incorrectly or there are similar words that are contained in the index.   The suggestions are obtained based on the contents of item descriptions, which are stored in the <code>Item.Description</code> field in the index.
						</div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <Term Condition="" IndexFieldName="" Value="" Weight="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Text-40" Name="Condition">
                        <Description>
                            <div>
								The condition to indicate whether an item in the index is returned based on the Value being found during the search. 
								<br/>Valid values: 
								<br/>
                                <b>
                                    <code>SHOULD</code>
                                </b> - indicates that the items should have the specified value.
								<br/>
                                <b>
                                    <code>MUST</code>
                                </b> - indicates that the items must have the specified value.
								<br/>
                                <b>
                                    <code>MUST_NOT</code>
                                </b> - indicates that the items must not have the specified value.  Due to limitation in Lucene, the API may not return the correct result if only <b>
                                    <code>MUST_NOT</code>
                                </b> term(s) are passed without other terms.

								<br/>
                                <br/>
                                <code>SHOULD</code> - returns documents that match the specified term.  When combined with another term having a condition of <code>SHOULD</code> a superset is returned where documents will have one or both of the terms.
								<br/>
                                <code>MUST</code> - limits results only to documents that have the term specified.  When combined with another <code>MUST</code> term, only the intersection of documents with both terms will be returned.  When combined with a term with a condition of <code>SHOULD</code>, only items with the <code>MUST</code> term will be returned, with items matching the <code>SHOULD</code> term being prioritized in the result set.
								<br/>
                                <code>MUST_NOT</code> - prevents documents that match the term from being returned.  For example, if Term A <code>MUST</code> be included in the results, and Term B <code>MUST_NOT</code> be included.  All items with Term A will be returned with the exception of those also having Term B.
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-1000" Name="IndexFieldName">
                        <Description>
                            <div>
								The name of the field within the Search Index.  This typically will be specified for Advanced Search Only.  Standard search will apply the <code>Value</code> to all searchable fields as defined in the CatalogSearchConfigProperties XML.
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-40" Name="Value">
                        <Description>
                            <div>
								The value of the text input by the user as search criteria.
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Quantity" Name="Weight">
                        <Description>
                            <div>
								The weight given to the Term value.  
								Default value: <b>
                                    <code>1.0</code>
                                </b>
                            </div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </Term>
    </Terms>
    <Filters>
        <Filter From="" IndexFieldName="" To="" Type="Required" Value="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element>
                    <Description>
                        <div>
						The filter criteria used to narrow down the results.
						</div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute DataType="Text-40" Name="From">
                        <Description>
                            <div>
								The from value of the price range filter.  This attribute is only applicable for the filter of <code>PriceRange</code> type.
								<Validation>
                                    <Condition>To and/or From value must be passed for range filters.</Condition>
                                    <Error
                                    Description="Missing filter To / From values." ErrorCode="YCM85_018"/>
                                </Validation>
                                <Validation>
                                    <Condition>From value must be less than the To value for range filters</Condition>
                                    <Error
                                    Description="To value cannot be less than From value." ErrorCode="YCM85_031"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-1000" Name="IndexFieldName">
                        <Description>
                            <div>
								The name of the field within the Search Index that is being used for filtering.  Only documents with a matching <code>Value</code> in this field will be returned.  IndexFieldName is required
								for Filters with a <code>Type</code> of <code>Normal</code>.
								<Validation>
                                    <Condition>Normal filters must have an IndexFieldName value </Condition>
                                    <Error
                                    Description="IndexFieldName is required." ErrorCode="YCM85_020"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-40" Name="To">
                        <Description>
                            <div>
								The to value of the price range filter.  This attribute is only applicable for the filter of <code>PriceRange</code> type.
								<Validation>
                                    <Condition>To and/or From value must be passed for range filters.</Condition>
                                    <Error
                                    Description="Missing filter To / From values." ErrorCode="YCM85_018"/>
                                </Validation>
                                <Validation>
                                    <Condition>From value must be less than the To value for range filters</Condition>
                                    <Error
                                    Description="To value cannot be less than From value." ErrorCode="YCM85_031"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="EnumSearchIndexFilterType" Name="Type">
                        <Description>
                            <div>
								The type of the filter.
								<br/>Valid values: 
								<br/>
                                <b>
                                    <code>Normal</code>
                                </b> - this indicates the normal filter based on item's attributes.
								<br/>
                                <b>
                                    <code>PriceRange</code>
                                </b> - this indicates the price range filter based on customer's assigned prices. 
								<br/>Default value: <b>
                                    <code>Normal</code>
                                </b>
                                <Validation>
                                    <Condition>
                                    <code>Type</code> must match a valid Filter Type value.</Condition>
                                    <Error
                                    Description="Invalid filter type" ErrorCode="YCM85_017"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-40" Name="Value">
                        <Description>
                            <div>
								The value of the text input by the user as search criteria.  This attribute is only applicable for the filter of <code>Normal</code> type.
								<Validation>
                                    <Condition>Filter Value must be passed for filters of Type Normal.</Condition>
                                    <Error
                                    Description="Missing filter Value." ErrorCode="YCM85_019"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </Filter>
    </Filters>
    <CategoryList>
        <yfc:doc>
            <Element>
                <Description>
                    <div>
					The list of categories to search for items.
					</div>
                </Description>
            </Element>
        </yfc:doc>
        <Category Path="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Attributes>
                    <Attribute EntityName="Category" Name="Path" NameInEntity="Category_Path">
                        <Description>
                            <div>
								The category path to search for items.
							</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </Category>
    </CategoryList>
    <ShowAllAssignedValues>
        <yfc:doc>
            <Element>
                <Description>List of ItemAttributes to show all assigned values for.</Description>
            </Element>
        </yfc:doc>
        <Attributes>
            <Attribute DataType="" Name="">
                <yfc:doc>
                    <Attributes>
                        <Attribute DataType="String" Name="Name"/>
                    </Attributes>
                </yfc:doc>
                <Description>
                    <div/>
                </Description>
            </Attribute>
        </Attributes>
        <ItemAttribute AttributeDomainID="" AttributeGroupID=""
            IndexFieldName="" ItemAttributeKey="" ItemAttributeName="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Text-1000" Name="IndexFieldName">
                        <Description>
                            <div>The field name that is stored in the index.</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </ItemAttribute>
    </ShowAllAssignedValues>
</CatalogSearch>
