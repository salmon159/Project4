<!-- manageSBAWorkspace Input XML -->
<SBAWorkspace Action="" EnterpriseCode="" IsDefault="" MonitorPending=""
    SBAWorkspaceKey="" WorkspaceName="" xmlns="http://www.sterlingcommerce.com/documentation/SBA/manageSBAWorkspace/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
			  Master table for workspaces
			<Validation>
                        <Condition>Valid Action is provided.
				</Condition>
                        <Error Description="Invalid value for Action." ErrorCode="SBA0010"/>
                    </Validation>
                    <Validation>
                        <Condition>SBA is enabled.
				</Condition>
                        <Error
                            Description="SBA must be enabled for the instance." ErrorCode="SBA0011"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid WorkspaceName is provided when creating a SBAWorkspace.
				</Condition>
                        <Error
                            Description="Workspace name cannot be empty." ErrorCode="SBA0012"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid WorkspaceName is provided when creating a SBAWorkspace.
				</Condition>
                        <Error
                            Description="Workspace name cannot be longer than 40 characters." ErrorCode="SBA0013"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid EnterpriseCode is provided when creating a SBAWorkspace.
				</Condition>
                        <Error
                            Description="EnterpriseCode cannot be empty." ErrorCode="SBA0014"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid EnterpriseCode is provided when creating a SBAWorkspace.
				</Condition>
                        <Error
                            Description="Invalid Organization for EnterpriseCode." ErrorCode="SBA0015"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid EnterpriseCode is provided when creating a SBAWorkspace.
				</Condition>
                        <Error
                            Description="Organization is not an enterprise." ErrorCode="SBA0016"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid SBAWorkspaceKey is provided when creating a SBAWorkspace.
				</Condition>
                        <Error
                            Description="Workspace key cannot be longer than than 24 characters." ErrorCode="SBA0017"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid SBAWorkspaceKey is provided when creating a SBAWorkspace.
				</Condition>
                        <Error Description="Workspace already exists." ErrorCode="SBA0018"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid SBAWorkspaceKey is provided to modify/delete a SBAWorkspace.
				</Condition>
                        <Error
                            Description="Workspace key cannot be empty." ErrorCode="SBA0019"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid SBAWorkspaceKey is provided to modify/delete a SBAWorkspace.
				</Condition>
                        <Error Description="Workspace does not exist." ErrorCode="SBA0020"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid SBAWorkspaceKey is provided to modify a SBAWorkspace.
				</Condition>
                        <Error
                            Description="Cannot update workspace of another user." ErrorCode="SBA0021"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid SBAWorkspaceKey is provided to delete a SBAWorkspace.
				</Condition>
                        <Error
                            Description="Cannot delete workspace of another user." ErrorCode="SBA0022"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid value is provided for IsDefault.
				</Condition>
                        <Error Description="Invalid IsDefault value." ErrorCode="SBA0023"/>
                    </Validation>
                    <Validation>
                        <Condition>Valid value is provided for MonitorPending.
				</Condition>
                        <Error
                            Description="Invalid MonitorPending value." ErrorCode="SBA0024"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Action" Name="Action">
                <Description>
                    <div>Action to take
					<br/>Valid Values: 
					<br/>
                        <b>
                            <code>Manage</code>
                        </b> - Creates a new record if it does not exist or modifies an existing record if it does.
					<br/>
                        <b>
                            <code>Create</code>
                        </b> - Creates a new record. 
					<br/>
                        <b>
                            <code>Modify</code>
                        </b> - Changes the value of an existing record.
					<br/>
                        <b>
                            <code>Delete</code>
                        </b> - Deletes an existing record.
					<br/>The default behavior is <b>
                            <code>Manage</code>
                        </b>.
					</div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="IsDefault">
                <Description>If this Attribute is Y, the workspace will be set as the default workspace for the user.</Description>
            </Attribute>
            <Attribute DataType="Flag" Name="MonitorPending">
                <Description>If this Attribute is Y, orders that are not assigned to a ship node will be monitored in the workspace.</Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <SBAWorkspaceNodeList>
        <yfc:doc>
            <Element>
                <Description>
                    <div>
			      Nodes associated with a workspace
			    <Validation>
                            <Condition>Ship nodes are provided when creating a SBAWorkspace.
	    			</Condition>
                            <Error
                                Description="At least one ship node is required when creating a workspace." ErrorCode="SBA0026"/>
                        </Validation>
                        <Validation>
                            <Condition>Ship nodes are provided when modifying a SBAWorkspace.
			    	</Condition>
                            <Error
                                Description="At least one ship node must be added." ErrorCode="SBA0027"/>
                        </Validation>
                    </div>
                </Description>
            </Element>
        </yfc:doc>
        <SBAWorkspaceNode ShipNode="">
            <yfc:doc>
                <Element>
                    <Description>
                        <div>
			      Node associated with a workspace
			    <Validation>
                                <Condition>Valid ShipNode is provided when associating a node to a SBAWorkspace.
	    			</Condition>
                                <Error Description="Invalid ship node." ErrorCode="SBA0025"/>
                            </Validation>
                            <Validation>
                                <Condition>Valid ShipNode is provided when creating a SBAWorkspace.
				    </Condition>
                                <Error
                                    Description="ShipNode cannot be empty." ErrorCode="SBA0028"/>
                            </Validation>
                        </div>
                    </Description>
                </Element>
            </yfc:doc>
        </SBAWorkspaceNode>
    </SBAWorkspaceNodeList>
</SBAWorkspace>
