<!-- Either LoadNo or LoadKey or TaskQKey is mandatory -->
<!-- BaseDropStatus is optional. When not specified, base drop status is read from the transaction configuration -->
<Load AcceptOutOfSequenceUpdates="" BaseDropStatus="" EnterpriseCode=""
    LoadKey="" LoadNo="" TaskQKey="" TransactionId="Conditional" xmlns="http://www.sterlingcommerce.com/documentation/YDM/changeLoadStatus/input">
    <yfc:includeInParent IncludeXMLFileName="YFS_Load_keys.xml" IncludeXMLPath="/Load"/>
    <yfc:doc>
        <Element EntityName="Load"/>
        <Attributes>
            <Attribute DataType="Flag" Name="AcceptOutOfSequenceUpdates">
                <Description>
                    <div>
			Indicates whether status updates can be made out of sequence from the order defined in the pipeline. 
			<br/>Default: N
			<br/>Valid Values: <code>Y</code> or <code>N</code>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Pipeline_Definition"
                Name="BaseDropStatus" NameInEntity="Drop_Status">
                <Description>
                    <div>
			 Value passed is used to determine the actual drop status that the transaction assigns to the load. If <code>BaseStatus</code> is not passed, then the transaction must have only one base status defined as part of the setup.
			 </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Task_Queue" Name="TaskQKey" NameInEntity="Task_Q_Key">
                <Description>
                    <div>
				Identifies a task queue. Used to read the load that needs a status change.
				If <code>TaskQKey</code> is not passed, <code>LoadNo</code> or <code>LoadKey</code> must be passed
				</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Transaction" Name="TransactionId" NameInEntity="Tranid">
                <Description>
                    <div>Identifies a transaction. If <code>TransactionID</code> is passed, the transaction identified must be derived from
			 the abstract transaction <code>CHANGE_LOAD_STATUS</code>. If <code>TaskQKey</code> is passed,  any <code>TransactionID</code> passed is ignored.
			 </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <LoadStatusAudit City="" Country="" Latitude="" LoadKey=""
        LoadStatusAuditKey="" Location="" Longitude="" ReasonCode=""
        ReasonText="" State="" StatusDate="" TransportStatusCode=""
        TransportStatusDate="" TransportationStatusText="" ZipCode="">
        <yfc:includeInParent
            IncludeXMLFileName="YFS_Load_Status_Audit_tran.xml"
            IncludeXMLPath="/LoadStatusAudit" RemoveDBHouseKeeping="Y"/>
        <yfc:doc>
            <Element EntityName="Load_Status_Audit"/>
            <Attributes>
                <Attribute EntityName="Load" Name="StatusDate" NameInEntity="StatusDate">
                    <Description>Date and time of the status change.
			</Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
    </LoadStatusAudit>
</Load>
