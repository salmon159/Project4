<!-- Either PriseSetKey OR OrganizationCode, PriceSetName mandatory attributes  -->
<PriceSet ActiveFlag="" Description="" OrganizationCode=""
    PriceSetKey="" PriceSetName="" ValidTillDate="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/changePriceSet/input">
    <yfc:doc>
        <Element EntityName="Price_Set">
            <Description>
                <div>
			Identify price set to be deleted.  <code>PriceSetKey</code> or a combination of <code>OrganizationCode</code> and <code>PriceSetName </code> attributes can be used to identify an order.
			<Validation>
                        <Condition>Root node is not PriceSet 
				</Condition>
                        <Error
                            Description="Input document is empty or contains invalid data." ErrorCode="YFS10363"/>
                    </Validation>
                    <Validation>
                        <Condition>
                            <code>PriceSetKey</code> or a combination of <code>OrganizationCode</code> and <code>PriceSetName </code> attributes is not passed. 
				</Condition>
                        <Error
                            Description="Mandatory Parameters for the Operation are missing." ErrorCode="YFS10364"/>
                    </Validation>
                    <Validation>
                        <Condition>
                            <code>PriceSetKey</code> or a combination of <code>OrganizationCode</code> and <code>PriceSetName </code> attributes given is invalid. 
				</Condition>
                        <Error Description="Invalid price set." ErrorCode="OMP10001"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="String" EntityName="Price_Set"
                Name="OrganizationCode" NameInEntity="Organization_Code">
                <Description>
                    <div>
					Organization that maintains the price set.
					<Validation>
                            <Condition>
                                <code>OrganizationCode</code> is modified. 
						</Condition>
                            <Error
                                Description="Modify API tried to modify fixed parameters." ErrorCode="YFS10525"/>
                        </Validation>
                        <Validation>
                            <Condition>Invalid <code>OrganizationCode</code> is passed. 
						</Condition>
                            <Error
                                Description="YFS:Invalid organization code." ErrorCode="YCM0019"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Price_Set" Name="PriceSetName" NameInEntity="Price_Set_Name">
                <Description>
                    <div>
					Name of a price set.
					<Validation>
                            <Condition>
                                <code>PriceSetName</code> is modified. 
						</Condition>
                            <Error
                                Description="Modify API tried to modify fixed parameters." ErrorCode="YFS10525"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <ItemPriceSetList>
        <!-- if passed ItemID is mandatory -->
        <!-- If Operation is not passed then the record may be considered as a candidate of inserting -->
        <ItemPriceSet ItemID="Required" ListPrice="" Operation=""
            ProductClass="" RetailPrice="" Uom="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element EntityName="Item_Price_Set">
                    <Description>
                        <div>
				Price sets for item.
				<Validation>
                                <Condition>If <code>ItemGroupCode</code> of the price set is not the same as <code>ItemGroupCode</code> of the item.
					</Condition>
                                <Error
                                    Description="Invalid item for price set." ErrorCode="OMP10083"/>
                            </Validation>
                            <Validation>
                                <Condition>
                                    <code>ItemPriceSet</code> already exists in the system when creating a new <code>ItemPriceSet</code>.
					</Condition>
                                <Error
                                    Description="Record already exists in the database." ErrorCode="YFC0001"/>
                            </Validation>
                            <Validation>
                                <Condition>
                                    <code>ItemPriceSet</code> does not exist in the system when deleting or modifying an existing <code>ItemPriceSet</code>. 
					</Condition>
                                <Error
                                    Description="Record does not exist in the database." ErrorCode="YFC0002"/>
                            </Validation>
                        </div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute EntityName="Item_Price_Set" Name="ItemID" NameInEntity="Item_Id">
                        <Description>
                            <div>
						An Item for which price set is maintained.
						<Validation>
                                    <Condition>
                                    <code>ItemID</code> is not passed. 
							</Condition>
                                    <Error
                                    Description="Mandatory Parameters for the Operation are missing." ErrorCode="YFS10364"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-7" Name="Operation">
                        <Description>
                            <div>
						Operation to be performed (Create/Modify/Delete).   
					</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
            <ItemPriceSetDtlList>
                <ItemPriceSetDtl BreakQtyHigh="Required"
                    BreakQtyLow="Required" Operation="" RegionKey=""
                    UnitPrice="" yfc:DTDOccurrence="ZeroOrMany">
                    <yfc:doc>
                        <Element EntityName="Item_Price_Set_Dtl">
                            <Description>
                                <div>
							If item requires step pricing, this table stores the quantity breaks and price associated
							<Validation>
                                    <Condition>
                                    <code>ItemPriceSetDtl</code> already exists in the system when creating a new <code>ItemPriceSetDtl</code>.
								</Condition>
                                    <Error
                                    Description="Record already exists in the database." ErrorCode="YFC0001"/>
                                    </Validation>
                                    <Validation>
                                    <Condition>
                                    <code>ItemPriceSetDtl</code> does not exist in the system when deleting or modifying an existing <code>ItemPriceSetDtl</code>. 
								</Condition>
                                    <Error
                                    Description="Record does not exist in the database." ErrorCode="YFC0002"/>
                                    </Validation>
                                </div>
                            </Description>
                        </Element>
                        <Attributes>
                            <Attribute EntityName="Item_Price_Set_Dtl"
                                Name="BreakQtyLow" NameInEntity="Break_Qty_Low">
                                <Description>
                                    <div>
									Break quantity low.
									<Validation>
                                    <Condition>
                                    <code>BreakQtyLow</code> is not passed. 
										</Condition>
                                    <Error
                                    Description="Mandatory Parameters for the Operation are missing." ErrorCode="YFS10364"/>
                                    </Validation>
                                    </div>
                                </Description>
                            </Attribute>
                            <Attribute DataType="Text-7" Name="Operation">
                                <Description>
                                    <div>
									Operation to be performed (Create/Modify/Delete).   
								</div>
                                </Description>
                            </Attribute>
                        </Attributes>
                    </yfc:doc>
                </ItemPriceSetDtl>
            </ItemPriceSetDtlList>
        </ItemPriceSet>
    </ItemPriceSetList>
</PriceSet>
