<MasterPromotionInput xmlns="http://www.sterlingcommerce.com/documentation/MasterPromotionInput">
    <Promotions Reset="N|Y">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="Flag" Name="Reset">
                    <Description>
                        <div>Determines whether all Promotions, except those listed below, 
					should be removed.</div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <Promotion Action="" DenialReason="" ExclusivityId=""
            ExclusivityType="" IsExternal="" OverrideAdjustmentValue=""
            OverrideMaxAdjustment="" Priority="" PromotionApplied=""
            PromotionCategory="" PromotionGroup="|COUPON|MANUAL"
            PromotionId="" PromotionType="" ValidateReferences=""
            yfc:DTDOccurrence="ZeroOrMany" yfc:GroupName="Order:Promotion">
            <yfc:includeInParent IncludeXMLChildNodes="Y"
                IncludeXMLFileName="MasterPromotionInput.xml" IncludeXMLPath="MasterPromotionInput/PromotionLines/Promotion"/>
            <yfc:doc>
                <Element EntityName="Promotion">
                    <Description>
                        <div>
						Promotions that are associated to an order or any of its lines. PromotionId must be passed to identify the promotion.
						</div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute DataType="Action" Name="Action">
                        <Description>
                            <div>
						Action to perform on this promotion.
						<br/>Default: <code>Null</code> - if not passed, promotion will be added if it doesn't exist or modified if it does exist.
						<br/>Valid Values: 
							<br/>
                                <b>
                                    <code>CREATE</code>
                                </b> - Add the specified promotion to the order.
							<br/>
                                <b>
                                    <code>REMOVE</code>
                                </b> - Removes the specified promotion from the order.
						<Validation>
                                    <Condition>If an award record is associated with this promotion, it may not be removed.</Condition>
                                    <Error
                                    Description="You are attempting to delete a Promotion associated with an award on the order." ErrorCode="OMP77_10004"/>
                                </Validation>
                                <Validation>
                                    <Condition>If a promotion already exists, can't add the same promotion twice.</Condition>
                                    <Error
                                    Description="Record already exists in the database." ErrorCode="YFC0001"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="OverrideMaxAdjustment">
                        <Description>
                            <div> For Coupon promotions, the overridden maximum adjustment value for the coupon pricing rule. 
						</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Flag" Name="ValidateReferences">
                        <Description>
                            <div>For Coupon promotions, if <code>'Y"</code> the references will be validated and only valid references will be used</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
            <PromotionReferences>
                <PromotionReference IsUnique="" Operation=""
                    ReferenceId="" ReferenceSequence="">
                    <yfc:doc>
                        <Element>
                            <Description>
                                <div>Promotion references associated to the promotion. In case of internal promotions,
								the promotion references will be automatically associated to the generated awards
								proportional to the awarded quantity.</div>
                            </Description>
                        </Element>
                        <Attributes>
                            <Attribute DataType="String" Name="Operation">
                                <Description>
                                    <div>
								Operation to perform
								<br/>Valid Values:
								<br/>
                                    <b>
                                    <code>Delete</code>
                                    </b> - Removes the PromotionReference. If <code>Operation</code> is not passed the PromotionReference will be created if it does not exist already.
								 
			                            </div>
                                </Description>
                            </Attribute>
                        </Attributes>
                    </yfc:doc>
                </PromotionReference>
            </PromotionReferences>
        </Promotion>
    </Promotions>
    <PromotionLines Reset="N|Y">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="Flag" Name="Reset">
                    <Description>
                        <div>Determines whether all Promotions, except those listed below, 
					should be removed.</div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <Promotion Action="" DenialReason="" ExclusivityId=""
            ExclusivityType="" IsExternal="" OverrideAdjustmentValue=""
            OverrideMaxAdjustment="" Priority="" PromotionApplied=""
            PromotionCategory="" PromotionId="" PromotionType=""
            ValidateReferences="" yfc:DTDOccurrence="ZeroOrMany" yfc:GroupName="OrderLine:Promotion">
            <yfc:doc>
                <Element EntityName="Promotion">
                    <Description>
                        <div>
						Promotions that are associated to an order or any of its lines. PromotionId must be passed to identify the promotion.
						</div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute DataType="Action" Name="Action">
                        <Description>
                            <div>
						Action to perform on this promotion.
						<br/>Default: <code>Null</code> - if not passed, promotion will be added if it doesn't exist or modified if it does exist.
						<br/>Valid Values: 
							<br/>
                                <b>
                                    <code>CREATE</code>
                                </b> - Add the specified promotion to the order.
							<br/>
                                <b>
                                    <code>REMOVE</code>
                                </b> - Removes the specified promotion from the order.
						<Validation>
                                    <Condition>If an award record is associated with this promotion, it may not be removed.</Condition>
                                    <Error
                                    Description="You are attempting to delete a Promotion associated with an award on the order." ErrorCode="OMP77_10004"/>
                                </Validation>
                                <Validation>
                                    <Condition>If a promotion already exists, can't add the same promotion twice.</Condition>
                                    <Error
                                    Description="Record already exists in the database." ErrorCode="YFC0001"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="OverrideMaxAdjustment">
                        <Description>
                            <div> For Coupon promotions, the overridden maximum adjustment value for the coupon pricing rule. 
						</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Flag" Name="ValidateReferences">
                        <Description>
                            <div>For Coupon promotions, if <code>'Y"</code> the references will be validated and only valid references will be used</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </Promotion>
    </PromotionLines>
</MasterPromotionInput>
