<PaymentCardType LongDescription="" Operation="" OrganizationCode=""
    PaymentCardType="" PaymentCardTypeKey="" PaymentType=""
    ShortDescription="" xmlns="http://www.sterlingcommerce.com/documentation/YCP/managePaymentCardType/input">
    <yfc:includeInParent IncludeXMLChildNodes="Y"
        IncludeXMLFileName="YCP_getPaymentCardTypeList_input.xml" IncludeXMLPath="/PaymentCardType"/>
    <yfc:doc>
        <Element>
            <Description>
                <div>This element contains the identifying information for a Payment Card Type.
                    <Validation>
                        <Condition>Either the PaymentCardTypeKey or each of PaymentCardType, PaymentType and OrganizationCode should be passed.</Condition>
                        <Error
                            Description="Mandatory Parameters for the Operation are missing." ErrorCode="YFS10364"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="YSCOperation" Name="Operation">
                <Description>
                    <div>The operation to perform on this record. Valid values are listed in the table below.</div>
                </Description>
            </Attribute>
            <Attribute Name="PaymentCardType">
                <Description>
                    <div>The unique identifier for the payment card type.
						
                        
                        <!--Validation>
							<Condition>No Common Code exist for the passed PaymentCardType</Condition>
							<Error Description="A PaymentCardType was passed in the input, but no CommonCode value for that Payment Card Type exist." ErrorCode="OMP85HF799_01"/>
						</Validation-->
                        <Validation>
                            <Condition>No Payment Type Configuration exist for the passed PaymentCardType and PaymentType combination.</Condition>
                            <Error
                                Description="A PaymentCardType and PaymentType combination was passed in the input, but no Payment Type Configuration for that exist." ErrorCode="OMP85HF799_02"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute Name="PaymentType">
                <Description>
                    <div>The unique identifier for the payment type of this payment card type. Currently, the system only supports payment types of payment type group CREDIT_CARD, DEBIT_CARD, STORED_VALUE_CARD and OTHER.
						<Validation>
                            <Condition>No Payment Type configured for the passed PaymentType</Condition>
                            <Error
                                Description="A PaymentType was passed in the input, but no Payment Type is configured for that." ErrorCode="OMP85HF799_03"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <PaymentConfiguration
        AllowAuthorizationsToExceedSettlementRequest=""
        AuthorizationExpirationHours="" AuthorizationReversalHours=""
        AuthorizationReversalStrategy="" CashBackLimit=""
        ChargeConsolAllowed="" ChargeUpToAvailable=""
        MinWaitTimeForConsol="" NoProcessingRequired=""
        PartialReversalSupported="" UseSameAuthorizationMutlipleTimes=""
        Voidable="" ZeroAmountAuthorizationSupported="">
        <yfc:doc>
            <Element>
                <Description>This element contains the configuration of payment rules that impact how payment processing will use authorizations and charges.</Description>
            </Element>
        </yfc:doc>
    </PaymentConfiguration>
</PaymentCardType>
