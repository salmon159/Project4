<Shipment AddReasonCodeAsNoteAudit="" SellerOrganizationCode=""
    ShipNode="" ShipmentKey="" ShipmentNo="" TransactionId="Required" xmlns="http://www.sterlingcommerce.com/documentation/YCD/recordCustomerPick/input">
    <yfc:doc>
        <Element EntityName="Shipment">
            <Description>
                <div> The shipment to record customer pick. Pass  <code>ShipmentKey</code>
                    <i>or</i> pass <code>ShipmentNo</code>, <code>ShipNode</code> and <code>SellerOrganizationCode</code> to identify the shipment.
				</div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Flag" Name="AddReasonCodeAsNoteAudit">
                <Description>
                    <div>
							Valid values Y/N. <br/>
							If Y, the API will persist the shortage reason code in order line notes <code>AuditTransactionId</code> column<br/>
							Default Value is N.<br/>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Transaction" Name="TransactionId" NameInEntity="Tranid">
                <Description>
                    <div>Identifies a transaction. The transaction identified must be derived from
					 the transaction <code>CONFIRM_SHIPMENT</code>.
					 <Validation>
                            <Condition>
									Valid <code>TransactionId</code> must be passed.
								</Condition>
                            <Error Description="Invalid Transaction Id" ErrorCode="YCD00016"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <ShipmentLines yfc:DTDOccurrence="REQUIRED">
        <ShipmentLine PickedQty="" Quantity="Required"
            ReasonCode="Required" ShipmentLineKey="Required"
            ShipmentLineNo="Required" ShipmentSubLineNo="Required"
            ShortageQuantity="" ShortageReason="" yfc:DTDOccurrence="OneOrMany">
            <yfc:doc>
                <Element>
                    <Description>
                        <div> The shipment line to record customer pick. Pass  <code>ShipmentLineKey</code>
                            <i>or</i> pass <code>ShipmentLineNo</code> and <code>ShipmentSubLineNo</code> to identify the shipment line.
				</div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute DataType="String" Name="PickedQty" NameInEntity="PickedQty">
                        <Description>
                            <div>
		                		This attribute is to specify the quantity of an item picked up by the customer.
		                		<Validation>
                                    <Condition>
										Picked Quantity must be passed indicating the quantity picked in each line.
									</Condition>
                                    <Error
                                    Description="Invalid picked quantity" ErrorCode="YCD00020"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute Name="Quantity" NameInEntity="Quantity">
                        <Description>
                            <div>
		                		This attribute is to specify the quantity which was originally ready for customer pick in each line.
		                		<Validation>
                                    <Condition>
										Quantity must be passed indicating the quantity which was originally ready for customer pick in each line.
									</Condition>
                                    <Error
                                    Description="Invalid shortage resolution" ErrorCode="YCD00017"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="String" Name="ReasonCode" NameInEntity="ReasonCode">
                        <Description>
                            <div>
		                		This attribute is to specify the cancellation reason if the shortage resolution is <code>cancel</code> for any shipment line.
		                		<Validation>
                                    <Condition>
										Reason Code must be passed whenever the shortage reason is <code>Cancel</code>.
									</Condition>
                                    <Error
                                    Description="Reason code should be passed when there is cancellation." ErrorCode="YFS10364"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="String" Name="ShortageQuantity" NameInEntity="ShortageQuantity">
                        <Description>
                            <div>
		                		This attribute is to specify the shortage quantity of an item in each line.
		                		<Validation>
                                    <Condition>
										If shortage quantity is not passed in the shipment line, it is calculated using the <code>Quantity</code> and <code>PickQty</code> attributes.
									</Condition>
                                    <Error
                                    Description="Invalid shortage resolution" ErrorCode="YCD00017"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="String" Name="ShortageReason" NameInEntity="ShortageReason">
                        <Description>
                            <div>
		                		This attribute is to specify the shortage resolution if there is any shortage in the items by the customer.
		                		<Validation>
                                    <Condition>
										Shortage Reason must be passed whenever there is a shortage in line. It can be one of <code>AllInventoryShortage</code>, <code>PickLater</code>,<code>Cancel</code> or any other common code whose CodeType is YCD_SHORT_RESOLU.
									</Condition>
                                    <Error
                                    Description="Invalid shortage resolution" ErrorCode="YCD00017"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </ShipmentLine>
    </ShipmentLines>
    <Notes CallChangeOrder="">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="String" Name="CallChangeOrder"/>
            </Attributes>
        </yfc:doc>
        <Note ContactReference="" ContactTime="" ContactType=""
            ContactUser="" NoteText="" Priority="" ReasonCode="">
            <yfc:doc>
                <Element EntityName="Notes"/>
            </yfc:doc>
        </Note>
    </Notes>
</Shipment>
