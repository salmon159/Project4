<Devices xmlns="http://www.sterlingcommerce.com/documentation/YCP/manageDevice/input">
    <Device Action="Required" DeviceId="" DeviceKey="" DeviceSubType=""
        DeviceType="" OrganizationCode="">
        <yfc:doc>
            <Element EntityName="Device">
                <Description>All instances of devices in the warehouse such as RF scanners, printers, weighing scale etc. of the warehouse are defined in this table. One of more devices can be associated with equipment.
				<div>
                        <Validation>
                            <Condition>If action is other than <b>
                                    <code>CREATE</code>
                                </b>, then the <code>DeviceKey</code> attribute OR the <code>DeviceID</code>,<code>DeviceSubType</code>,<code>DeviceType</code> and <code>OrganizationCode</code> attributes must be passed and must be valid. 
						</Condition>
                            <Error Description="YCP:No Record Found." ErrorCode="YCP0045"/>
                        </Validation>
                    </div>
                </Description>
            </Element>
            <Attributes>
                <Attribute DataType="String" Name="Action">
                    <Description>
                        <div>
						Action to perform on this <code>Device</code>.
						<br/>
                            <b>
                                <code>DELETE</code>
                            </b> - Deletes the <code>Device</code>.
						<br/>
                            <b>
                                <code>CREATE</code>
                            </b> - Creates a new device.  If action is CREATE, DeviceKey passed to this api will be ignored.
						<br/>
                            <b>
                                <code>MODIFY</code>
                            </b> - Replaces the existing additional device attributes with the attributes passed.
						</div>
                    </Description>
                </Attribute>
                <Attribute DataType="Key" Name="DeviceKey">
                    <Description>Primay Key for the YFS_DEVICE table.Can be passed in input for actions <b>
                            <code>MODIFY</code>
                        </b> and <b>
                            <code>DELETE</code>
                        </b> instead of <code>DeviceID</code>,<code>DeviceSubType</code>,<code>DeviceType</code> and <code>OrganizationCode</code>.
					<div>
                            <Validation>
                                <Condition>If action is other than <b>
                                    <code>CREATE</code>
                                    </b>, then the <code>DeviceKey</code> attribute OR the <code>DeviceID</code>,<code>DeviceSubType</code>,<code>DeviceType</code> and <code>OrganizationCode</code> attributes must be passed and must be valid.
						</Condition>
                                <Error
                                    Description="YCP:No Record Found." ErrorCode="YCP0045"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <Attributes>
            <Attribute Name="" Value="">
                <yfc:doc>
                    <Element>
                        <Description>Used to specify device attributes as a name value pair.
					</Description>
                    </Element>
                    <Attributes>
                        <Attribute DataType="String" Name="Name">
                            <Description>Name of the device specific parameter; example <b>
                                    <code>DropDirectory</code>
                                </b> for a printer deviceType.
						</Description>
                        </Attribute>
                        <Attribute DataType="String" Name="Value">
                            <Description>Value of the device specific parameter; example <b>
                                    <code>E:/</code>
                                </b> for DropDirectory in a printer deviceType.
						</Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </Attribute>
        </Attributes>
    </Device>
</Devices>
