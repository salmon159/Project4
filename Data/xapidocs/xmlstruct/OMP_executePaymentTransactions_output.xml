<PaymentMethods DocumentType="" EnterpriseCode="Required" EntryType=""
    OrderHeaderKey="" OrderNo="" SellerOrganizationCode="" xmlns="http://www.sterlingcommerce.com/documentation/OMP/executePaymentTransactions/output">
    <yfc:includeInParent IncludeXMLChildNodes="N"
        IncludeXMLFileName="OMP_executePaymentTransactions_input.xml" IncludeXMLPath="/PaymentMethods"/>
    <yfc:doc>
        <Attributes>
            <Attribute EntityName="Order_Header" Name="DocumentType" NameInEntity="Document_Type">
                <Description>
                    <div> The unique identifier for the Document Type that all payment methods associates to. 
			<Validation>
                            <Condition> Invalid value passed.</Condition>
                            <Error
                                Description="YFS:Missing Mandatory Parameters." ErrorCode="YFS10364"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="String" EntityName="Order_Header"
                Name="EnterpriseCode" NameInEntity="Enterprise_Code">
                <Description>
                    <div> Identifies the Enterprise governing this batch of payment transactions. 
			<Validation>
                            <Condition> Invalid value passed.</Condition>
                            <Error
                                Description="YFS:Missing Mandatory Parameters." ErrorCode="YFS10364"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Text-100" Name="EntryType">
                <Description>
                    <div>The entry type used for payment.</div>
                </Description>
            </Attribute>
            <Attribute DataType="String" Name="OrderHeaderKey"/>
            <Attribute DataType="String" Name="OrderNo"/>
            <Attribute EntityName="Order_Header"
                Name="SellerOrganizationCode" NameInEntity="Seller_Organization_Code">
                <Description>
                    <div> Identifies the seller organization governing this batch of payment transactions. <br/>If the <code>USE_ENTERPRISE_CODE_FOR_PAYMENT</code> flag is set to <code>N</code> in the configurator and the <code>SellerOrganizationCode</code> is passed then it will be used to determine the payment group. If not passed it is defaulted to the <code>EnterpriseCode</code>.
		  </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <PaymentMethod AuthorizationId="" BillToKey="" ChargeType="Required"
        CheckNo="" CheckReference="" CreditCardExpDate=""
        CreditCardName="" CreditCardNo="" CreditCardType="" Currency=""
        CustomerAccountNo="" CustomerPONo="" DebitCardNo="" FirstName=""
        LastName="" MerchantId="" MiddleName="" PaymentReference1=""
        PaymentReference2="" PaymentReference3="" PaymentReference4=""
        PaymentReference5="" PaymentReference6="" PaymentReference7=""
        PaymentReference8="" PaymentReference9=""
        PaymentTransactionFailed="" PaymentType="Required" ReasonCode=""
        RequestAmount="Required" ShipToKey="" SvcNo="" yfc:DTDOccurrence="OneOrMany">
        <yfc:includeInParent IncludeXMLChildNodes="N"
            IncludeXMLFileName="MasterPaymentMethod.xml" IncludeXMLPath="/PaymentRelated/ExecutePaymentTransactions/PaymentMethod"/>
        <yfc:doc>
            <Element EntityName="Payment"/>
            <Attributes>
                <Attribute EntityName="Charge_Transaction"
                    Name="AuthorizationId" NameInEntity="AuthorizationID"/>
                <Attribute Name="BillToKey">
                    <Description>
                        <div>
								The unique identifier for bill to address information on the
								payment. If
								<code>BillToKey</code>
								is passed, then
								<code>PersonInfoBillTo</code>
								element is ignored
							</div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Charge_Transaction"
                    Name="ChargeType" NameInEntity="ChargeType">
                    <Description>
                        <div>
								Mandatory. The type of charge that is being applied to the
								payment method.
								<br/>
								Valid Values:
								<b>
                                <code>AUTHORIZATION</code>
                            </b>
								or
								<b>
                                <code>CHARGE</code>
                            </b>
                            <Validation>
                                <Condition> Default error code when user exit error code not
										defined. 
							</Condition>
                                <Error Description="Invalid Data." ErrorCode="YFS10190"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute Name="CreditCardNo">
                    <Description>
                        <div>
								Credit card number. Required if
								<code>PaymentType</code>
								is CREDIT_CARD
							</div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Order_Header" Name="Currency" NameInEntity="Currency">
                    <Description>
                        <div> The currency of the requested amount.</div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Order_Header" Name="CustomerPONo" NameInEntity="CustomerPONo"/>
                <Attribute EntityName="Payment_Rule" Name="MerchantId" NameInEntity="MerchantId"/>
                <Attribute DataType="Flag" Name="PaymentTransactionFailed">
                    <Description>
            Indicates if this payment transaction has failed. <br/>Valid Values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>
                    </Description>
                </Attribute>
                <Attribute Name="PaymentType">
                    <Description>
                        <div>
								Mandatory. Defines the type of payment for this transaction.
								<br/>
								The
								<code>PaymentType</code>
								must be a value that is already configured for the Seller
								Organization.
								<br/>
								Valid Values:
								<code>CREDIT_CARD</code>
								,
								<code>CUSTOMER_ACCOUNT</code>
								,
								<code>STORED_VALUE_CARD</code>
								, or
								<code>OTHER</code>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Charge_Transaction"
                    Name="RequestAmount" NameInEntity="RequestAmount">
                    <Description>
                        <div>
								Mandatory. The amount request being requested for authorization
								or charging. If
								<code>RequestAmount</code>
								is negative and is in
								<code>CHARGE</code>
								mode, the payment type will be check if it is valid for return.
							</div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Order_Header" Name="ShipToKey" NameInEntity="Ship_To_Key">
                    <Description>
                        <div>
								The ShipTo unique identifier for this payment method. If
								<code>ShipToKey</code>
								is passed, then
								<code>PersonInfoShipTo</code>
								element is ignored
							</div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <PaymentDetails AuthAvs="" AuthCode="" AuthReturnCode=""
            AuthReturnFlag="" AuthReturnMessage="" AuthTime=""
            AuthorizationExpirationDate="" AuthorizationID=""
            CVVAuthCode="" ChargeType="" CollectionDate=""
            DisplayPaymentReference1="" DisplaySvcNo="" ExecutionDate=""
            HoldOrderAndRaiseEvent="" HoldReason=""
            InternalReturnCode="" InternalReturnFlag=""
            InternalReturnMessage="" ProcessedAmount="" Reference1=""
            Reference2="" Reference3="" RequestAmount="" RequestId=""
            RetryFlag="" RetryVoidAsRefund="Y|N|" SuspendPayment=""
            TranAmount="" TranRequestTime="" TranReturnCode=""
            TranReturnFlag="" TranReturnMessage="" TranType="" VoidTransaction="V|R|">
            <yfc:doc>
                <Element EntityName="Credit_Card_Transaction"/>
                <Attributes>
                    <Attribute EntityName="Charge_Transaction"
                        Name="AuthorizationExpirationDate" NameInEntity="Authorization_Expiration_Date"/>
                    <Attribute EntityName="Charge_Transaction"
                        Name="AuthorizationID" NameInEntity="Authorization_Id"/>
                    <Attribute EntityName="Charge_Transaction"
                        Name="ChargeType" NameInEntity="Charge_Type">
                        <Description>
                            <div> The type of charge that is being applied to the payment method. <br/>Valid Values: <b>
                                    <code>AUTHORIZATION</code>
                                </b> or <b>
                                    <code>CHARGE</code>
                                </b>
                                <Validation>
                                    <Condition> Invalid value passed. </Condition>
                                    <Error
                                    Description="YFS:Invalid Transaction Type." ErrorCode="YFS10156"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="TimeStamp"
                        EntityName="Charge_Transaction" Name="CollectionDate"/>
                    <Attribute DataType="Text-100" EntityName="Payment" Name="DisplayPaymentReference1">
                        <Description>
                            <div> The four digit of the payment refrence 1 for displaying. </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-1000" EntityName="Payment" Name="DisplaySvcNo">
                        <Description>
                            <div> The four digit of the store value card number for displaying. </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="TimeStamp"
                        EntityName="Charge_Transaction" Name="ExecutionDate"/>
                    <Attribute DataType="Flag" Name="HoldOrderAndRaiseEvent">
                        <Description>
                            <div>Indicates if this transaction has failed. <br/>Valid values: <b>
                                    <code>Y</code>
                                </b> or <b>
                                    <code>N</code>
                                </b>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-100" Name="HoldReason">
                        <Description>
                            <div>Specifies the problem occured in this transaction when <code>HoldOrderAndRaiseEvent</code> is set to <b>
                                    <code>Y</code>
                                </b>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="ProcessedAmount">
                        <Description>
                            <div> The amount that has been authorized or charged. </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-100" Name="Reference3">
                        <Description>
                            <div> The Reference 3. </div>
                        </Description>
                    </Attribute>
                    <Attribute EntityName="Charge_Transaction"
                        Name="RequestAmount" NameInEntity="RequestAmount">
                        <Description>
                            <div> The amount request being requested for authorization or charging. </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Flag" Name="RetryFlag">
                        <Description>
                            <div> Flag indicating if retry is required for payment processing by the user exit. <br/>Valid values: <b>
                                    <code>Y</code>
                                </b> or <b>
                                    <code>N</code>
                                </b>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Flag" Name="RetryVoidAsRefund">
                        <Description>
                            <div> Identifies that void request should be retried as a refund request when recreated.</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Flag" Name="SuspendPayment">
                        <Description>
                            <div> Flag indicating if the <code>PaymentMethod</code> should be suspended. <br/>Valid values: <b>
                                    <code>Y</code>
                                </b>,<b>
                                    <code>B</code>
                                </b> or <b>
                                    <code>N</code>
                                </b>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="TranAmount">
                        <Description>
                            <div> The transaction amount. </div>
                        </Description>
                    </Attribute>
                    <Attribute EntityName="Charge_Transaction"
                        Name="VoidTransaction" NameInEntity="VoidTransaction">
                        <Description>
                            <div> Identifies the request is a tender void, if <code>Y</code>.</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </PaymentDetails>
        <TransactionError ErrorCode="" ErrorMessage="">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Text-100" Name="ErrorCode">
                        <Description>
                            <div> Describes the error code caused by the transaction failure in the user exit. 
              <br>If error code is not available, the default error code is provided.</br>
              The error code should be set by creating a <code>YFSUserExitException</code> then use 
              setErrorCode and setErrorDescription to define the custom error code.
              <Validation>
                                    <Condition> Default error code if the user exit exception does not already have one.
							</Condition>
                                    <Error
                                    Description="Payment system failed to process payment due to internal error." ErrorCode="OMP80_0052"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-100" Name="ErrorMessage">
                        <Description>
                            <div> Description of the error returned from the user exit. </div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </TransactionError>
    </PaymentMethod>
</PaymentMethods>
