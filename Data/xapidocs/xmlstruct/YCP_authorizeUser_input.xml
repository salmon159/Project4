<AuthorizeUser Enterprise="" LoginID="Required" ShipNode="" xmlns="http://www.sterlingcommerce.com/documentation/YCP/authorizeUser/input">
    <yfc:doc>
        <Attributes>
            <Attribute EntityName="Enterprise" Name="Enterprise" NameInEntity="EnterpriseKey">
                <Description>
                    <div>Enterprise to which the user has access.
						<Validation>
                            <Condition>
                                <code>Enterprise</code> value is blank.
							</Condition>
                            <Error
                                Description="Ship node or enterprise key has to be specified" ErrorCode="YCP0252"/>
                        </Validation>
                        <Validation>
                            <Condition>
                                <code>Enterprise</code> value does not match the ship node to which the user has access.
							</Condition>
                            <Error
                                Description="ShipNode or Enterprise is not valid for the given user." ErrorCode="YCP0253"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="User" Name="LoginID" NameInEntity="Loginid">
                <Description>
                    <div>LoginID of the User who has logged into the system.This is a mandatory field.
						<Validation>
                            <Condition>
                                <code>LoginID</code> value does not exist in YFS_USER table.
							</Condition>
                            <Error
                                Description="Invalid User identifiers passed" ErrorCode="YCP0084"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Ship_Node" Name="ShipNode" NameInEntity="ShipNode">
                <Description>
                    <div>Ship node to which the user has access.
						<Validation>
                            <Condition>
                                <code>ShipNode</code> value is blank.
							</Condition>
                            <Error
                                Description="Ship node or enterprise key has to be specified" ErrorCode="YCP0252"/>
                        </Validation>
                        <Validation>
                            <Condition>
                                <code>ShipNode</code> value does not match the ship node to which the user has access.
							</Condition>
                            <Error
                                Description="ShipNode or Enterprise is not valid for the given user." ErrorCode="YCP0253"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</AuthorizeUser>
