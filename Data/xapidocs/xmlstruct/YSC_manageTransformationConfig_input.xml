<TransformationConfig Description="" DocumentType="Required"
    Operation="" OrganizationCode="Required" TemplateCode="Required"
    TemplateXml="" TransformationConfigKey="" xmlns="http://www.sterlingcommerce.com/documentation/YSC/manageTransformationConfig/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
                    <Validation>
                        <Condition>
                            <code>DocumentType</code>, <code>OrganizationCode</code> and <code>TemplateCode</code> must be passed.
						</Condition>
                        <Error
                            Description="Mandatory parameters for the operation are missing" ErrorCode="YFS10364"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Action" Name="Operation">
                <Description>
                    <div>Operation to perform
					<br/>Valid Values: 
					<br/>
                        <b>
                            <code>Manage</code>
                        </b> - Creates a new record if it does not exist, or modifies an existing record if it does.
					<br/>
                        <b>
                            <code>Create</code>
                        </b> - Creates a new record. 
					<br/>
                        <b>
                            <code>Modify</code>
                        </b> - Change values in an existing record.
					<br/>
                        <b>
                            <code>Delete</code>
                        </b> - Deletes an existing record.
					<br/>The default behavior is <b>
                            <code>Manage</code>
                        </b>.
					</div>
                </Description>
            </Attribute>
            <Attribute Name="OrganizationCode">
                <Description>
                    <div> Organization Code for an organization.
							<Validation>
                            <Condition>Must be valid Organization Code in the table <code>YFS_Organization</code>.
										</Condition>
                            <Error
                                Description="Invalid Organization Code." ErrorCode="YFS10395"/>
                        </Validation>
                        <Validation>
                            <Condition>Must be an Enterprise.
										</Condition>
                            <Error
                                Description="Invalid Enterprise Code." ErrorCode="YCP0011"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</TransformationConfig>
