<StoreBatch BatchNo="" HandleCustomShortage="" OrganizationCode=""
    StoreBatchKey="Required" UpdateShipmentStatus="" xmlns="http://www.sterlingcommerce.com/documentation/YCD/recordShortageForBatchPick/input">
    <yfc:doc>
        <Element EntityName="Store_Batch"/>
        <Attributes>
            <Attribute EntityName="Store_Batch" Name="BatchNo" NameInEntity="Batch_No"/>
            <Attribute DataType="Flag" EntityName="Store_Batch" Name="HandleCustomShortage">
                <Description>
                    <div>
						Indicates whether the custom shortage should be considered to short the batch line or not. Valid values are 'Y', 'N' and null. Default value is null.
					</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Store_Batch" Name="OrganizationCode" NameInEntity="Organization_Code"/>
            <Attribute EntityName="Store_Batch" Name="StoreBatchKey" NameInEntity="Store_Batch_key">
                <Description>
                    <div>
					Unique Identifier for a Batch
						<Validation>
                            <Condition>
                                <code>StoreBatchKey OR OrganizationCode,BatchNo</code> should be passed.
							</Condition>
                            <Error Description="Invalid Batch" ErrorCode="YCD00081"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" EntityName="Store_Batch" Name="UpdateShipmentStatus">
                <Description>
                    <div>
						Indicates whether the shipment status should be updated or not after batch is completely picked. Valid values are 'Y', 'N' and null. Default value is null. Shipment status will be updated if value is 'Y' or null.
					</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <Item ItemID="" ItemKey="Required" OrganizationCode=""
        ProductClass="" ShortageReason="Required" UnitOfMeasure="">
        <yfc:doc>
            <Attributes>
                <Attribute EntityName="Item" Name="ItemID" NameInEntity="Item_Id"/>
                <Attribute DataType="String" Name="ProductClass"/>
                <Attribute EntityName="Common_Code"
                    Name="ShortageReason" NameInEntity="Code_Value">
                    <Description>
                        <div>
                            <Validation>
                                <Condition>ShortageReason is not passed
						</Condition>
                                <Error
                                    Description="Shortage reason info is missing" ErrorCode="YCD00070"/>
                            </Validation>
                        </div>
                        <div>
                            <Validation>
                                <Condition>Unique Identifiers for Item should be passed
						</Condition>
                                <Error Description="Item Not Found" ErrorCode="YCM0033"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Item" Name="UnitOfMeasure" NameInEntity="Uom"/>
            </Attributes>
        </yfc:doc>
    </Item>
</StoreBatch>
