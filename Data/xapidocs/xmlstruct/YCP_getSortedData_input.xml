<!-- getSortedData input XML -->
<SortedData Locale="Required" xmlns="http://www.sterlingcommerce.com/documentation/YCP/getSortedData/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="String" Name="Locale">
                <Description>
				Locale to use for collation. This is the language, country, and variant separated by underscores. For example, <code>en_US</code>.
				</Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <SortGroup XMLPath="Required" yfc:DTDOccurrence="OneOrMany">
        <yfc:doc>
            <Element>
                <Description>
                    <div>Selects a parent element whose children will be sorted.
					</div>
                </Description>
            </Element>
            <Attributes>
                <Attribute DataType="String" Name="XMLPath">
                    <Description>
						Path of the parent output XML element whose children will be sorted.
						For example, the <code>User</code> elements in the following XML will be
						sorted when an <code>XMLPath</code> of <code>/UserList</code>
						is given.<br/>
                        <pre>&lt;Organization&gt;
    &lt;UserList&gt;
        &lt;User Loginid="User1"/&gt;
        &lt;User Loginid="User2"/&gt;
    &lt;/UserList&gt;
&lt;/Organization&gt;</pre>
						To select the root element, use a single slash (<code>/</code>)
					</Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <SortParam Ascending="" Attribute="Required" DataType="" yfc:DTDOccurrence="OneOrMany">
            <yfc:doc>
                <Element>
                    <Description>
                        <div>Describes how to sort an attribute within the children of the selected element</div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute DataType="TFBoolean" Name="Ascending">
                        <Options IsEnumeration="Y">
                            <Option
                                Description="Perform an ascending sort (default)"
                                IsDefault="Y" Value="true"/>
                            <Option
                                Description="Perform a descending sort" Value="false"/>
                        </Options>
                    </Attribute>
                    <Attribute DataType="String" Name="Attribute">
                        <Description>
							The XML attribute to sort by. In the SortGroup example, this could be <code>Loginid</code>.
						</Description>
                    </Attribute>
                    <Attribute DataType="String" Name="DataType">
                        <Description>
							Type of the attribute to control how the data is sorted.
						</Description>
                        <Options IsEnumeration="Y">
                            <Option
                                Description="Locale-sensitive string comparison" Value="STRING"/>
                            <Option Description="Numeric comparison" Value="NUMBER"/>
                            <Option
                                Description="Derive the type from the UI datatype map. If the attribute is not found in this map, defaults to STRING. (default)"
                                IsDefault="Y" Value="AUTO"/>
                        </Options>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </SortParam>
    </SortGroup>
    <API IsFlow="" Name="Required" Version="" yfc:DTDOccurrence="REQUIRED">
        <yfc:doc>
            <Element>
                <Description>
                    <div>API to invoke</div>
                </Description>
            </Element>
            <Attributes>
                <Attribute DataType="TFBoolean" Name="IsFlow">
                    <Description>
                        <div>Name of the API to call.</div>
                    </Description>
                    <Options IsEnumeration="Y">
                        <Option
                            Description="Invoke the named Service instead of an API" Value="true"/>
                        <Option
                            Description="Invoke the named API (default)"
                            IsDefault="Y" Value="false"/>
                    </Options>
                </Attribute>
                <Attribute DataType="Text-100" Name="Name">
                    <Description>
                        <div>Name of the API to call.</div>
                    </Description>
                </Attribute>
                <Attribute DataType="Text-10" Name="Version">
                    <Description>
                        <div>
							Version number of the API. Only provide a
							value if a specific version of the API is
							needed.
						</div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <!-- The Input element must contain a child element that corresponds to
			the document element of the api input -->
        <Input yfc:AllowAnyElement="skip" yfc:DTDOccurrence="REQUIRED">PCDATA<yfc:doc>
                <Element>
                    <Description>
                        <div>The Input element must contain either a child element or an XML as text
						data that corresponds to the document element of the API input.</div>
                    </Description>
                </Element>
            </yfc:doc>
        </Input>
        <Template yfc:AllowAnyElement="skip">PCDATA<yfc:doc>
                <Element>
                    <Description>
                        <div>The Template element should contain either a child element or an XML as text
						data that corresponds to the template to use for the API call.</div>
                    </Description>
                </Element>
            </yfc:doc>
        </Template>
    </API>
</SortedData>
