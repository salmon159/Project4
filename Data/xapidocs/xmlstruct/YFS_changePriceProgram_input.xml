<!-- Either PriceProgramKey OR OrganizationCode and PriceProgramName -->
<PriceProgram OrganizationCode="" PriceProgramDescription=""
    PriceProgramKey="" PriceProgramName="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/changePriceProgram/input">
    <yfc:doc>
        <Element EntityName="Price_Program">
            <Description>
                <div>
			Contains data related to a price program.
				<Validation>
                        <Condition>
                            <code>PriceProgramKey</code> or <code>OrganizationCode</code> and <code>PriceProgramName</code> must be passed and must be valid.
				</Condition>
                        <Error
                            Description="Mandatory Parameters for the Operation are missing." ErrorCode="YFS10364"/>
                    </Validation>
                </div>
            </Description>
        </Element>
    </yfc:doc>
    <PriceProgramDefnList>
        <PriceProgramDefn Currency="Required" EndDate="Required"
            Operation="Create|Delete" PriceSetKey="" PriceSetName=""
            StartDate="Required" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element EntityName="Price_Program_Defn">
                    <Description>
                        <div>
					A price program definition identifies the price list to be used for a given curreny and date.
						<Validation>
                                <Condition>If <code>Operation</code> is set to <code>
                                    <b>Create</b>
                                    </code>, <code>PriceSetKey</code> or <code>PriceSetName</code> must be passed and must be valid.
						</Condition>
                                <Error
                                    Description="Mandatory Parameters for the Operation are missing." ErrorCode="YFS10364"/>
                            </Validation>
                            <Validation>
                                <Condition>The organization that owns the price set must be the same organization that owns the price program.
						</Condition>
                                <Error
                                    Description="Price set owner organization and price program owner organization are different" ErrorCode="OMP10030"/>
                            </Validation>
                        </div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute EntityName="Price_Program_Defn"
                        Name="Currency" NameInEntity="Currency">
                        <Description>
                            <div>
						The currency in which pricing needs to be done. 
							<Validation>
                                    <Condition>The <code>Currency</code> passed must be the same as the associated price set's.
							</Condition>
                                    <Error
                                    Description="Price program definition and associated price set should have same currency" ErrorCode="OMP10032"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute EntityName="Price_Program_Defn"
                        Name="EndDate" NameInEntity="End_Date">
                        <Description>
                            <div>
						The date the price program ends.  
							<Validation>
                                    <Condition>
                                    <code>StartDate</code> must be less than <code>EndDate</code>
                                    </Condition>
                                    <Error
                                    Description="Start Date must be before End Date" ErrorCode="OMP10033"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="String" Name="Operation">
                        <Description>
                            <div>
                                <br/>Valid Values:  <b>
                                    <code>Create</code>
                                </b> or <b>
                                    <code>Delete</code>
                                </b>
                                <Validation>
                                    <Condition>If <code>Operation</code> is set to <code>
                                    <b>Delete</b>
                                    </code>, a corresponding record should exist in system.
							</Condition>
                                    <Error
                                    Description="Record does not exist in the database." ErrorCode="YFC0002"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute EntityName="Price_Program_Defn"
                        Name="StartDate" NameInEntity="Start_Date">
                        <Description>
                            <div>
						The date the price program takes effect.  
							<Validation>
                                    <Condition>
                                    <code>StartDate</code> must be less than <code>EndDate</code>
                                    </Condition>
                                    <Error
                                    Description="Start Date must be before End Date" ErrorCode="OMP10033"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </PriceProgramDefn>
    </PriceProgramDefnList>
</PriceProgram>
