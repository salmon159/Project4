<!--convertCurrency Input XML-->
<convertCurrency ConversionDate="Required" EnterpriseCode=""
    FromCurrency="Required" InputAmount="" ToCurrency="Required" xmlns="http://www.sterlingcommerce.com/documentation/YFS/convertCurrency/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="Date" Name="ConversionDate">
                <Description>
                    <div>
				The <code>ConversionDate</code> is used to determine the conversion rates in effect on that date.
				<Validation>
                            <Condition>If <code>ConversionDate</code> is not passed
					</Condition>
                            <Error Description="Blank ConversionDate." ErrorCode="YFS10347"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="OrgCode" Name="EnterpriseCode"/>
            <Attribute EntityName="Currency" Name="FromCurrency" NameInEntity="Currency">
                <Description>
                    <div>
				The currency from which the conversion should begin. The <code>InputAmount</code> is based on this currency.
				<br/>For example, if the desired conversion is to convert 1,000 euros to yen, the <code>FromCurrency</code> is euro. 
				<Validation>
                            <Condition>Must be a valid existing currency.
					</Condition>
                            <Error Description="Invalid currency." ErrorCode="YFS10325"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Money" Name="InputAmount">
                <Description>
                    <div>
				The amount that is to be converted. 
				</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Currency" Name="ToCurrency" NameInEntity="Currency">
                <Description>
                    <div>
				The currency to which the <code>InputAmout</code> should be converted. 
				<br/>For example, if the desired conversion is to convert 1,000 euros to yen, the <code>ToCurrency</code> is yen. 
				<Validation>
                            <Condition>Must be a valid existing currency.
					</Condition>
                            <Error Description="Invalid currency." ErrorCode="YFS10325"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</convertCurrency>
