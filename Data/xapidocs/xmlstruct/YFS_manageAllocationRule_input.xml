<AllocationRule AllocationRuleId="Required" AllocationRuleKey=""
    AllowedShipmentDelayDays="" ApplyFutureSafetyFactor=""
    ApplyOnhandSafetyFactor="" AssumeInfInvAfterLeadTime=""
    BackOrderWaitPeriod="" BackorderfromnodeWaitPeriod=""
    CancelOrderOnExcpFlag="" ConsiderUnplannedInventoryMode=""
    DelayCurrentProcurements="" DelayCurrentShipment="" Description=""
    HoldAllocationFlag="" IgnoreFillQuantityForReservations=""
    IgnoreLandedCost="" IgnoreMerging=""
    IgnoreSequenceConstraintsForReservations=""
    IsReservationAllowedDuringScheduling="" LineShipCompleteFlag=""
    LineShipSingleNodeFlag="" MinTimeBtwSchAndRls="" Operation=""
    OptimizationType="" OrganizationCode="Required"
    ReserveKitsOutOfRatio="" RetrySchTimeForProd=""
    RetrySchTimeForSrvc="" ScheduleLeadTime="" ServiceSearchWindow=""
    ShipCompleteFlag="" ShipSingleNodeFlag=""
    ShipmentConsolidationWindow="" UseGeography=""
    UseShipmentConsolidationWindow="" WeightByDistribution=""
    WeightByGeography="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/manageAllocationRule/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
                    <Validation>
                        <Condition>
                            <code>LineShipCompleteFlag</code> cannot be <code>N</code> if <code>ShipCompleteFlag</code> is <code>Y</code>
                        </Condition>
                        <Error
                            Description="LineShipCompleteFlag cannot be N if ShipCompleteFlag is Y." ErrorCode="YFS10190"/>
                    </Validation>
                    <Validation>
                        <Condition>
                            <code>LineShipCompleteFlag</code> cannot be <code>N</code> if <code>ShipCompleteFlag</code> is <code>Y</code>
                        </Condition>
                        <Error
                            Description="LineShipSingleNodeFlag cannot be N if ShipSingleNodeFlag is Y." ErrorCode="YFS10190"/>
                    </Validation>
                    <Validation>
                        <Condition>
                            <code>ShipmentConsolidationWindow</code> has to be passed if <code>UseShipmentConsolidationWindow</code> is <code>Y</code>
                        </Condition>
                        <Error
                            Description="ShipmentConsolidationWindow has to be passed if UseShipmentConsolidationWindow is Y." ErrorCode="YFS10190"/>
                    </Validation>
                    <Validation>
                        <Condition>Both <code>DelayCurrentProcurements</code> and <code>DelayCurrentShipment</code>have to be <code>Y</code> if <code>UseShipmentConsolidationWindow</code> is not <code>Y</code>
                        </Condition>
                        <Error
                            Description="Both DelayCurrentProcurements and DelayCurrentShipment have to be Y if UseShipmentConsolidationWindow is not Y." ErrorCode="YFS10190"/>
                    </Validation>
                    <Validation>
                        <Condition>Either <code>IgnoreFillQuantityForReservations</code> or <code>ReserveKitsOutOfRatio</code> should be <code>Y</code> if <code>IsReservationAllowedDuringScheduling</code> is <code>Y</code>
                        </Condition>
                        <Error
                            Description="Either IgnoreFillQuantityForReservations or ReserveKitsOutOfRatio should be Y if IsReservationAllowedDuringScheduling is Y." ErrorCode="YFS10190"/>
                    </Validation>
                    <Validation>
                        <Condition>Both <code>IgnoreFillQuantityForReservations</code> and <code>ReserveKitsOutOfRatio</code> should be <code>Y</code> if <code>IsReservationAllowedDuringScheduling</code> is not <code>Y</code>
                        </Condition>
                        <Error
                            Description="Both IgnoreFillQuantityForReservations and ReserveKitsOutOfRatio should be Y if IsReservationAllowedDuringScheduling is not Y." ErrorCode="YFS10190"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute Name="AllocationRuleId">
                <Description>
                    <div>
                        <Validation>
                            <Condition>
                                <code>AllocationRuleId</code> not passed.</Condition>
                            <Error
                                Description="AllocationRuleId is mandatory for this operation." ErrorCode="OMP921_0101"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Action" Name="Operation">
                <Description>
                    <div>
			Operation to perform on this record.
			<br/>Default: If not passed then API will try to either create or modify depending on the existence of the data.
			<br/>Valid Values:
				<br/>
                        <b>
                            <code>Create</code>
                        </b> - Creates a new record.
				<br/>
                        <b>
                            <code>Modify</code>
                        </b> - Change values in an existing record. 
                <br/>
                        <b>
                            <code>Delete</code>
                        </b> - Deletes an existing record.               
			</div>
                </Description>
            </Attribute>
            <Attribute Name="OptimizationType">
                <Description>
                    <div>
                        <Validation>
                            <Condition>
                                <code>OptimizationType</code> not passed as either <code>01</code> or <code>02</code> or <Code>03</Code>
                            </Condition>
                            <Error Description="Invalid Data" ErrorCode="YFS10190"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute Name="OrganizationCode">
                <Description>
                    <div>
                        <Validation>
                            <Condition>
                                <code>OrganizationCode</code> not passed.</Condition>
                            <Error
                                Description="OrganizationCode is not a valid enterprise" ErrorCode="YFS10395"/>
                        </Validation>
                        <Validation>
                            <Condition> Invalid <code>OrganizationCode</code> passed.</Condition>
                            <Error
                                Description="OrganizationCode is not a valid enterprise." ErrorCode="YFS10395"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</AllocationRule>
