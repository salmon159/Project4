<CouponCharacterSet Abbreviation="" CharSet="" CouponCharSetKey=""
    Description="" Name="Required" Operation=""
    OrganizationCode="Required" xmlns="http://www.sterlingcommerce.com/documentation/YPM/manageCouponCharacterSet/input">
    <yfc:doc>
        <Element EntityName="Coupon_Char_Set">
            <Description>
                <div>
                    Specify the pricing rule to be created, modified or deleted.  
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute Name="Abbreviation" NameInEntity="Abbreviation">
                <Description>
                    <div>Abbreviation representing this character set in the coupon format.
                        <Validation>
                            <Condition>
                                <code>Abbreviation</code> must be passed when <code>Operation</code> is <b>
                                    <code>Create</code>
                                </b>.
                            </Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing." ErrorCode="YPM10000"/>
                        </Validation>
                        <Validation>
                            <Condition>
                                <code>Abbreviation</code> is modified to void.
                            </Condition>
                            <Error
                                Description="The attribute cannot be void." ErrorCode="YPM10002"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Coupon_Char_Set" Name="CharSet" NameInEntity="Char_Set">
                <Description>
                    <div>Character set string. Each character in this string is a possible character in the assigned position of unique coupon code.
                        <Validation>
                            <Condition>
                                <code>CharSet</code> must be passed when <code>Operation</code> is <b>
                                    <code>Create</code>
                                </b>.
                            </Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing." ErrorCode="YPM10000"/>
                        </Validation>
                        <Validation>
                            <Condition>
                                <code>CharSet</code> is modified to void.
                            </Condition>
                            <Error
                                Description="The attribute cannot be void." ErrorCode="YPM10002"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Coupon_Char_Set" Name="Description" NameInEntity="Description">
                <Description>
                    <div>Description for the coupon character set.
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Coupon_Char_Set" Name="Name" NameInEntity="Name">
                <Description>
                    <div>Name for the coupon character set. 
                        <Validation>
                            <Condition>
                                <code>Name</code> must be passed when <code>Operation</code> is <b>
                                    <code>Create</code>
                                </b>.
                            </Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing." ErrorCode="YPM10000"/>
                        </Validation>
                        <Validation>
                            <Condition>
                                <code>Name</code> is modified to void.
                            </Condition>
                            <Error
                                Description="The attribute cannot be void." ErrorCode="YPM10002"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Action" Name="Operation">
                <Description>
                    <div> Operation to perform
                        <br/>Valid Values: 
                        <br/>
                        <b>
                            <code>Manage</code>
                        </b> - Creates a new record if it does not exist, or modifies an existing record if it does.
                        <br/>
                        <b>
                            <code>Create</code>
                        </b> - Creates a new record. 
                        <br/>
                        <b>
                            <code>Modify</code>
                        </b> - Change values in an existing record.
                        <br/>
                        <b>
                            <code>Delete</code>
                        </b> - Deletes an existing record.
                        <br/>The default behavior is <b>
                            <code>Manage</code>
                        </b>.
                        <Validation>
                            <Condition>attempting to <code>Delete</code> a charset that is being used by existing pricing rules.
                            </Condition>
                            <Error
                                Description="Can not modify or delete charset because it is being used" ErrorCode="YPM10170"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Coupon_Char_Set"
                Name="OrganizationCode" NameInEntity="Organization_Code">
                <Description>
                    <div>Pricing organization to with this policy belongs. Mandatory when <code>Operation</code> is <b>
                            <code>Create</code>
                        </b>.
                        <Validation>
                            <Condition>
                                <code>OrganizationCode</code> must be passed when <code>Operation</code> is <b>
                                    <code>Create</code>
                                </b>.
                            </Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing." ErrorCode="YPM10000"/>
                        </Validation>
                        <Validation>
                            <Condition>
                                <code>OrganizationCode</code> is not valid.
                            </Condition>
                            <Error
                                Description="YFS:Invalid organization code." ErrorCode="YFS10395"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</CouponCharacterSet>
