<!-- createDerivedOrder API input XML -->
<Order EnterpriseCode="Conditional" IgnoreTransactionDependencies="Y|N"
    OrderHeaderKey="Conditional" OrderNo="Conditional"
    TransactionId="Required" xmlns="http://www.sterlingcommerce.com/documentation/YFS/createDerivedOrder/input">
    <yfc:doc>
        <Element EntityName="Order_Header"/>
        <Attributes>
            <Attribute EntityName="Order_Header" Name="EnterpriseCode" NameInEntity="Enterprise_Key">
                <Description>
                    <div>Unique identifier of the Order. Either <code>OrderHeaderKey</code> OR <code>EnterpriseCode</code> and <code>OrderNo</code> of the parent order must be passed.
					<Validation>
                            <Condition>Either <code>EnterpriseCode</code> and <code>OrderNo</code> OR <code>OrderHeaderKey</code> of the parent order is not passed.
					</Condition>
                            <Error Description="Invalid Order" ErrorCode="YFS10003"/>
                            <Condition>Order cannot be identified based on passed values.
					</Condition>
                            <Error Description="Invalid Order" ErrorCode="YFS10003"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="IgnoreTransactionDependencies">
                <Description>
                    <div>Flag to override any transaction dependencies that may be defined for the transaction this API invokes.
					<br/>Default: <b>
                            <code>N</code>
                        </b>
                        <br/>Valid Values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>. When passed as <b>
                            <code>Y</code>
                        </b>, transaction dependencies will not be evaluated, and thus will not prevent the API from processing.
					</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Order_Header" Name="OrderHeaderKey" NameInEntity="Order_Header_Key">
                <Description>
                    <div>Unique identifier of the Order. Either <code>OrderHeaderKey</code> OR <code>EnterpriseCode</code> and <code>OrderNo</code> of the parent order must be passed.
					<Validation>
                            <Condition>Either <code>EnterpriseCode</code> and <code>OrderNo</code> OR <code>OrderHeaderKey</code> of the parent order is not passed.
					</Condition>
                            <Error Description="Invalid Order" ErrorCode="YFS10003"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Order_Header" Name="OrderNo" NameInEntity="Order_No">
                <Description>
                    <div>Unique identifier of the Order. Either <code>OrderHeaderKey</code> OR <code>EnterpriseCode</code> and <code>OrderNo</code> of the parent order must be passed.
					<Validation>
                            <Condition>Either <code>EnterpriseCode</code> and <code>OrderNo</code> OR <code>OrderHeaderKey</code> of the parent order is not passed.
					</Condition>
                            <Error Description="Invalid Order" ErrorCode="YFS10003"/>
                            <Condition>Order cannot be identified based on passed values.
					</Condition>
                            <Error Description="Invalid Order" ErrorCode="YFS10003"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="TranId" Name="TransactionId">
                <Description>
                    <div>
				This transaction should be derived from the base transaction DERIVED_ORDER_CREATE. 
					<Validation>
                            <Condition>If the TransactionId is missing.
					</Condition>
                            <Error Description="Blank Transaction ID" ErrorCode="YFS10171 "/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</Order>
