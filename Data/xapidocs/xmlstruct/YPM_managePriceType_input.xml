<PriceType CallingOrganizationCode="Required" Description=""
    IsPriceTypeForInformationOnly="" Operation=""
    PriceTypeName="Required" RecurringType="" xmlns="http://www.sterlingcommerce.com/documentation/YPM/managePriceType/input">
    <yfc:doc>
        <Attributes>
            <Attribute EntityName="Price_Type"
                Name="CallingOrganizationCode" NameInEntity="ORGANIZATION_CODE">
                <Description>
                    <div>
						The calling Organization of the API call. If passed will be used to determine the correct Pricing Organization. 
						<Validation>
                            <Condition>
                                <code>CallingOrganizationCode</code> must refer to a valid Organization</Condition>
                            <Error
                                Description="Pricing Org not found for CallingOrganizationCode" ErrorCode="YPM10193"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Action" Name="Operation">
                <Description>
                    <div> Operation to perform
						<br/>Valid Values: 
						<br/>
                        <b>
                            <code>Manage</code>
                        </b> - Creates a new record if it does not exist, or modifies an existing record if it does.
						<br/>
                        <b>
                            <code>Create</code>
                        </b> - Creates a new record. 
						<br/>
                        <b>
                            <code>Modify</code>
                        </b> - Change values in an existing record.
						<br/>
                        <b>
                            <code>Delete</code>
                        </b> - Deletes an existing record.
						<br/>The default behavior is <b>
                            <code>Manage</code>
                        </b>.
						<Validation>
                            <Condition>For Operation <code>Delete</code>, a PriceType cannot be deleted if it has any active PriceTypeAssociations.</Condition>
                            <Error
                                Description="Price Type Associations for target Price Type are still in use." ErrorCode="YPM10195"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <PriceTypeLocaleList Reset="">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="Flag" Name="Reset">
                    <Description>
                        <div>
							If <code>Reset</code> is passed as <b>
                                <code>Y</code>
                            </b>, the old records are removed and replaced with the new ones.
							If <code>Reset</code> is not passed or <code>Reset</code> is passed as <b>
                                <code>N</code>
                            </b>, only the deltas are applied. 
						</div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <PriceTypeLocale Country="" Description="" Language=""
            Operation="" PriceTypeKey="" PriceTypeLocaleKey=""
            Variant="" yfc:DTDOccurrence="OneOrMany">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Action" Name="Operation">
                        <Description>
                            <div> Operation to perform
								<br/>Valid Values: 
								<br/>
                                <b>
                                    <code>Manage</code>
                                </b> - Creates a new record if it does not exist, or modifies an existing record if it does.
								<br/>
                                <b>
                                    <code>Create</code>
                                </b> - Creates a new record. 
								<br/>
                                <b>
                                    <code>Modify</code>
                                </b> - Change values in an existing record.
								<br/>
                                <b>
                                    <code>Delete</code>
                                </b> - Deletes an existing record.
								<br/>The default behavior is <b>
                                    <code>Manage</code>
                                </b>.
							</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </PriceTypeLocale>
    </PriceTypeLocaleList>
</PriceType>
