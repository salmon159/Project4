<AppeasementOffers ChargeCategory="" ChargeName="" OrderHeaderKey=""
    ReasonCode="" xmlns="http://www.sterlingcommerce.com/documentation/YCD/provideAppeasementAsGiftCardUE/output">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="ChargeCategory" Name="ChargeCategory">
                <Description>
                    <div>
								Charge Category for Appeasement Offers.
							</div>
                </Description>
            </Attribute>
            <Attribute DataType="ChargeName" Name="ChargeName">
                <Description>
                    <div>
								Charge Name for Appeasement Offers.
							</div>
                </Description>
            </Attribute>
            <Attribute DataType="Key" Name="OrderHeaderKey">
                <Description>
                    <div>
								OrderHeaderKey of the order.
							</div>
                </Description>
            </Attribute>
            <Attribute DataType="Text-40" Name="ReasonCode">
                <Description>
                    <div>
								Reason for Appeasement.
							</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <AppeasementOffer DiscountPercent="" OfferAmount="" OfferType="" Preferred="">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="Percentage" Name="DiscountPercent">
                    <Description>
                        <div>
								The discount percentage of the offer.
							</div>
                    </Description>
                </Attribute>
                <Attribute DataType="Money" Name="OfferAmount">
                    <Description>
                        <div>
								The total amount of the offer.
							</div>
                    </Description>
                </Attribute>
                <Attribute DataType="Text-40" Name="OfferType">
                    <Description>
                        <div>
								The type of the offer. Valid values are: <code>FLAT_AMOUNT_ORDER</code>, <code>PERCENT_ORDER</code>, <code>PERCENT_FUTURE_ORDER</code> and <code>VARIABLE_AMOUNT_ORDER</code>.
							</div>
                    </Description>
                </Attribute>
                <Attribute DataType="Flag" Name="Preferred">
                    <Description>
                        <div>
								Flag to indicate if the offer is the preferred offer. Valid values are: <code>Y</code> and <code>N</code>.
							</div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <GiftCard Currency="" ExpiryDate="" GiftCardNo="" GiftCardValue="">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Currency" Name="Currency">
                        <Description>
                            <div>
								The Currency in which the gift card has been issued.
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Date" Name="ExpiryDate">
                        <Description>
                            <div>
								Expiry date for the gift card
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-40" Name="GiftCardNo">
                        <Description>
                            <div>
								The unique identifier for the gift card.
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="GiftCardValue">
                        <Description>
                            <div>
								The total value of the gift card.
							</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </GiftCard>
    </AppeasementOffer>
</AppeasementOffers>
