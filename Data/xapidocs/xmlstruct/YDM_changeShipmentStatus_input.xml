<!-- Either TaskQKey or one of ShipmentNo and ShipmentKey is mandatory -->
<!-- BaseDropStatus is optional. When not specified, base drop status is read from the transaction configuration -->
<!-- TransactionId if not passed is assumed to be CHANGE_SHIPMENT_STATUS -->
<Shipment AcceptOutOfSequenceUpdates="" BaseDropStatus=""
    SellerOrganizationCode="Conditional" ShipNode="Conditional"
    ShipmentKey="Conditional" ShipmentNo="Conditional" TaskQKey=""
    TransactionId="" xmlns="http://www.sterlingcommerce.com/documentation/YDM/changeShipmentStatus/input">
    <yfc:includeInParent IncludeXMLFileName="YFS_Shipment_keys.xml" IncludeXMLPath="/Shipment"/>
    <yfc:doc>
        <Element EntityName="Shipment">
            <Description>
                <div>
	   The shipment for which status to be changed. Pass  <code>ShipmentKey</code>
                    <i>or</i> pass <code>ShipmentNo</code>, <code>ShipNode</code> and <code>SellerOrganizationCode</code>  to identify the shipment.
	   </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Flag" Name="AcceptOutOfSequenceUpdates">
                <Description>
                    <div>
		Indicates whether status updates can be made out of sequence from the order defined in the pipeline. 
		<br/>Default: N
		<br/>Valid Values: <code>Y</code> or <code>N</code>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Pipeline_Definition"
                Name="BaseDropStatus" NameInEntity="Drop_Status">
                <Description>
                    <div>
		 Value passed is used to determine the actual drop status that the transaction assigns to the load. If <code>BaseStatus</code> is not passed, then the transaction must have only one base status defined as part of the setup.
		 </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Task_Queue" Name="TaskQKey" NameInEntity="Task_Q_Key">
                <Description>
                    <div>
	    Identifies a task queue. Used to read the shipment that needs a status change.
	    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Transaction" Name="TransactionId" NameInEntity="Tranid">
                <Description>
                    <div>Identifies a transaction. If <code>TransactionID</code> is passed, the transaction identified must be derived from
		 the abstract transaction <code>CHANGE_SHIPMENT_STATUS</code>. If <code>TaskQKey</code> is passed,  any <code>TransactionID</code> passed is ignored.
		 </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <ShipmentStatusAudit ReasonCode="" ReasonText="" ShipmentKey=""
        ShipmentStatusAuditKey="" StatusDate="">
        <yfc:includeInParent
            IncludeXMLFileName="YFS_Shipment_Status_Audit_tran.xml"
            IncludeXMLPath="/ShipmentStatusAudit" RemoveDBHouseKeeping="Y"/>
        <yfc:doc>
            <Element EntityName="Shipment_Status_Audit"/>
            <Attributes>
                <Attribute EntityName="Shipment" Name="StatusDate" NameInEntity="StatusDate">
                    <Description>Date and time of the status change.
			</Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
    </ShipmentStatusAudit>
</Shipment>
