<DBPool Action="" GetPasswords="" PoolId="Required" xmlns="http://www.sterlingcommerce.com/documentation/YCP/manageDBPool/input">
    <yfc:doc>
        <Element EntityName="DbPool"/>
        <Attributes>
            <Attribute DataType="Action" Name="Action">
                <Description>
                    <div>Action to take
					<br/>Valid Values: 
					<br/>
                        <b>
                            <code>Manage</code>
                        </b> - Creates a new record if it does not exist or modifies an existing record if it does.
					<br/>
                        <b>
                            <code>Create</code>
                        </b> - Creates a new record. 
					<br/>
                        <b>
                            <code>Modify</code>
                        </b> - Changes the value of an existing record.
					<br/>
                        <b>
                            <code>Delete</code>
                        </b> - Deletes an existing record.
					<br/>The default behavior is <b>
                            <code>Manage</code>
                        </b>.
					</div>
                </Description>
            </Attribute>
            <Attribute DataType="Boolean" Name="GetPasswords">
                <Description>
                    <div>Flag to control output of password-related parameters</div>
                </Description>
                <Options IsEnumeration="Y">
                    <Option
                        Description="Suppress any password-related properties (default)"
                        IsDefault="Y" Value="N"/>
                    <Option
                        Description="Return the password for the pool" Value="Y"/>
                </Options>
            </Attribute>
            <Attribute Name="PoolId">
                <Description>
                    <div>
						Unique identifier of the database shard connection.
						<Validation>
                            <Condition>The pool id should not be defined in <code>jdbc.properties</code>.</Condition>
                            <Error
                                Description="Database pool cannot be modified" ErrorCode="PLT0507"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <ParamList>
        <yfc:doc>
            <Element>
                <Description>
                    <div>List of connection parameters. Any supported property in <code>jdbc.properties</code> may be specified here.</div>
                </Description>
            </Element>
        </yfc:doc>
        <Param Action="" Name="Required" Value="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element>
                    <Description>
                        <div>Connection parameter</div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute DataType="Action" Name="Action">
                        <Description>
                            <div>Action to take
							<br/>Valid Values: 
							<br/>
                                <b>
                                    <code>Manage</code>
                                </b> - Sets the given parameter regardless of whether it is already set.
							<br/>
                                <b>
                                    <code>Delete</code>
                                </b> - Deletes the given parameter.
							<br/>The default behavior is <b>
                                    <code>Manage</code>
                                </b>.
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="String" Name="Name">
                        <Description>
                            <div>Parameter name. If missing, the parameter will not be set.</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="String" Name="Value">
                        <Description>
                            <div>Parameter value. If missing, the parameter will not be set.</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </Param>
    </ParamList>
</DBPool>
