<!-- getCategoryDetails Input XML -->
<Category AuthorizedSubCatalogOrganizationCode="" CategoryKey=""
    CategoryPath="" DisplayLocalizedFieldInLocale="" OrganizationCode=""
    SubCatalogOrganizationCode="" xmlns="http://www.sterlingcommerce.com/documentation/YCM/getCategoryDetails/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
				The item category master table. 
					<Validation>
                        <Condition>
						Either <code>CategoryKey</code> or {<code>CategoryPath</code> and <code>OrganizationCode</code>} must be passed and be valid. If not passed or not valid:
						</Condition>
                        <Error Description="Category Not Found" ErrorCode="YCM0034"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Locale" Name="DisplayLocalizedFieldInLocale">
                <Description>
                    <div>
						The locale for which output should be returned in. Locale should be passed in the standard format of "language_country_variant" (e.g., "fr_FR", "en_US_CA", etc.).
					</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <ItemAttributeGroupTypeList>
        <yfc:includeInParent IncludeXMLChildNodes="Y"
            IncludeXMLFileName="YCM_getItemDetails_input.xml" IncludeXMLPath="/Item/ItemAttributeGroupTypeList"/>
        <yfc:doc>
            <Element>
                <Description>
                    <div>
				A list of ItemAttributeGroupType can be passed to be used as filter criteria to control the item attribute group types to return in the output XML.
				</div>
                </Description>
            </Element>
        </yfc:doc>
        <ItemAttributeGroupType ClassificationPurposeCode=""
            ItemAttributeGroupType="" yfc:DTDOccurrence="ZeroOrMany"/>
    </ItemAttributeGroupTypeList>
</Category>
