<AppeasementOffers xmlns="http://www.sterlingcommerce.com/documentation/YCD/provideAppeasementAsGiftCardUE/input">
    <Order DocumentType="" EnterpriseCode="" OrderHeaderKey="Required" OrderNo="">
        <AppeasementReason ReasonCode="">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Text-40" Name="ReasonCode">
                        <Description>
                            <div>
										The reason of appeasement.
									</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </AppeasementReason>
        <OrderLines>
            <OrderLine OrderLineKey="Required" OrderedQty="">
                <LinePriceInfo ActualPricingQty="" LineTotal=""
                    OrderedPricingQty="" UnitPrice=""/>
                <LineOverallTotals Charges="" Discount=""
                    ExtendedPrice="" LineTotal="" OptionPrice=""
                    PricingQty="" Tax="" UnitPrice="">
                    <yfc:doc>
                        <Element>
                            <Description>
                                <div>
									Contains information about the price and total amount details for the order line.
									</div>
                            </Description>
                        </Element>
                        <Attributes>
                            <Attribute DataType="Money" Name="Charges">
                                <Description>Charges.
											</Description>
                            </Attribute>
                            <Attribute DataType="Money" Name="Discount">
                                <Description>Discount amount.
											</Description>
                            </Attribute>
                            <Attribute DataType="Money" Name="ExtendedPrice">
                                <Description>Extended price.
											</Description>
                            </Attribute>
                            <Attribute DataType="Money" Name="LineTotal">
                                <Description>Line total amount.
											</Description>
                            </Attribute>
                            <Attribute DataType="Money" Name="OptionPrice">
                                <Description>Total Option amount for the line.
											</Description>
                            </Attribute>
                            <Attribute DataType="Quantity" Name="PricingQty">
                                <Description>Pricing Quantity.
											</Description>
                            </Attribute>
                            <Attribute DataType="Money" Name="Tax">
                                <Description>Tax amount.
											</Description>
                            </Attribute>
                            <Attribute DataType="Money" Name="UnitPrice">
                                <Description>Unit price.
											</Description>
                            </Attribute>
                        </Attributes>
                    </yfc:doc>
                </LineOverallTotals>
            </OrderLine>
        </OrderLines>
        <PriceInfo Currency="" TotalAmount=""/>
        <OverallTotals GrandCharges="" GrandDiscount="" GrandTax=""
            GrandTotal="" HdrCharges="" HdrDiscount="" HdrTax=""
            HdrTotal="" LineSubTotal="">
            <yfc:doc>
                <Element>
                    <Description>
                        <div>
						  Contains information about the price and total amount details for the order.
						  </div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute DataType="Money" Name="GrandCharges">
                        <Description>
                            <div>
							  Total Charges
							  </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="GrandDiscount">
                        <Description>
                            <div>
							  Total Discount
							  </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="GrandTax">
                        <Description>
                            <div>
							  Grand total Tax Amount for the order
							  </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="GrandTotal">
                        <Description>
                            <div>
							  Grand total amount for the Order
							  </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="HdrCharges">
                        <Description>
                            <div>
							  Order Header Level Charges
							  </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="HdrDiscount">
                        <Description>
                            <div>
							  Order Header Level Discount
							  </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="HdrTax">
                        <Description>
                            <div>
							  Order Header Level Tax
							  </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="HdrTotal">
                        <Description>
                            <div>
							  Order Header Level Total amount
							  </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="LineSubTotal">
                        <Description>
                            <div>
							  Sub Total amount for all the lines
							  </div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </OverallTotals>
        <GiftCard Currency="" ExpiryDate="" GiftCardNo="" GiftCardValue="">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Currency" Name="Currency">
                        <Description>
                            <div>
								The Currency in which the gift card has been issued.
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Date" Name="ExpiryDate">
                        <Description>
                            <div>
								Expiry date for the gift card
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-40" Name="GiftCardNo">
                        <Description>
                            <div>
								The unique identifier for the gift card.
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Money" Name="GiftCardValue">
                        <Description>
                            <div>
								The total value of the gift card.
							</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </GiftCard>
