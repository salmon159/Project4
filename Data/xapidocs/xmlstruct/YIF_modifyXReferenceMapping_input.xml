<!-- Valid values for ACTION = "LIST", "CREATE", "MODIFY", "DELETE" -->
<XrefMappings Action="Required" xmlns="http://www.sterlingcommerce.com/documentation/YIF/modifyXReferenceMapping/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
					The input document root node should contain a node <code>XrefData</code> with <code>XmlName</code> as the attribute.	
				</div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="String" Name="Action">
                <Description>
				Valid values for Action are "LIST", "CREATE", "MODIFY", or "DELETE".
				</Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <!-- One XrefMapping record for "LIST" -->
    <!-- One or more XrefMapping records for "CREATE","MODIFY","DELETE" -->
    <!-- The requirements for attributes is same as that for any entity API. -->
    <XrefMapping FromCode1Name="" FromCode1Value="" FromCode2Name=""
        FromCode2Value="" FromCode3Name="" FromCode3Value=""
        FromCode4Name="" FromCode4Value="" FromCodeDescription=""
        FromOrganizationCode="" FromSystemName="" ToCode1Name=""
        ToCode1Value="" ToCode2Name="" ToCode2Value="" ToCode3Name=""
        ToCode3Value="" ToCode4Name="" ToCode4Value=""
        ToCodeDescription="" ToOrganizationCode="" ToSystemName="" XrefMappingKey="">
        <yfc:doc>
            <Element>
                <Description>
                    <div>
						This table lists all the cross-reference code mappings used by the nomenclature transformation engine.
						<br>One <code>XrefMapping</code> record for <b>
                                <code>LIST</code>
                            </b>; one or more <code>XrefMapping</code> records for <b>
                                <code>CREATE</code>
                            </b>, <b>
                                <code>MODIFY</code>
                            </b>, or <b>
                                <code>DELETE</code>
                            </b>.</br>
						The requirements for attributes are the same as those for any entity API.
					</div>
                </Description>
            </Element>
        </yfc:doc>
    </XrefMapping>
</XrefMappings>
