<!--manageOpportunity Input XML-->
<Opportunity Action="" BillToID="" BuyerContactAddressKey=""
    BuyerOrganizationCode="" CoOwnerUserID="" CurrencyValue=""
    CustomerContactID="" Description="" DocumentType=""
    EnterpriseCode="Required" ExpectedCloseDate="" LeadOrigin=""
    LostReasonCode="" OpportunityDate="" OpportunityID=""
    OpportunityKey="" OpportunityName="" OwnerUserID="" PipelineKey=""
    PrimaryQuoteKey="" ProbableSuccessRate="" TeamCode="" xmlns="http://www.sterlingcommerce.com/documentation/OMP/manageOpportunity/input">
    <yfc:includeInParent IncludeXMLChildNodes="Y"
        IncludeXMLFileName="MasterOpportunityInput.xml" IncludeXMLPath="/Opportunity"/>
    <yfc:includeInParent IncludeXMLChildNodes="Y"
        IncludeXMLFileName="MasterOpportunity.xml" IncludeXMLPath="/Opportunity"/>
    <yfc:doc>
        <Element EntityName="Opportunity">
            <Description>
                <div>
			This tables stores an opportunity. An opportunity is a sales opportunity that a sales representative foresees and is used to keep track of multiple quotes that will be presented to a specific buyer. Any of these quotes can be negotiated upon but only one of these quotes can be accepted by the buyer, thereby permanently rejecting all other quotes. The opportunity will be closed once an order is created from the buyer selected quote.
			<Validation>
                        <Condition>Input document is invalid.
				</Condition>
                        <Error
                            Description="Input document is empty or contains invalid data." ErrorCode="YFS10363"/>
                    </Validation>
                    <Validation>
                        <Condition>Mandated parameters missing.
				</Condition>
                        <Error
                            Description="Mandatory Parameters for the Operation are missing." ErrorCode="YFS10364"/>
                    </Validation>
                    <Validation>
                        <Condition>Opportunity record already existed.
				</Condition>
                        <Error Description="Record Already Exists" ErrorCode="YCP0051"/>
                    </Validation>
                    <Validation>
                        <Condition>Event template not found.
				</Condition>
                        <Error
                            Description="Template xml for raising event not found" ErrorCode="YFS10429"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Action" Name="Action">
                <Description>
                    <div>
			 Action to take.
			 <br/>Valid Values:
				<br/>
                        <code>MANAGE</code> - Creates a new record if it does not exist, or modifies an existing record if it does.
				<br/>
                        <code>CREATE</code> - Creates a new record.
				<br/>
                        <code>MODIFY</code> - Change values in an existing record.
				<br/>
                        <code>CANCEL</code> - Moves existing opportunity to <code>LOST</code> or 1000.030 equivalent status.
				<br/>The default behavior is Manage. 
		   </div>
                </Description>
            </Attribute>
            <Attribute DataType="Text-24" Name="BuyerContactAddressKey">
                <Description>
                    <div>
			The buyer's contact address. For new records, the <code>BuyerContactAddressKey</code> is the bill to address key 
			defaulted from the customer contact address. If customer contact is not available, the customer account address is
			used, otherwise obtaining from the buyer organization default address.
			</div>
                </Description>
            </Attribute>
            <Attribute DataType="OrgCode" Name="BuyerOrganizationCode">
                <Description>
                    <div>
			The buyer organization that is associated with this opportunity. This must be a valid organization defined in the system.
			<Validation>
                            <Condition>
                                <code>BuyerOrganizationCode</code> must be valid in the configuration
				</Condition>
                            <Error
                                Description="Invalid Buyer Organization" ErrorCode="YFS10368"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="ID-40" Name="CoOwnerUserID">
                <Description>
                    <div>
			The co-owner user is a user who jointly owns this opportunity with the orginal owner user.
			<Validation>
                            <Condition>Invalid User identifiers passed.
				</Condition>
                            <Error
                                Description="Invalid User identifiers passed." ErrorCode="YCP0084"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="ID-40" Name="CustomerContactID">
                <Description>
                    <div>
			This is the customer contact ID for the opportunity. This field maps to contact ID field of YFS_Customer_Contact.
			<Validation>
                            <Condition>Invalid Contact Identifier.
				</Condition>
                            <Error
                                Description="YFS: Invalid Customer Id" ErrorCode="YFS10319"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Text-40" Name="DocumentType">
                <Description>
                    <div>
			The document type that is associated with this opportunity. For example, Opportunity document (0020). OpportunityID, DocumentType, EnterpriseCode are required attributes to uniquely identify an opportunity.
			<Validation>
                            <Condition>
                                <code>DocumentType</code> must be defined in the configuration
				</Condition>
                            <Error Description="Invalid Document Type" ErrorCode="YFS10367"/>
                        </Validation>
                        <Validation>
                            <Condition>Opportunity record does not exist.
				</Condition>
                            <Error Description="YCP:No Record Found." ErrorCode="YCP0045"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="OrgCode" Name="EnterpriseCode">
                <Description>
                    <div>
			The enterprise code. This field is a part of an opportunity's unique key. The EnterpriseCode, DocumentType and OpportunityID together uniquely identify an opportunity. <br/>Default value: <code>DEFAULT</code>
                        <Validation>
                            <Condition>
                                <code>EnterpriseCode</code> must be valid in the configuration
				</Condition>
                            <Error
                                Description="YFS:Invalid Enterprise Code" ErrorCode="YFS10113"/>
                        </Validation>
                        <Validation>
                            <Condition>Opportunity record does not exist.
				</Condition>
                            <Error Description="YCP:No Record Found." ErrorCode="YCP0045"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="ID-40" Name="OpportunityID">
                <Description>
                    <div>
			The identification number of the opportunity, which is required during opportunity creation. If not passed the <code>OpportunityID</code> generates based on a system rule setting or from the user exit implementation. Whenever modification is required, <code>OpportunityID</code> is mandatory. OpportunityID, DocumentType, EnterpriseCode are required attributes to uniquely identify an opportunity.
			<Validation>
                            <Condition>Mandatory parameter missing.
				</Condition>
                            <Error Description="YCP:No Record Found." ErrorCode="YCP0045"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="ID-40" Name="OwnerUserID">
                <Description>
                    <div>
			The user in which this opportunity is assigned to.
			<Validation>
                            <Condition>Invalid User identifiers passed.
				</Condition>
                            <Error
                                Description="Invalid User identifiers passed." ErrorCode="YCP0084"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <PrimaryQuote DocumentType="" EnterpriseCode="" OrderNo="">
        <yfc:doc>
            <Element EntityName="Order_Header"/>
        </yfc:doc>
    </PrimaryQuote>
    <BuyerContactAddress AddressID="" AddressLine1="" AddressLine2=""
        AddressLine3="" AddressLine4="" AddressLine5="" AddressLine6=""
        AlternateEmailID="" Beeper="" City="" Company="" Country=""
        DayFaxNo="" DayPhone="" Department="" EMailID="" EveningFaxNo=""
        EveningPhone="" FirstName="" IsAddressVerified=""
        IsCommercialAddress="" JobTitle="" LastName="" Latitude=""
        Longitude="" MiddleName="" MobilePhone="" OtherPhone=""
        PersonID="" PersonInfoKey="" State="" Suffix="" TaxGeoCode=""
        Title="" ZipCode=""/>
    <Notes>
        <Note AuditTransactionId="" ContactReference="" ContactTime=""
            ContactType="" ContactUser="" CustomerSatIndicator=""
            NoteText="Required" Priority="" ReasonCode="" SequenceNo=""
            Tranid="" VisibleToAll="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element EntityName="Notes"/>
            </yfc:doc>
        </Note>
    </Notes>
    <CustomAttributes>
        <yfc:doc>
            <Element EntityName="Opportunity_Extension"/>
        </yfc:doc>
    </CustomAttributes>
</Opportunity>
