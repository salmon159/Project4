<ComputePriceForItem Currency="Required" ItemGroupCode=""
    ItemID="Required" OrganizationCode="Conditional"
    PriceProgramKey="Conditional" PriceProgramName="Conditional"
    PricingDate="" ProductClass="" Quantity="" Uom="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/computePriceForItem/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
                    <Validation>
                        <Condition>
						This element must be passed as the root node. If not:
						</Condition>
                        <Error
                            Description="Input document is empty or contains invalid data" ErrorCode="YFS10363"/>
                    </Validation>
                    <Validation>
                        <Condition>
						Either <code>PriceProgramKey</code> or both {<code>OrganizationCode</code> and <code>PriceProgramName</code> must be passed. If not passed:
						</Condition>
                        <Error
                            Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364"/>
                    </Validation>
                    <Validation>
                        <Condition>
						The input criteria passed must retrieve a price program. If not:
						</Condition>
                        <Error Description="Price program not set up" ErrorCode="YFS10496"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Currency" Name="Currency">
                <Description>
                    <div>
					Currency.
						<Validation>
                            <Condition>
							This attribute must be passed. If not passed:
							</Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="ItemGroupCode" Name="ItemGroupCode">
                <Description>Indiactes whether the price list is for a Product, Delivery or Service Line.</Description>
            </Attribute>
            <Attribute DataType="ItemID" Name="ItemID">
                <Description>
                    <div>
					An item for which a price set is maintained.
						<Validation>
                            <Condition>
							This attribute must be passed. If not passed:
							</Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="OrgCode" Name="OrganizationCode">
                <Description>Organization for which price program is created.</Description>
            </Attribute>
            <Attribute DataType="Key" Name="PriceProgramKey">
                <Description>Primary key that identifies a price program.</Description>
            </Attribute>
            <Attribute DataType="Text-40" Name="PriceProgramName">
                <Description>The price program used for pricing the order.</Description>
            </Attribute>
            <Attribute DataType="Date" Name="PricingDate">
                <Description>
                    <div>
					This is the date used by the pricing engine when pricing this line. If <code>PricingDate</code> is not passed, it is defaulted to the current system date.
					</div>
                </Description>
            </Attribute>
            <Attribute DataType="ProductClass" Name="ProductClass">
                <Description>Product class of an item.</Description>
            </Attribute>
            <Attribute DataType="Quantity" Name="Quantity">
                <Description>Quantity for which the price/item is requested</Description>
            </Attribute>
            <Attribute DataType="UOM" Name="Uom">
                <Description>Item's Unit of measure.</Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <PersonInfo AddressLine6="" City="" Country="" State="" ZipCode="">
        <yfc:doc>
            <Element EntityName="Person_Info">
                <Description>
                    <div>
					The location for which the price is requested. The <code>queryType</code> attribute cannot be passed for any of the input attributes. If this element is passed, <code>Country</code> is mandatory.
					<Validation>
                            <Condition>
						If <code>Country</code> is not passed or invalid:
						</Condition>
                            <Error Description="Invalid Country" ErrorCode="YCP0129"/>
                        </Validation>
                    </div>
                </Description>
            </Element>
        </yfc:doc>
    </PersonInfo>
</ComputePriceForItem>
