<!--recordInvoiceCreation Input XML-->
<OrderInvoice Currency="" DateInvoiced="" DocumentType=""
    EnterpriseCode="" InvoiceNo="" InvoiceType="Required"
    MasterInvoiceNo="" OrderHeaderKey="" OrderNo="" Reference1=""
    SellerOrganizationCode="" ShipNode="" ShipmentKey="" ShipmentNo=""
    UseOrderLineCharges="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/recordInvoiceCreation/input">
    <yfc:doc>
        <Element EntityName="Order_Invoice">
            <Description>
                <div>
			Contains data related to an order invoice.
				<Validation>
                        <Condition>
                            <code>OrderHeaderKey</code>, <code>ShipmentKey</code> or the unique attributes and DocumentType for an Order or a Shipment must be passed and must be valid.
				</Condition>
                        <Error
                            Description="Either Order or Shipment information has to be passed." ErrorCode="OMP10062"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Text-40" Name="InvoiceType">
                <Description>
                    <div>
				Classifies an invoice.
				<br/>Valid Values:  <b>
                            <code>DEBIT_MEMO</code>
                        </b>, 
					<b>
                            <code>CREDIT_MEMO</code>
                        </b>, 
					<b>
                            <code>PRO_FORMA</code>
                        </b>, 
					or <b>
                            <code>INFO</code>
                        </b>
                        <Validation>
                            <Condition>Valid value must be passed.
					</Condition>
                            <Error Description="Invalid Invoice Type." ErrorCode="OMP10064"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="UseOrderLineCharges">
                <Description>
                    <div>
				If set to 'Y' the API will ignore the charges passed as input to this API unless there is no associated order.
				If will process the invoice with the charges on the order line instead.
				If set to 'N' the API will ignore any charges on the order lines being invoiced and will only use charges passed to this API.
				<br/>Default: <b>
                            <code>Y</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <TaxBreakupList>
        <yfc:doc>
            <Element EntityName="Tax_Breakup"/>
        </yfc:doc>
        <TaxBreakup ChargeCategory="" ChargeName="" Reference1=""
            Reference2="" Reference3="" Tax="" TaxName=""
            TaxPercentage="" yfc:DTDOccurrence="ZeroOrMany"/>
    </TaxBreakupList>
    <LineDetails>
        <LineDetail ItemID="" OrderLineKey="" PrimeLineNo=""
            ProductClass="" Quantity="Required" SubLineNo=""
            UnitOfMeasure="" UnitPrice="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element EntityName="Order_Invoice_Detail">
                    <Description>
                        <div>
					Contains data related to an order invoice line.
						<Validation>
                                <Condition>
                                    <code>OrderLineKey</code> must be passed and must be valid.
						</Condition>
                                <Error Description="" ErrorCode=""/>
                            </Validation>
                        </div>
                    </Description>
                </Element>
            </yfc:doc>
            <LineDetailTranQuantity Quantity="" TransactionalUOM="">
                <yfc:doc>
                    <Attributes>
                        <Attribute DataType="Quantity" Name="Quantity">
                            <Description>
                                <div>
						  Quantity being invoiced.
						  </div>
                            </Description>
                        </Attribute>
                        <Attribute DataType="UOM" Name="TransactionalUOM">
                            <Description>
                                <div>
						  UOM on which all the transactional quantities are specified.
						  </div>
                            </Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </LineDetailTranQuantity>
            <LineChargeList>
                <LineCharge ChargeCategory="" ChargeName=""
                    ChargePerLine="" ChargePerUnit="" Reference="" yfc:DTDOccurrence="ZeroOrMany">
                    <yfc:doc>
                        <Element EntityName="Line_Charges"/>
                    </yfc:doc>
                </LineCharge>
            </LineChargeList>
            <LineTaxList>
                <LineTax ChargeCategory="" ChargeName="" Reference1=""
                    Reference2="" Reference3="" Tax="" TaxName=""
                    TaxPercentage="" yfc:DTDOccurrence="ZeroOrMany">
                    <yfc:doc>
                        <Element EntityName="Tax_Breakup"/>
                    </yfc:doc>
                </LineTax>
            </LineTaxList>
        </LineDetail>
    </LineDetails>
    <HeaderChargeList>
        <HeaderCharge ChargeAmount="" ChargeCategory="" ChargeName=""
            Reference="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element EntityName="Header_Charges"/>
            </yfc:doc>
        </HeaderCharge>
    </HeaderChargeList>
</OrderInvoice>
