<OverrideResourcePoolCapacity TransactInWorkDay="" xmlns="http://www.sterlingcommerce.com/documentation/INV/CAPACITY_CHANGE/ON_OVERRIDE_CAPACITY">
    <yfc:includeInParent IncludeXMLChildNodes="Y"
        IncludeXMLFileName="INV_overrideResourcePoolCapacity_input.xml" IncludeXMLPath="/OverrideResourcePoolCapacity"/>
    <yfc:doc>
        <Element>
            <Description>
                <div>
					This is a mandatory element. 
					<Validation>
                        <Condition> If the correct root element <code>OverrideResourcePoolCapacity</code> is not passed:</Condition>
                        <Error Description="Invalid Root Node" ErrorCode="INV10003"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Flag" Name="TransactInWorkDay">
                <Description>
                    <div>
					Applicable for resource pools with purpose <code>
                            <b>WMS-RP</b>
                        </code>. The flag indicates whether the capacities are defined in terms of Work Day defined at the node or not.<br>
					Valid values: <b>
                                <code>Y</code>
                            </b> or <b>
                                <code>N</code>
                            </b>
                        </br>
					If no value is passed, the default is <b>
                            <code>N</code>
                        </b>.
					</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <ResourcePools yfc:DTDOccurrence="REQUIRED">
        <yfc:doc>
            <Element>
                <Description>
                    <div>
						This is a mandatory element.
					</div>
                </Description>
            </Element>
        </yfc:doc>
        <!-- Either ResourcePoolKey or Node + CapacityOrganizationCode + ResourcePoolId must be passed. -->
        <ResourcePool CapacityOrganizationCode="" Node=""
            ResourcePoolId="" ResourcePoolKey="" yfc:DTDOccurrence="OneOrMany">
            <yfc:doc>
                <Element>
                    <Description>
                        <div>
							This is a mandatory element. A resource pool represents a collection of resources for providing services. The resources represented by a resource pool should have common characteristics (for example, regions serviced and skill sets). Capacity for providing services is maintained at a against a Resource Pool.
							<Validation>
                                <Condition> If either <code>ResourcePoolKey</code> or <code>ResourcePoolId</code> + <code>Node</code> + <code>CapacityOrganizationCode</code> are not passed:</Condition>
                                <Error
                                    Description="Missing Mandatory Attributes" ErrorCode="INV10008"/>
                                <Error
                                    Description="Invalid Resource Pool" ErrorCode="INV10014"/>
                            </Validation>
                            <Validation>
                                <Condition> If Resource Pool defines Resources</Condition>
                                <Error
                                    Description="Cannot override capacity of resource pool which maintains capacity at the resource level." ErrorCode="INV71_5"/>
                            </Validation>
                        </div>
                    </Description>
                </Element>
            </yfc:doc>
            <ServiceSlots yfc:DTDOccurrence="REQUIRED">
                <yfc:doc>
                    <Element>
                        <Description>
                            <div>
								This is a mandatory element.
							</div>
                        </Description>
                    </Element>
                </yfc:doc>
                <!--- StartTime and EndTime are mandatory -->
                <ServiceSlot EndTime="" StartTime="" yfc:DTDOccurrence="OneOrMany">
                    <yfc:doc>
                        <Element EntityName="Service_Slot">
                            <Description>
                                <div>
									This is a mandatory element. This table contains the list of service slots for a Slot Group.
									<Validation>
                                    <Condition> If <code>StartTime</code> and <code>EndTime</code> are not passed:</Condition>
                                    <Error
                                    Description="Missing Mandatory Attributes" ErrorCode="INV10008"/>
                                    </Validation>
                                </div>
                            </Description>
                        </Element>
                        <Attributes>
                            <Attribute EntityName="Service_Slot" Name="EndTime">
                                <Description>EndTime of the service slot.</Description>
                            </Attribute>
                            <Attribute EntityName="Service_Slot" Name="StartTime">
                                <Description>StartTime of the service slot.</Description>
                            </Attribute>
                        </Attributes>
                    </yfc:doc>
                    <Dates yfc:DTDOccurrence="REQUIRED">
                        <yfc:doc>
                            <Element>
                                <Description>
                                    <div>
										This is a mandatory element.
									</div>
                                </Description>
                            </Element>
                        </yfc:doc>
                        <!--- Date is mandatory.  If Capacity is not passed, it will not be overridden and Date will be ignored. -->
                        <Date Capacity="" CapacityUnitOfMeasure=""
                            Date="" OverrideReason=""
                            SupplementalCapacity="" yfc:DTDOccurrence="OneOrMany">
                            <yfc:doc>
                                <Element>
                                    <Description>
                                    <div>
											This is a mandatory element.
											<Validation>
                                    <Condition> If <code>Date</code> is not passed:
															<br>If <code>Capacity</code> is not passed, it is not overridden and <code>Date</code> is ignored.</br>
                                    </Condition>
                                    <Error
                                    Description="Missing Mandatory Attributes" ErrorCode="INV10008"/>
                                    </Validation>
                                    </div>
                                    </Description>
                                </Element>
                                <Attributes>
                                    <Attribute
                                    EntityName="Res_Pool_Capcty_Override" Name="Capacity">
                                    <Description>
                                    <div>
											Amount of capacity to override.
											<Validation>
                                    <Condition> If <code>Capacity</code> is negative.
												</Condition>
                                    <Error
                                    Description="Invalid capacity." ErrorCode="INV71_8"/>
                                    </Validation>
                                    </div>
                                    </Description>
                                    </Attribute>
                                    <Attribute DataType="Text-24" Name="CapacityUnitOfMeasure">
                                    <Description>The capacity unit of measure in which capacity is overridden. If this attribute is not passed, it is assumed to be the resource pool's primary unit of measure.</Description>
                                    </Attribute>
                                    <Attribute
                                    EntityName="Res_Pool_Capcty_Override" Name="Date">
                                    <Description>Date to override.</Description>
                                    </Attribute>
                                    <Attribute
                                    EntityName="Res_Pool_Capcty_Override"
                                    Name="OverrideReason" NameInEntity="Override_Reason">
                                    <Description>
                                    <div>
												The reason this capacity was overridden.
											</div>
                                    </Description>
                                    </Attribute>
                                    <Attribute
                                    EntityName="Res_Pool_Capcty_Override"
                                    Name="SupplementalCapacity" NameInEntity="Supplemental_Capacity">
                                    <Description>
                                    <div>
											Amount of supplemental capacity to override.
											<Validation>
                                    <Condition> If <code>SupplementalCapacity</code> is negative.
												</Condition>
                                    <Error
                                    Description="Invalid capacity." ErrorCode="INV71_8"/>
                                    </Validation>
                                    </div>
                                    </Description>
                                    </Attribute>
                                </Attributes>
                            </yfc:doc>
                        </Date>
                    </Dates>
                </ServiceSlot>
            </ServiceSlots>
        </ResourcePool>
    </ResourcePools>
</OverrideResourcePoolCapacity>
