<!-- Either OrganizationCode or ShipNode must be passed. -->
<PendingAdjustment FromDate="" ItemID="Required" OrganizationCode=""
    ProductClass="" ShipNode="" ToDate="" UnitOfMeasure="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/getPendingAdjustments/input">
    <yfc:doc>
        <Element EntityName="Inventory_Pending_Adj">
            <Description>
                <div>
				Inventory costing related table. Stores adjustments that have not been posted yet for costing purposes.
					<Validation>
                        <Condition>
						Either <code>OrganizationCode</code> or <code>ShipNode</code> must be passed. If not passed:
						</Condition>
                        <Error
                            Description="Invalid ship node.  Ship node or organization is mandatory." ErrorCode="YFS10048"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute EntityName="Inventory_Pending_Adj"
                Name="FromDate" NameInEntity="Adjustment_Date"/>
            <Attribute EntityName="Inventory_Item" Name="ItemID">
                <Description>
                    <div>
				Item Identification.
					<Validation>
                            <Condition>
						If <code>ItemID</code> is not passed:
						</Condition>
                            <Error Description="Blank ItemID" ErrorCode="YFS10047"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="OrgCode" Name="OrganizationCode">
                <Description>
                    <div>
					If <code>OrganizationCode</code> is passed, the ship nodes owned by this organization are considered.
						<Validation>
                            <Condition>
                                <code>OrganizationCode</code>, if passed, should be a valid organization. If not a valid organization:
							</Condition>
                            <Error Description="Invalid Organization" ErrorCode="YFS10395"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item" Name="ProductClass"/>
            <Attribute EntityName="Inventory_Pending_Adj"
                Name="ShipNode" NameInEntity="Shipnode_Key">
                <Description>
                    <div>
					If <code>ShipNode</code> is passed, all open adjustments for this ship node are considered.
						<Validation>
                            <Condition>
                                <code>ShipNode</code>, if passed, should be a valid ship node. If not a valid ship node:
							</Condition>
                            <Error Description="Invalid ship node" ErrorCode="YFS10048"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Inventory_Pending_Adj" Name="ToDate" NameInEntity="Adjustment_Date"/>
            <Attribute EntityName="Inventory_Item" Name="UnitOfMeasure"/>
        </Attributes>
    </yfc:doc>
</PendingAdjustment>
