<SendMail xmlns="http://www.sterlingcommerce.com/documentation/YCP/sendMail/input">
    <MessageHeader FromAddress="" MailHost="" MailPort=""
        MailProtocol="" SubjectText="" TemplateFile="">
        <yfc:doc>
            <Attributes>
                <Attribute EntityName="Person_Info" Name="FromAddress" NameInEntity="Emailid">
                    <Description>An email id </Description>
                </Attribute>
                <Attribute DataType="Text-100" Name="MailHost">
                    <Description>A mail host </Description>
                </Attribute>
                <Attribute DataType="Text-100" Name="MailPort">
                    <Description>Port used for mailing</Description>
                </Attribute>
                <Attribute DataType="Text-100" Name="MailProtocol">
                    <Description>Protocol used for mailing</Description>
                </Attribute>
                <Attribute DataType="Text-100" Name="SubjectText">
                    <Description>Mail's Subject field</Description>
                </Attribute>
                <Attribute DataType="Text-100" Name="TemplateFile">
                    <Description>Name of the template file</Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <ToAddresses>
            <ToAddress EmailID="" yfc:DTDOccurrence="ZeroOrMany">
                <yfc:doc>
                    <Attributes>
                        <Attribute EntityName="Person_Info"
                            Name="EmailID" NameInEntity="Emailid">
                            <Description>An email id </Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </ToAddress>
        </ToAddresses>
        <CCAddresses>
            <CCAddress EmailID="" yfc:DTDOccurrence="ZeroOrMany">
                <yfc:doc>
                    <Attributes>
                        <Attribute EntityName="Person_Info"
                            Name="EmailID" NameInEntity="Emailid">
                            <Description>An email id </Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </CCAddress>
        </CCAddresses>
        <BCCAddresses>
            <BCCAddress EmailID="" yfc:DTDOccurrence="ZeroOrMany">
                <yfc:doc>
                    <Attributes>
                        <Attribute EntityName="Person_Info"
                            Name="EmailID" NameInEntity="Emailid">
                            <Description>An email id </Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </BCCAddress>
        </BCCAddresses>
    </MessageHeader>
    <!-- Message Text:- If the TemplateFile is specified, the value of Message text will be used for use with the templatefile.
        If templateFile is a XSL file, Append the root element of the input Message Data Document as child of MessageDetail node.
	If templateFile is a MLT file, Append the Name=Value pairs of information as NodeValue of the MessageDetail Node. Each of the Name=Value pair should be separated by '&amp;'.
   -->
    <!-- If MLT file used: To resolve 'Name' provided in MessageDetail, '#YFS_' should be passed in MLT file. -->
    <!-- Eg: Lets say FirstName=CustomerFirstName is passed in MessageDetail.  |#YFS_FirstName| in MLT file will be replaced by 'CustomerFirstName' -->
    <MessageDetail>PCDATA</MessageDetail>
</SendMail>
