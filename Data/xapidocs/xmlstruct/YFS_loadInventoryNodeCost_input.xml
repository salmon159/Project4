<!--loadInventoryNodeCost Input XML-->
<Items xmlns="http://www.sterlingcommerce.com/documentation/YFS/loadInventoryNodeCost/input">
    <Item ItemID="Required" OrganizationCode="Required" ProductClass=""
        ShipNode="" UnitOfMeasure="" yfc:DTDOccurrence="ZeroOrMany">
        <yfc:doc>
            <Element>
                <Description>
                    <div>
                        <Validation>
                            <Condition>
                Inventory Cost data for the item at the node is available in the system.
              </Condition>
                            <Error
                                Description="Cost details are already available for the given Item/ShipNode." ErrorCode="YFS10534 "/>
                        </Validation>
                    </div>
                </Description>
            </Element>
            <Attributes>
                <Attribute EntityName="Inventory_Item" Name="ItemID">
                    <Description>
                        <div>
              The Item ID for which the inventory item value has to be loaded. 
              <Validation>
                                <Condition>
                  The Item ID should be passed
                </Condition>
                                <Error
                                    Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364 "/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute DataType="OrgCode" Name="OrganizationCode">
                    <Description>
                        <div>
              Organization Code of the organization maintaining the inventory.
              <Validation>
                                <Condition>
                  The value should be passed
                </Condition>
                                <Error
                                    Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364"/>
                            </Validation>
                            <Validation>
                                <Condition>
                  The organization code must be valid
                </Condition>
                                <Error
                                    Description="Invalid Organization Code" ErrorCode="YFS10395"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Item" Name="ProductClass">
                    <Description>Product Class of the item for which inventory value has to be loaded. 
          </Description>
                </Attribute>
                <Attribute DataType="ShipNode" Name="ShipNode">
                    <Description>
                        <div>
              Ship Node for which inventory value has to be adjusted.
              <Validation>
                                <Condition>
                  The ship node should be passed
                </Condition>
                                <Error
                                    Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364 "/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Item" Name="UnitOfMeasure">
                    <Description>Unit Of Measure of the item for which inventory value has to be loaded. 
          </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <Nodes>
            <Node AverageCost="" Operation="" Quantity=""
                ShipNode="Required" yfc:DTDOccurrence="ZeroOrMany">
                <yfc:doc>
                    <Attributes>
                        <Attribute DataType="UnitPrice" Name="AverageCost">
                            <Description>Average Cost of the item at the shipnode.
              				</Description>
                        </Attribute>
                        <Attribute DataType="Action" Name="Operation">
                            <Description>
                                <div>
									Operation to perform. If this attribute is not passed or if value is not passed as <code>Manage</code>, creates a new record if it does not exist.
									<br/>Valid Value: 
									<br/>
                                    <b>
                                    <code>Manage</code>
                                    </b> - Creates a new record if it does not exist, or modifies an existing record if it does.
								</div>
                            </Description>
                        </Attribute>
                        <Attribute DataType="Quantity" Name="Quantity">
                            <Description>
                                <div>
                  Quantity for which inventory value has to be loaded. 
                  If the input element doesn't contain this attribute and if value for <code>Operation</code> is passed as <code>Manage</code>, then value of <code>Quantity</code> will be set to the current onhand quantity. 
                  If this attribute is passed, value should be equal to the current on-hand inventory for the item/shipnode.
                  <Validation>
                                    <Condition>
                      The quantity must be greater than zero
                    </Condition>
                                    <Error
                                    Description="Quantity should be equal to the current on-hand quantity for the item/shipnode." ErrorCode="YFS10533"/>
                                    </Validation>
                                </div>
                            </Description>
                        </Attribute>
                        <Attribute DataType="ShipNode" Name="ShipNode">
                            <Description>Ship Node for which inventory value has to be loaded.
              				</Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </Node>
        </Nodes>
    </Item>
</Items>
