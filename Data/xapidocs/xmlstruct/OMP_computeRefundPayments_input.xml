<Order DocumentType="" EnterpriseCode="" OrderHeaderKey="" OrderNo=""
    SegregateBlindRefund="Y|N" xmlns="http://www.sterlingcommerce.com/documentation/OMP/computeRefundPayments/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="Flag" Name="SegregateBlindRefund">
                <Description>
                    <p>Determines whether the API should consider blind order lines separately for refunding.</p>
					Default: <b>
                        <code>N</code>
                    </b>
                    <br/>
                    <u>Valid Values</u>
                    <br/>
                    <b>
                        <code>Y</code>
                    </b> - Refund blind order line total to default refund payment method configured in the system.
					<br/>
                    <b>
                        <code>N</code>
                    </b> - Do not differenciate blind order lines and associated order lines for refund. 
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</Order>
