<!-- getXrefItemDetails Input XML -->
<Item DisplayLocalizedFieldInLocale="" FromItemID="Required"
    FromOrganizationCode="Required" FromUOM="Required"
    InheritAttributesFromClassification="" SubCatalogOrganizationCode=""
    ToOrganizationCode="Required" xmlns="http://www.sterlingcommerce.com/documentation/YCM/getXrefItemDetails/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
			The Primary Item table. Stores product information.
				<Validation>
                        <Condition>
                            <code>FromItemID</code>, <code>FromOrganizationCode</code>, <code>FromUOM</code>, <code>ToOrganizationCode</code> attributes must be passed. If not passed:
					</Condition>
                        <Error
                            Description="Missing mandatory parameters" ErrorCode="YCM0002"/>
                    </Validation>
                    <Validation>
                        <Condition>
                            <code>GlobalItemId</code> should be defined for the <code>FromItem</code>. If not defined:
					</Condition>
                        <Error
                            Description="GlobalItemId is not found for item" ErrorCode="YCM0056"/>
                    </Validation>
                    <Validation>
                        <Condition>
					The <code>FromItem</code> and the <code>XrefItem</code> should be found. If <code>FromItem</code> or <code>XrefItem</code> not found:
					</Condition>
                        <Error Description="Item not found" ErrorCode="YCM0033"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Locale" Name="DisplayLocalizedFieldInLocale">
                <Description>
                    <div>
						The locale for which output should be returned in. Locale should be passed in the standard format of "language_country_variant" (e.g., "fr_FR", "en_US_CA", etc.).
					</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Item" Name="FromItemID" NameInEntity="Item_Id">
                <Description>
                    <div>
                        <code>ItemID</code> of the item that will be used to get the reference from.
				</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Item" Name="FromOrganizationCode" NameInEntity="Organization_Code">
                <Description>Organization of the item that will be used to get the reference from.</Description>
            </Attribute>
            <Attribute EntityName="Item" Name="FromUOM" NameInEntity="Uom">
                <Description>Unit of measure of the item that will be used to get the reference from.</Description>
            </Attribute>
            <Attribute EntityName="Item" Name="ToOrganizationCode" NameInEntity="Organization_Code">
                <Description>Organization to which item's cross-referenced information has been established.  Details of the item that belongs to this organization will be retrieved.</Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</Item>
