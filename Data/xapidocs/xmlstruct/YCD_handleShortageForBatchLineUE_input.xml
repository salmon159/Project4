<StoreBatch BatchNo="" OrganizationCode="" StoreBatchKey="Required" xmlns="http://www.sterlingcommerce.com/documentation/YCD/handleShortageForBatchLineUE/input">
    <yfc:doc>
        <Element EntityName="Store_Batch"/>
        <Attributes>
            <Attribute EntityName="Store_Batch" Name="BatchNo" NameInEntity="Batch_No"/>
            <Attribute EntityName="Store_Batch" Name="OrganizationCode" NameInEntity="Organization_Code"/>
            <Attribute EntityName="Store_Batch" Name="StoreBatchKey" NameInEntity="Store_Batch_key">
                <Description>
                    <div>
					Unique Identifier for a Batch
						<Validation>
                            <Condition>
                                <code>StoreBatchKey OR OrganizationCode,BatchNo</code> should be passed.
							</Condition>
                            <Error Description="Invalid Batch" ErrorCode="YCD00081"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <Item ItemID="" ItemKey="Required" OrganizationCode=""
        ProductClass="" ShortageReason="Required" UnitOfMeasure="">
        <yfc:doc>
            <Attributes>
                <Attribute EntityName="Item" Name="ItemID" NameInEntity="Item_Id"/>
                <Attribute DataType="String" Name="ProductClass"/>
                <Attribute EntityName="Common_Code"
                    Name="ShortageReason" NameInEntity="Code_Value">
                    <Description>
                        <div>
                            <Validation>
                                <Condition>ShortageReason is not passed
						</Condition>
                                <Error
                                    Description="ShortageReason is mandatory " ErrorCode="YCD00070"/>
                            </Validation>
                        </div>
                        <div>
                            <Validation>
                                <Condition>Unique Identifiers for Item should be passed
						</Condition>
                                <Error Description="Item does not exist" ErrorCode="YCM711_002"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Item" Name="UnitOfMeasure" NameInEntity="Uom"/>
            </Attributes>
        </yfc:doc>
    </Item>
    <ShipmentLines>
        <ShipmentLine OrganizationCode="" ShipmentKey=""
            ShipmentLineKey="Required" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element EntityName="Shipment_Line"/>
                <Attributes>
                    <Attribute DataType="String" Name="OrganizationCode"/>
                </Attributes>
            </yfc:doc>
        </ShipmentLine>
    </ShipmentLines>
</StoreBatch>
