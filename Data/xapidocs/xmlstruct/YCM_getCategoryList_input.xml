<!-- getCategoryList Input XML -->
<Category AuthenticationKey="" AuthorizedSubCatalogOrganizationCode=""
    CategoryDomainKey="" CategoryDomainKeyQryType="" CategoryID=""
    CategoryIDQryType="" Description="" DescriptionQryType=""
    DisplayLocalizedFieldInLocale="" FromCategoryDomainKey=""
    FromCategoryID="" FromDescription="" FromOrganizationCode=""
    FromParentCategoryKey="" GetUnpublishedCategories=""
    MaximumRecords="" OrganizationCode="" OrganizationCodeQryType=""
    ParentCategoryKey="" ParentCategoryKeyQryType="" SequenceNo=""
    StartCategoryKey="" SubCatalogOrganizationCode=""
    ToCategoryDomainKey="" ToCategoryID="" ToDescription=""
    ToOrganizationCode="" ToParentCategoryKey="" UserOrganizationCode="" xmlns="http://www.sterlingcommerce.com/documentation/YCM/getCategoryList/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="Key" Name="AuthenticationKey">
                <Description>No logic around this flag currently.</Description>
            </Attribute>
            <Attribute DataType="Locale" Name="DisplayLocalizedFieldInLocale">
                <Description>
                    <div>
						The locale for which output should be returned in. Locale should be passed in the standard format of "language_country_variant" (e.g., "fr_FR", "en_US_CA", etc.).
					</div>
                </Description>
            </Attribute>
            <Attribute DataType="Boolean" Name="GetUnpublishedCategories">
                <Description>
                    <div>
					Indicates if unpublished categories need to be listed.<br>
					If this attribute is passed as <b>
                                <code>Y</code>
                            </b>, the API returns categories in unpublished status as well as categories in published status.</br>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="ListMaxRecordCount" Name="MaximumRecords">
                <Description>
                    <div>
					Maximum number of records requested for output.<br>
					If this attribute is not passed, the API returns the first 10 categories.</br>
                    </div>
                </Description>
            </Attribute>
            <Attribute Name="OrganizationCode">
                <Description>
                    <div>
					The Organization defining a category.<br>
					If this attribute is passed, categories maintained by this Organization are returned. Here, Organization is the organization that maintains the catalog.</br>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Category" Name="StartCategoryKey" NameInEntity="Category_Key">
                <Description>To start from a particular Category key</Description>
            </Attribute>
            <Attribute EntityName="Organization"
                Name="UserOrganizationCode" NameInEntity="Organization_Code">
                <Description>
                    <div>
					The user's Organization used as a fallback to determine the catalog organization.<br>
					This attribute is considered only if <code>OrganizationCode</code> is not passed.</br>
					If this attribute is passed, categories are returned for the catalog organization of the passed User Organization.
						<Validation>
                            <Condition>
							Must be a valid organization. If not valid:
							</Condition>
                            <Error
                                Description="Invalid Organization Code" ErrorCode="YCM0019"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</Category>
