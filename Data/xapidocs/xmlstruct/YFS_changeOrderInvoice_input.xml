<!-- changeOrderInvoice Input XML -->
<OrderInvoice EnterpriseCode="" InvoiceNo="" OrderInvoiceKey=""
    Status="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/changeOrderInvoice/input">
    <yfc:doc>
        <Element EntityName="Order_Invoice">
            <Description>
                <div>
			Stores order invoices belonging to an order.
			<Validation>
                        <Condition>The <code>OrderInvoiceKey</code> attribute must be passed and must be valid.
				</Condition>
                        <Error Description="Blank Invoice Key." ErrorCode="YFS10275"/>
                    </Validation>
                    <Validation>
                        <Condition>The <code>InvoiceNo</code> or <code>Status</code> attributes if passed must be valid.
				</Condition>
                        <Error
                            Description="Only invoice number, status or extended attributes can be changed." ErrorCode="OMP10061"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="ID-15" Name="Status">
                <Description>
                    <div>Invoice status.
			<Validation>
                            <Condition>The new <code>Status</code> must be 00 (Created) or 01 (Published).
				</Condition>
                            <Error Description="Invalid Status" ErrorCode="YFS10235"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <LineDetails>
        <LineDetail OrderInvoiceDetailKey="">
            <yfc:doc>
                <Element EntityName="Order_Invoice_Detail">
                    <Description>
                        <div>
                            <code>LineDetail</code> modifies existing invoice line details. 
					<Validation>
                                <Condition>The <code>OrderInvoiceDetailKey</code> attribute  must be passed and must be valid.     
						</Condition>
                                <Error
                                    Description="Blank invoice line key." ErrorCode="OMP10060"/>
                                <Error
                                    Description="Only extended attributes can be changed." ErrorCode="OMP10061"/>
                            </Validation>
                        </div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute DataType="Key" Name="OrderInvoiceDetailKey">
                        <Description>Primary key attribute of YFS_ORDER_INVOICE_DETAIL. 
					</Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </LineDetail>
    </LineDetails>
</OrderInvoice>
