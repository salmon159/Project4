<InventoryActivity CreateForInvItemsAtNode="N|Y" DistributionRuleId=""
    ItemID="Required" Node="" OrganizationCode="Required"
    ProcessedFlag="" ProductClass="" Purpose="" UnitOfMeasure="" xmlns="http://www.sterlingcommerce.com/documentation/INV/createInventoryActivity/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
				Inventory activity represents inventory items whose supplies or demands had been adjusted.
					<Validation>
                        <Condition>
                         	If CreateForInvItemsAtNode="N", <code>OrganizationCode</code> and <code>ItemID</code> are required.
						</Condition>
                        <Error
                            Description="Missing mandatory parameters." ErrorCode="YFS10364"/>
                    </Validation>
                    <Validation>
                        <Condition>
							If CreateForInvItemsAtNode="N", valid inventory item information is required.
						</Condition>
                        <Error Description="Invalid item." ErrorCode="YFS10437"/>
                    </Validation>
                    <Validation>
                        <Condition>
                            If CreateForInvItemsAtNode="Y", <code>OrganizationCode</code> and <code>Node</code> are required.
						</Condition>
                        <Error
                            Description="Missing mandatory parameters." ErrorCode="YFS10364"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Flag" Name="CreateForInvItemsAtNode">
                <Description>
                    <div>Indicates if inventory activity to be created for inventory items of <code>Node</code>,<code>Organization</code>.
						<br/>Default: <b>
                            <code>N</code>
                        </b>
                        <br/>Valid Values: <b>
                            <code>N</code>
                        </b> or <b>
                            <code>Y</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Distribution_Rule"
                Name="DistributionRuleId" NameInEntity="Distribution_Rule_Id">
                <Description>
                    <div>
                        <code>DistributionRuleId</code> can be passed so that inventory activity will be created with the provided item for all nodes configured within the distribution rule.  If both <code>DistributionRuleId</code> and <code>Node</code> are passed, inventory activity will only be created for the <code>Node</code>.
					</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item" Name="ItemID" NameInEntity="Item_Id"/>
            <Attribute EntityName="Inventory_Activity" Name="Node" NameInEntity="Node_Key">
                <Description>
                    <div>
					The node where inventory changes occur.
						<Validation>
                            <Condition>
							Invalid <code>Node</code> passed.
							</Condition>
                            <Error Description="Invalid Ship Node." ErrorCode="YFS10048"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item"
                Name="OrganizationCode" NameInEntity="Organization_Code"/>
            <Attribute EntityName="Inventory_Activity"
                Name="ProcessedFlag" NameInEntity="Processed_Flag">
                <Description>
                    <Description>
						The flag indicates whether this inventory activity has been picked up for processing by the Real-Time Availability Monitor.  Valid values: [F,N] Default: N
						<br/>Specify:<br/>
                        <b>
                            <code>F</code>
                        </b> for Force Publish. Indicating that inventory activity has not been processed and the Real-Time Availability Monitor should publish the availability picture regardless whether it has changed from the previously published availability.<br/>
                        <b>
                            <code>N</code>
                        </b> otherwise. 
					</Description>
                </Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item" Name="ProductClass" NameInEntity="Product_Class"/>
            <Attribute EntityName="Inventory_Item" Name="UnitOfMeasure" NameInEntity="Uom"/>
        </Attributes>
    </yfc:doc>
</InventoryActivity>
