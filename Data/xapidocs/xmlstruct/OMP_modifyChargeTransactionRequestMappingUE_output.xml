<!-- ctr element shown only once with blindAmt, ctrkey due to issue.. to fix. -->
<Mapping KeepExistingMapping="Y|N" xmlns="http://www.sterlingcommerce.com/documentation/OMP/modifyChargeTransactionRequestMappingUE/output">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="Flag" Name="KeepExistingMapping">
                <Description>
	            	If KeepExistingMapping="Y", then system defined mapping is used. Passing root element and this attribute will be sufficient to use system defined mapping.
	            	Default value is "N".
		    	</Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <InvoiceList>
        <OrderInvoice BlindCreationAmount="" OrderInvoiceKey="" yfc:GroupName="InvoiceList:OrderInvoice">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Money" Name="BlindCreationAmount">
                        <Description>
		            	BlindCreationAmount is the amount that settlement will be attempted for without authorization.
			    	</Description>
                    </Attribute>
                    <Attribute EntityName="Order_Invoice"
                        Name="OrderInvoiceKey" NameInEntity="Order_Invoice_Key"/>
                </Attributes>
            </yfc:doc>
            <ChargeTransactionRequest ChargeTransactionRequestKey="" yfc:GroupName="InvoiceList:OrderInvoice:ChargeTransactionRequest">
                <yfc:doc>
                    <Attributes>
                        <Attribute
                            EntityName="Charge_Transaction_Request"
                            Name="ChargeTransactionRequestKey" NameInEntity="Charge_Tran_Request_Key"/>
                    </Attributes>
                </yfc:doc>
            </ChargeTransactionRequest>
            <ChargeTransactionList>
                <ChargeTransaction ChargeTransactionKey="" MappedAmount="">
                    <yfc:doc>
                        <Attributes>
                            <Attribute EntityName="Charge_Transaction"
                                Name="ChargeTransactionKey" NameInEntity="Charge_Transaction_Key"/>
                            <Attribute DataType="Money" Name="MappedAmount">
                                <Description>
				            	The amount that is mapped.
					    	</Description>
                            </Attribute>
                        </Attributes>
                    </yfc:doc>
                </ChargeTransaction>
            </ChargeTransactionList>
        </OrderInvoice>
    </InvoiceList>
    <NegativeInvoiceList>
        <OrderInvoice BlindCreationAmount="" OrderInvoiceKey="" yfc:GroupName="NegativeInvoiceList:OrderInvoice">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Money" Name="BlindCreationAmount">
                        <Description>
		            	BlindCreationAmount is the amount that refund will be attempted for.
			    	</Description>
                    </Attribute>
                    <Attribute EntityName="Order_Invoice"
                        Name="OrderInvoiceKey" NameInEntity="Order_Invoice_Key"/>
                </Attributes>
            </yfc:doc>
            <ChargeTransactionList>
                <ChargeTransaction ChargeTransactionKey="" MappedAmount="">
                    <yfc:doc>
                        <Attributes>
                            <Attribute EntityName="Charge_Transaction"
                                Name="ChargeTransactionKey" NameInEntity="Charge_Transaction_Key"/>
                            <Attribute DataType="Money" Name="MappedAmount">
                                <Description>
				            	The amount that is mapped.
					    	</Description>
                            </Attribute>
                        </Attributes>
                    </yfc:doc>
                </ChargeTransaction>
            </ChargeTransactionList>
        </OrderInvoice>
    </NegativeInvoiceList>
    <PresettledAmount BlindCreationAmount="">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="Money" Name="BlindCreationAmount">
                    <Description>
			            	BlindCreationAmount is the amount that settlement will be attempted for.
				    	</Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <ChargeTransactionList>
            <ChargeTransaction ChargeTransactionKey="" MappedAmount="">
                <yfc:doc>
                    <Attributes>
                        <Attribute EntityName="Charge_Transaction"
                            Name="ChargeTransactionKey" NameInEntity="Charge_Transaction_Key"/>
                        <Attribute DataType="Money" Name="MappedAmount">
                            <Description>
				            	The amount that is mapped.
					    	</Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </ChargeTransaction>
        </ChargeTransactionList>
        <ChargeTransactionRequestList>
            <ChargeTransactionRequest ChargeTransactionRequestKey=""
                PresettledMappedTotal="" yfc:GroupName="PresettledAmount:ChargeTransactionRequestList:ChargeTransactionRequest">
                <yfc:doc>
                    <Attributes>
                        <Attribute
                            EntityName="Charge_Transaction_Request"
                            Name="ChargeTransactionRequestKey" NameInEntity="Charge_Tran_Request_Key"/>
                        <Attribute DataType="Money" Name="PresettledMappedTotal">
                            <Description>
						            	PresettledMappedTotal is how much is mapped to Presettled.
							    	</Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </ChargeTransactionRequest>
        </ChargeTransactionRequestList>
    </PresettledAmount>
    <ChargeTransactionRequestList>
        <yfc:doc>
            <Element>
                <Description>
                    <div>
					In this list, exclude - 
						(1) all ChargeTransactionRequests in the InvoiceList element, 
						(2) the ChargeTransactionRequests that are completely mapped in the PresettledAmount element.
					NOTE: The ChargeTransactionRequests that are not completely mapped in PresettledAmount element, can be mapped here for the RemainingAmount.
				</div>
                </Description>
            </Element>
        </yfc:doc>
        <ChargeTransactionRequest BlindCreationAmount=""
            ChargeTransactionRequestKey="" yfc:GroupName="ChargeTransactionRequestList:ChargeTransactionRequest">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Money" Name="BlindCreationAmount">
                        <Description>
			            	BlindCreationAmount is the amount that new authorization will be attempted for.
				    	</Description>
                    </Attribute>
                    <Attribute EntityName="Charge_Transaction_Request"
                        Name="ChargeTransactionRequestKey" NameInEntity="Charge_Tran_Request_Key"/>
                </Attributes>
            </yfc:doc>
            <ChargeTransactionList>
                <ChargeTransaction ChargeTransactionKey="" MappedAmount="">
                    <yfc:doc>
                        <Attributes>
                            <Attribute EntityName="Charge_Transaction"
                                Name="ChargeTransactionKey" NameInEntity="Charge_Transaction_Key"/>
                            <Attribute DataType="Money" Name="MappedAmount">
                                <Description>
				            	The amount that is mapped.
					    	</Description>
                            </Attribute>
                        </Attributes>
                    </yfc:doc>
                </ChargeTransaction>
            </ChargeTransactionList>
        </ChargeTransactionRequest>
    </ChargeTransactionRequestList>
    <OrderRemainder BlindCreationAmount="">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="Money" Name="BlindCreationAmount">
                    <Description>
			            	BlindCreationAmount is the amount that new authorization will be attempted for.
				    	</Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
        <ChargeTransactionList>
            <ChargeTransaction ChargeTransactionKey="" MappedAmount="">
                <yfc:doc>
                    <Attributes>
                        <Attribute EntityName="Charge_Transaction"
                            Name="ChargeTransactionKey" NameInEntity="Charge_Transaction_Key"/>
                        <Attribute DataType="Money" Name="MappedAmount">
                            <Description>
				            	The amount that is mapped.
					    	</Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </ChargeTransaction>
        </ChargeTransactionList>
    </OrderRemainder>
</Mapping>
