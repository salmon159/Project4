<Availability CallingOrganizationCode="Required" DistanceToConsider=""
    DistanceUOMToConsider="" NumberOfClosestNodesToConsider=""
    OnlyConsiderAvailableCache="N|Y" xmlns="http://www.sterlingcommerce.com/documentation/OMP/getAvailabilityCache/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="OrgCode" Name="CallingOrganizationCode">
                <Description>
                    <div>The organization for which items and cached availability will be inquired.
					<Validation>
                            <Condition>Must be an existing organization.</Condition>
                            <Error Description="Invalid organization." ErrorCode="YFS10395"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Distance" Name="DistanceToConsider">
                <Description>
                    <div>Indicates radius within which nodes can be considered for cached availbility. 
				</div>
                </Description>
            </Attribute>
            <Attribute DataType="UOM" Name="DistanceUOMToConsider">
                <Description>
                    <div>Indicates radius unit of measure.
					<Validation>
                            <Condition>An invalid UOM was specified.</Condition>
                            <Error
                                Description="Invalid Distance UOM Specified" ErrorCode="YCP77_00005"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Count" Name="NumberOfClosestNodesToConsider">
                <Description>If passed, only the closest number of nodes with availability will be returned.</Description>
            </Attribute>
            <Attribute DataType="Flag" Name="OnlyConsiderAvailableCache">
                <Description>Determines whether all cache (<code>YFS_INVENTORY_ALERTS</code>) data should be considered.
            		 Default: N.</Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <ShipToAddress AddressLine1="" AddressLine2="" AddressLine3=""
        AddressLine4="" AddressLine5="" AddressLine6="" City=""
        Country="" IsCommercialAddress="" Latitude="" Longitude=""
        PersonID="" State="" TaxGeoCode="" ZipCode="">
        <yfc:doc>
            <Element EntityName="Person_Info"/>
        </yfc:doc>
    </ShipToAddress>
    <Lines>
        <Line DeliveryMethod="" ItemID="Required" LineID="Required"
            ProductClass="" UnitOfMeasure="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Attributes>
                    <Attribute EntityName="Inventory_Alerts" Name="DeliveryMethod">
                        <Description>Delivery method for alerts.  Only alerts with specified delivery method are returned, SHP is used by default if not specified.</Description>
                    </Attribute>
                    <Attribute EntityName="Inventory_Item" Name="ItemID"/>
                    <Attribute DataType="Identifier" Name="LineID">
                        <Description>
                            <div>The unique identifier for this line.
							<Validation>
                                    <Condition>
                                    <code>LineID</code> passed is a duplicate of an existing line.</Condition>
                                    <Error
                                    Description="Duplicate LineId specified." ErrorCode="OMP940_002"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute EntityName="Inventory_Item" Name="ProductClass"/>
                    <Attribute EntityName="Inventory_Item" Name="UnitOfMeasure"/>
                </Attributes>
            </yfc:doc>
        </Line>
    </Lines>
</Availability>
