<getResourcesForUser ApplicationCode="" Loginid="" ResourceId=""
    ResourceKey="" UserKey="" xmlns="http://www.sterlingcommerce.com/documentation/YCP/getResourcesForUser/input">
    <yfc:doc>
        <Element EntityName="User">
            <Description>
                <div>
			Identifies the user and/or resource from which to retrieve the information.  Keys are used first if provided. If all the resources for the user are needed in a hierarchical fashion, do not send the resource attributes.
			<Validation>
                        <Condition>The <code>UserKey</code> or <code>Loginid</code> attribute must be passed. If not passed:
				</Condition>
                        <Error
                            Description="YFS: UserKey or Loginid Missing." ErrorCode="YCP0078"/>
                    </Validation>
                    <Validation>
                        <Condition>The <code>UserKey</code> or <code>Loginid</code> must be valid. If not valid: 
				</Condition>
                        <Error
                            Description="YFS: Invalid User identifiers passed." ErrorCode="YCP0084"/>
                    </Validation>
                    <Validation>
                        <Condition>The <code>ResourceKey</code> or <code>ResourceId</code> must be valid. If not valid:
				</Condition>
                        <Error
                            Description="YFS: Invalid Resource Identifiers." ErrorCode="YCP0094"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute EntityName="Resource" Name="ApplicationCode">
                <Description>
                    <div>
						The Application Code of the resource. Valid values are <b>
                            <code>cmn</code>
                        </b>, <b>
                            <code>inv</code>
                        </b>, <b>
                            <code>omd</code>
                        </b>, <b>
                            <code>omr</code>
                        </b>, <b>
                            <code>oms</code>
                        </b>, <b>
                            <code>vas</code>
                        </b>, <b>
                            <code>wms</code>
                        </b>, <b>
                            <code>ycm</code>
                        </b>, <b>
                            <code>ycp</code>
                        </b>, <b>
                            <code>ydm</code>
                        </b>, and blank.
					</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Resource" Name="ResourceId"/>
            <Attribute EntityName="Resource" Name="ResourceKey"/>
        </Attributes>
    </yfc:doc>
</getResourcesForUser>
