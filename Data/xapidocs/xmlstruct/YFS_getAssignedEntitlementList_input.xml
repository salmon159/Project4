<EntitlementRuleAssignment CallingOrganizationCode="" CustomerID=""
    CustomerLevel="" CustomerType="" OrganizationCode="Required"
    Region="" RelationshipType="" Vertical="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/getAssignedEntitlementList/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
					The API to get entitlement rules assigned to a specific customer
					    <Validation>
                        <Condition>
                            <code>OrganizationCode</code> of the organization that customer belongs to must be passed. If not passed:
                            </Condition>
                        <Error
                            Description="Mandatory parameters for the operation are missing" ErrorCode="YCM0002"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute EntityName="Organization"
                Name="CallingOrganizationCode" NameInEntity="Organization_Code">
                <Description>Calling Organization used to determine enterprise that manages the entitlement rule.</Description>
            </Attribute>
            <Attribute Name="CustomerType">
                <Description>
                    <div> The type of customer.
						<br/>Valid Values:
						<br/>01 - for B2B customer
						<br/>02 - for B2C customer
						<br/>03 - for anonymous customer 
						<br/>04 - for everyone
					</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <ShipToAddress AddressLine1="" AddressLine2="" AddressLine3=""
        AddressLine4="" AddressLine5="" AddressLine6=""
        AlternateEmailID="" Beeper="" City="" Company="" Country=""
        DayFaxNo="" DayPhone="" Department="" EMailID="" ErrorTxt=""
        EveningFaxNo="" EveningPhone="" FirstName="" HttpUrl=""
        IsCommercialAddress="" JobTitle="" LastName="" MiddleName=""
        MobilePhone="" OtherPhone="" PersonID="" PersonInfoKey=""
        PreferredShipAddress="" State="" Suffix="" TaxGeoCode=""
        Title="" UseCount="" VerificationStatus="" ZipCode="">
        <yfc:includeInParent IncludeXMLChildNodes="Y"
            IncludeXMLFileName="YFS_Person_Info_master.xml" IncludeXMLPath="/Address"/>
        <yfc:doc>
            <Element EntityName="Person_Info">
                <Description>
					The address to be used when getting region schema for entitlements.  This address will be used to determine a region to which entitlements are assigned. 
				</Description>
            </Element>
        </yfc:doc>
    </ShipToAddress>
</EntitlementRuleAssignment>
