<!--reserveItemInventoryList Input XML-->
<!--ReservationID Mandatory-->
<!--ItemDetails Mandatory-->
<!--One of QtyToBeReserved or QtyToBeCancelled should be passed -->
<!--QtyToBeReserved NonZero positive value-->
<!--ShipDate If not passed system date is assumed-->
<!--Acceptable values for ReserveIfPartial 'Y'/'N'.Default is 'N'-->
<!--Acceptable values for CheckInventory 'Y'/'N'.Default is 'Y'-->
<ReserveItemInventoryList ApplyFutureSafetyFactor=""
    ApplyOnhandSafetyFactor="" CheckInventory=""
    ConsiderInventoryNodeControl="" DemandUpdateOnlyMode=""
    PublishedTime="" ReservationTS="" ReserveIfPartial="" TotalDemand="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/reserveItemInventoryList/input">
    <yfc:doc>
        <Element EntityName="Inventory_Reservation">
            <Description>
                <div>
                Stores reservation information about multiple items.
                <Validation>
                        <Condition>Item's inventory picture is being marked as incorrect at the specified shipnode and <code>ConsiderInventoryNodeControl</code> flag is passed as <code>Y</code> or not passed or passed as blank.
                    </Condition>
                        <Error
                            Description="Cannot create reservation against a node/item combination for which inventory picture is being marked as incorrect." ErrorCode="INV10033_55SP1"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Flag" Name="ApplyFutureSafetyFactor">
                <Description>
                    <div>
			This flag indicates that future safety factor should be applied in future availability calculation of the item at the node with a node type that has <code>ApplyFutureSafetyFactor</code> = <code>
                            <b>Y</b>
                        </code>.
			<br/>Default: <b>
                            <code>Y</code>
                        </b>
                        <br/>Valid Values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="ApplyOnhandSafetyFactor">
                <Description>
                    <div>
			This flag indicates that on-hand safety factor should be applied in current availability calculation of the item at the node with a node type that has <code>ApplyOnhandSafetyFactor</code> = <code>
                            <b>Y</b>
                        </code>.
			<br/>Default: <b>
                            <code>Y</code>
                        </b>
                        <br/>Valid Values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="CheckInventory">
                <Description>
                    <div>
			Indicates whether the requested quantity passed in QtyToBeReserved is reserved without looking for inventory availability.
			<br/>Default: <b>
                            <code>Y</code>
                        </b> - <i>Check Inventory</i>
                        <br/>Valid Values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="ConsiderInventoryNodeControl">
                <Description>
                    <div>
                Indicates whether inventory of the item at the node that is marked incorrect has to be considered.
				<br/>Valid Values: <b>
                            <code/>
                        </b> or <b>
                            <code>N</code>
                        </b> or <b>
                            <code>Y</code>
                        </b>
                        <br/>Default:<b>
                            <code/>
                        </b>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="String" Name="DemandUpdateOnlyMode"/>
            <Attribute DataType="TimeStamp" Name="PublishedTime">
                <Description>
                    <div>
			Time when the reservation is created/updated. Adjustments will not be made for PublishedTime less then last published time.
                    <br/>Default: <b>
                            <code>Null</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="ReserveIfPartial">
                <Description>
                    <div>
			Indicates if the reservation should be made if only part of the quantity requested can be reserved. If passed as
			<code>Y</code>, the available quantity is reserved. If <code>N</code>, the reservation is not made.
			<br/>Default: <b>
                            <code>N</code>
                        </b>
                        <br/>Valid Values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="TotalDemand">
                <Description>
                    <div>
			Indicates the if current resrvetaion is total demand for this Reservation ID
			<br/>Default: <b>
                            <code>N</code>
                        </b> - <i>Total Demand</i>
                        <br/>Valid Values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <ReserveItemInventory DeliveryMethod="" DemandType=""
        ExpirationDate="" IsShipNodeRequired="" ItemID="Required"
        ItemOrganizationCode="" MinShipByDate=""
        OrganizationCode="Required" ProductClass=""
        QtyToBeCancelled="Conditional" QtyToBeReserved="Conditional"
        ReservationID="Required" ReservationPool=""
        ReservationPoolType="" ShipDate="" ShipNode=""
        SynchDemandExpirationDateOnly="" UnitOfMeasure="" yfc:DTDOccurrence="OneOrMany">
        <yfc:doc>
            <Element EntityName="Inventory_Reservation">
                <Description>
                    <div>
                Stores reservation information about an item.
                <Validation>
                            <Condition>Item's inventory picture is being marked as incorrect at the specified shipnode.
                    </Condition>
                            <Error
                                Description="Cannot create reservation against a node/item combination for which inventory picture is being marked as incorrect." ErrorCode="INV10033_55SP1"/>
                        </Validation>
                    </div>
                </Description>
            </Element>
            <Attributes>
                <Attribute DataType="Text-40" Name="DeliveryMethod">
                    <Description>
                        <div>
		Posible values include Delivery <b>DEL</b>, Ship <b>SHP</b> or Pick Up <b>PICK</b>
                            <br/>
                            <br/>With Inventory Visibility (IV) integration enabled this attribute is ignored.
		</div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Reservation"
                    Name="DemandType" NameInEntity="Demand_Type">
                    <Description>
                        <div>
			Inventory is reserved with the value passed in <code>DemandType</code>. If there is no supply for this demand type, an  error is thrown.
			<br/>Default: <b>
                                <code>RESERVED</code>
                            </b>
                        </div>
                        <br/>
                        <br/>
                        <div>
                            <b>With Inventory Visibility (IV) integration phase 2 enabled</b>, the value of this attribute is passed to IV reservations API. IV may throw error if this demand type is not supported in IV.
      			<br/>Default: <b>
                                <code>OPEN_ORDER</code>
                            </b>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Reservation"
                    Name="ExpirationDate" NameInEntity="Expiration_Date">
                    <Description>
                        <div>
			Expiration date for the reservation.  If not pass and the <code>DEFAULT_RESERVATION_EXPIRATION_TIME</code> rule is setup with a value greater than 0, the expiration date will be calculated as ship date + <code>DEFAULT_RESERVATION_EXPIRATION_TIME</code>.
			<br/>Default: High Date.
			<br/>If more quantities are added to an existing reservation, the <code>ExpirationDate</code> will be recalculated.
          <br/>
                            <br/>
                            <b>With Inventory Visibility (IV) integration enabled</b>,
          <br/>this <code>ExpirationDate</code> will be converted into minutes beyond the current time before calling IV reservations API. The number of minutes will be passed as reservation expiration duration to the IV API. If the value of <code>ExpirationDate</code> is found to be older than the current time then an error with code <code>IVADP0001</code> is thrown.
          <br/> If no <code>ExpirationDate</code> is passed and the DEFAULT_RESERVATION_EXPIRATION_TIME rule is setup with a value greater than 0, then the same will be converted into minutes and passed as reservation expiration duration to the IV reservation API. If the rule is not setup or does not have a value greater than 0, then a default reservation expiration duration of <code>120</code> minutes is passed to the IV API.
			</div>
                    </Description>
                </Attribute>
                <Attribute DataType="Flag" Name="IsShipNodeRequired">
                    <Description>
                        <div>
				Indicates if <code>ShipNode</code> is required to reserve the inventory. Demands can be created without <code>ShipNode</code> only for umpromised demand type. When <code>ShipNode</code> is passed <code>IsShipNodeRequired</code> is defaulted to <code>Y</code>
                            <br/>Default: <b>
                                <code>Y</code>
                            </b>
                            <br/>Valid Values: <b>
                                <code>Y</code>
                            </b> or <b>
                                <code>N</code>
                            </b>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Item" Name="ItemID"/>
                <Attribute EntityName="Item" Name="ItemOrganizationCode" NameInEntity="Organization_Code"/>
                <Attribute Name="MinShipByDate">
                    <Description>
                        <div>
                            <br/>
                            <br/>With Inventory Visibility (IV) integration enabled this attribute is ignored.
				</div>
                    </Description>
                </Attribute>
                <Attribute DataType="OrgCode" Name="OrganizationCode">
                    <Description>
                        <div>
				Inventory rules are read for this organization's inventory consolidator.
				<Validation>
                                <Condition>
                                    <code>OrganizationCode</code> not passed.
					</Condition>
                                <Error
                                    Description="Invalid organization code." ErrorCode="YFS10395"/>
                            </Validation>
                            <Validation>
                                <Condition>
                                    <code>OrganizationCode</code> is invalid.
					</Condition>
                                <Error
                                    Description="Invalid organization code." ErrorCode="YFS10395"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Item" Name="ProductClass"/>
                <Attribute EntityName="Inventory_Reservation"
                    Name="QtyToBeCancelled" NameInEntity="Quantity">
                    <Description>
                        <div>
			How much reserved quantity to cancel. Either <code>QtyToBeReserved</code> or <code>QtyToBeCancelled</code> must be passed.
			If quantity passed is greater then quantity already reserved then only the reserved quantity is cancelled.
                        <Validation>
                                <Condition>Negative number is passed.
					</Condition>
                                <Error
                                    Description="YFS:Invalid Qty To Be Cancelled" ErrorCode="YFS10102"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Reservation"
                    Name="QtyToBeReserved" NameInEntity="Quantity">
                    <Description>
                        <div>
				How much quantity to reserve. Either <code>QtyToBeReserved</code> or <code>QtyToBeCancelled</code> must be passed.
				<Validation>
                                <Condition>If <code>ReserveIfPartial</code> is <b>
                                    <code>N</code>
                                    </b>, and there is not sufficient quantity to meet the requested quantity.
					</Condition>
                                <Error Description="Reservation Failed" ErrorCode="YFS10265"/>
                            </Validation>
                            <Validation>
                                <Condition>If <code>ReserveIfPartial</code> is <b>
                                    <code>Y</code>
                                    </b>, and there is no matching inventory to meet the requested quantity.
					</Condition>
                                <Error Description="Reservation Failed" ErrorCode="YFS10265"/>
                            </Validation>
                            <Validation>
                                <Condition>Negative number is passed.
					</Condition>
                                <Error
                                    Description="YFS:Invalid Qty To Be Reserved" ErrorCode="YFSI100271"/>
                            </Validation>
                            <Validation>
                                <Condition>Neither <code>QtyToBeReserved</code> nor <code>QtyToBeCancelled</code> is passed.
					</Condition>
                                <Error
                                    Description="Quantity must be specified for reservation or cancellation." ErrorCode="YFS10416"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Reservation"
                    Name="ReservationID" NameInEntity="Reservation_Id">
                    <Description>
                        <div>
			Reservation is created for the passed value for <code>ReservationID</code>. The same <code>ReservationID</code> must be passed at the time of creating order if the reservation has to be consumed.
      <br/>
                            <br/>With Inventory Visibility (IV) integration enabled, for creating new reservations in IV, this <code>ReservationID</code> will be passed as <code>reference</code> for calling the IV reservation API.
      <br/>For cancelling existing reservations, this <code>ReservationId</code> can be either of the following
        <br/> 1. Reservation Id of the IV reservation.
        <br/> In this case, the reservation record corresponding to the given IV reservation Id will be fetched. The other input parameters for this api will not be used to match the reservation record obtained from IV because IV reservation Id can be used to uniquely identify a reservation record in IV. If a reservation record is found, it will be cancelled by calling IV reservation API.
        <br/> 2. Reservation reference of the IV reservation.
        <br/> In this case, the reservation record(s) corresponding to the given IV reservation reference will be fetched. There may be multiple reservation records corresponding to a given IV reference hence the input attributes <code>ItemId</code>, <code>ShipNode</code>, <code>ProductClass</code>, <code>UnitOfMeasure</code>, <code>ReservationPool</code> and <code>ReservationPoolType</code> will be used to match against the IV reservation records. The matched reservation records will be cancelled by calling IV reservation API.
			<Validation>
                                <Condition>
                                    <code>ReservationID</code> not passed.
				</Condition>
                                <Error
                                    Description="Blank Reservation ID" ErrorCode="YFS10262"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Reservation"
                    Name="ReservationPool" NameInEntity="Segment"/>
                <Attribute EntityName="Inventory_Reservation"
                    Name="ReservationPoolType" NameInEntity="Segment_Type"/>
                <Attribute Name="ShipDate">
                    <Description>
                        <div>
                            <br/>
                            <br/>With Inventory Visibility (IV) integration enabled this attribute is ignored.
				</div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Reservation"
                    Name="ShipNode" NameInEntity="Shipnode_Key">
                    <Description>
                        <div>
				Inventory availability is calculated for the ship node passed. Refer to <code>IsShipNodeRequired</code> for more details.
				<Validation>
                                <Condition>
                                    <code>ShipNode</code> not passed.
					</Condition>
                                <Error Description="YFS:Void Ship Node" ErrorCode="YFS10049"/>
                            </Validation>
                            <Validation>
                                <Condition>
                                    <code>ShipNode</code> is invalid.
					</Condition>
                                <Error
                                    Description="YFS:Invalid Ship Node" ErrorCode="YFS10048"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute DataType="Flag" Name="SynchDemandExpirationDateOnly">
                    <Description>
                        <div>
				Indicates if <code>ExpirationDate</code> requires update for existing reservation with same reservation id. Value of QtyToBeCancelled and QtyToBeReserved is ignored, when this flag is set to Y.
				<br/>Default: <b>
                                <code>N</code>
                            </b>
                            <br/>Valid Values: <b>
                                <code>Y</code>
                            </b> or <b>
                                <code>N</code>
                            </b>
                            <br/>
                            <br/>With Inventory Visibility (IV) integration enabled this attribute is ignored and is always considered <code>N</code>
                        </div>
                    </Description>
                </Attribute>
                <Attribute EntityName="Inventory_Item" Name="UnitOfMeasure"/>
            </Attributes>
        </yfc:doc>
        <Tag BatchNo="" LotNumber="" RevisionNo="">
            <yfc:doc>
                <Element EntityName="Inventory_Tag"/>
            </yfc:doc>
        </Tag>
    </ReserveItemInventory>
</ReserveItemInventoryList>
