<MonitorItemAvailability DistributionRuleId="" ItemID="Required"
    OrganizationCode="Required" ProductClass=""
    RaiseEventOnAllAvailabilityChanges="" UnitOfMeasure="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/monitorItemAvailability/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="String" Name="DistributionRuleId">
                <Description>The distribution group to use instead of the configured distribution groups used for real
				time availability monitor. Used as an override.</Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item" Name="ItemID">
                <Description>
                    <div>
            The identifer for this inventory item.
               <Validation>
                            <Condition>
					The Item ID should be passed
				  </Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364 "/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="String" EntityName="Inventory_Item" Name="OrganizationCode">
                <Description>
                    <div>
            The code of the organization associated with this inventory item.
               <Validation>
                            <Condition>
					The Organization Code should be passed
				  </Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing" ErrorCode="YFS10364 "/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item" Name="ProductClass"/>
            <Attribute DataType="String" Name="RaiseEventOnAllAvailabilityChanges">
                <Description>
                    <div>
							Whether set to Y or N, REALTIME_AVAILABILITY_CHANGE or REALTIME_AVAILABILITY_CHANGE_LIST event is raised on all availability changes regardless of whether availability exceeds or falls below specified thresholds.Valid values: Y or N. Default value: N.
						</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item" Name="UnitOfMeasure"/>
        </Attributes>
    </yfc:doc>
</MonitorItemAvailability>
