<Awards xmlns="http://www.sterlingcommerce.com/documentation/MasterAwardInput">
    <Award Action="" AwardAmount="" AwardApplied="" AwardId=""
        AwardQuantity="" AwardType="" ChargeCategory="" ChargeName=""
        DenialReason="" Description="" IsFreeGiftAward=""
        PosReasonCode="" PromotionId="" yfc:DTDOccurrence="ZeroOrMany">
        <yfc:doc>
            <Element EntityName="Promotion_Award">
                <Description>
                    <div>
					Awards that are created out of the promotions. A single promotion can result in to multiple awards. AwardId must be passed to identify the award.
			<Validation>
                            <Condition>PromotionId must be passed and it must be a valid one to add the award</Condition>
                            <Error
                                Description="All awards must be associated to a promotion on the order" ErrorCode="OMP77_10003"/>
                        </Validation>
                    </div>
                </Description>
            </Element>
            <Attributes>
                <Attribute DataType="Action" Name="Action">
                    <Description>
                        <div>
					Action to perform on this <code>Award</code>.
					<br/>Default: <code>Null</code> - if not passed awards will be added if not exist or modified.
					<br/>Valid Values: 
						<br/>
                            <b>
                                <code>REMOVE</code>
                            </b> - Removes the award.
					</div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
    </Award>
</Awards>
