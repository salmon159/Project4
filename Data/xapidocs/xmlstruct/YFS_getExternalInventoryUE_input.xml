<!--getExternalInventory Input XML-->
<!--OrderReference will contain OrderHeaderKey if order exists.-->
<Item AggregateSupplyOfNonRequestedTag="Y|N"
    ApplyFutureSafetyFactor="Y|N" ApplyOnhandSafetyFactor="Y|N"
    DemandType="" EnterpriseCode="" FirstShipDate=""
    IgnorePromised="Y|N" IgnoreUnpromised="Y|N" ItemID=""
    LastShipDate="" MinShipByDate="" OrderReference=""
    OrganizationCode="" OwnerOrganizationCode="" ProductClass=""
    TotalRequiredQty="" TransactionId="" UnitOfMeasure="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/getExternalInventoryUE/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="Flag" Name="AggregateSupplyOfNonRequestedTag">
                <Description>
                    <div>
				The <code>AggregateSupplyOfNonRequestedTag</code> flag indicates that external system should aggregate the supplies that are returned unless specific tag information is provided in the input. If the flag is set to Y, supplies should be aggregated irrespective of the tag information. If the flag is set to N, supplies should be returned with the tag information.
				<br/>Default: <b>
                            <code>Y</code>
                        </b>
                        <br/>Valid Values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="ApplyFutureSafetyFactor">
                <Description>
                    <div>
		This flag indicates whether the external system should apply the future safety factor to the availability picture to be returned to the Sterling Selling and Fulfillment Suite system.
		</div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="ApplyOnhandSafetyFactor">
                <Description>
                    <div>
		This flag indicates whether the external system should apply the onhand safety factor to the availability picture to be returned to the Sterling Selling and Fulfillment Suite system.
		</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Inventory_Demand" Name="DemandType" NameInEntity="Demand_Type"/>
            <Attribute EntityName="Item" Name="EnterpriseCode" NameInEntity="Organization_Code"/>
            <Attribute DataType="TimeStamp" Name="FirstShipDate">
                <Description>
                    <div>
		The first ship date to look for availability.
		</div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="IgnorePromised">
                <Description>
                    <div>
		This flag indicates whether to ignore promised demands in the availability picture.
		</div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="IgnoreUnpromised">
                <Description>
                    <div>
		This flag indicates whether to ignore uppromised demands in the availability picture.
		</div>
                </Description>
            </Attribute>
            <Attribute DataType="TimeStamp" Name="LastShipDate">
                <Description>
                    <div>
		The last ship date to look for availability.
		</div>
                </Description>
            </Attribute>
            <Attribute DataType="TimeStamp" Name="MinShipByDate">
                <Description>
                    <div>
            The preferred minimum ship by date of the available supply that promise line can promise against.  Available supply with ship by date earlier than the minimum ship by date will not be considered.
            <br/>Default: None
            </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Order_Header" Name="OrderReference" NameInEntity="Order_Header_Key"/>
            <Attribute EntityName="Ship_Node"
                Name="OwnerOrganizationCode" NameInEntity="Owner_Key">
                <Description>
                    <div>
		The owner organization code of the ship node.
		</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Inventory_Item" Name="ProductClass" NameInEntity="Product_Class"/>
            <Attribute DataType="Quantity" Name="TotalRequiredQty">
                <Description>
                    <div>
		The total required quantity.
		</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Transaction" Name="TransactionId" NameInEntity="Tranid"/>
        </Attributes>
    </yfc:doc>
    <ShipNodes yfc:DTDOccurrence="REQUIRED">
        <ShipNode ShipNode="Required" yfc:DTDOccurrence="OneOrMany">
            <yfc:doc>
                <Attributes>
                    <Attribute EntityName="Inventory_Supply"
                        Name="ShipNode" NameInEntity="Shipnode_Key">
                        <Description>
                            <div>
		The requested ship node.  Requested ship node will not be passed if 'Use My Nodes' is used instead of sourcing rules and node is not manually passed on the line.
		</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </ShipNode>
    </ShipNodes>
    <Tags>
        <Tag BatchNo="" LotAttribute1="" LotAttribute2=""
            LotAttribute3="" LotKeyReference="" LotNumber=""
            ManufacturingDate="" RevisionNo="" TagNumber="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element EntityName="Inventory_Tag"/>
            </yfc:doc>
        </Tag>
    </Tags>
    <Segments>
        <Segment Segment="" SegmentType="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Attributes>
                    <Attribute EntityName="Inventory_Supply"
                        Name="Segment" NameInEntity="Segment">
                        <Description>
                            <div>
		The requested segment.
		</div>
                        </Description>
                    </Attribute>
                    <Attribute EntityName="Inventory_Supply"
                        Name="SegmentType" NameInEntity="Segment_Type">
                        <Description>
                            <div>
		The requested segment type.
		</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </Segment>
    </Segments>
    <CurrentOrderDemands>
        <InventoryDemand DemandShipDate="" DemandType="" Quantity=""
            Segment="" SegmentType="" ShipNode="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element EntityName="Inventory_Demand"/>
            </yfc:doc>
            <Tag BatchNo="" LotAttribute1="" LotAttribute2=""
                LotAttribute3="" LotKeyReference="" LotNumber=""
                ManufacturingDate="" RevisionNo="" TagNumber="">
                <yfc:doc>
                    <Element EntityName="Inventory_Tag"/>
                </yfc:doc>
            </Tag>
        </InventoryDemand>
    </CurrentOrderDemands>
</Item>
