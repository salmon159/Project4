<PromotionUsage CustomerContactID="" CustomerID="" OrderReference=""
    OrganizationCode="Required" SellerOrganizationCode="" xmlns="http://www.sterlingcommerce.com/documentation/YPM/confirmPromotionUsage/input">
    <yfc:doc>
        <Element EntityName="Promotion_Usage">
            <Description>
                <div>
					tracks usage for a promotion
				</div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="OrgCode" Name="OrganizationCode">
                <Description>
                    <div>
						Pricing organization the
						<code>CouponID</code>
						belongs to.
						<Validation>
                            <Condition>
                                <code>OrganizationCode</code>
								must be passed.
							</Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing." ErrorCode="YPM10000"/>
                        </Validation>
                        <Validation>
                            <Condition>
                                <code>OrganizationCode</code>
								is not valid.
							</Condition>
                            <Error
                                Description="YFS:Invalid organization code." ErrorCode="YFS10395"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="OrgCode" Name="SellerOrganizationCode">
                <Description>
                    <div>
						The seller organization
						<Validation>
                            <Condition>
                                <code>SellerOrganizationCode</code>
								is not valid.
							</Condition>
                            <Error
                                Description="YFS:Invalid organization code." ErrorCode="YFS10395"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <Promotion Action="|CREATE|REMOVE" PromotionID="Required"
        PromotionReference="" yfc:DTDOccurrence="OneOrMany">
        <yfc:doc>
            <Element EntityName="Promotion_Usage">
                <Description>
                    <div>
						promotion information
					</div>
                </Description>
            </Element>
            <Attributes>
                <Attribute DataType="Action" Name="Action">
                    <Description>
                        <div>
							Action to perform
							<br/>
							Valid Values:
							<br/>
                            <b>
                                <code>CREATE</code>
                            </b>
							- Creates a new promotion usage record. If record already exists,
							the existing record will be updated
							<br/>
                            <b>
                                <code>REMOVE</code>
                            </b>
							- removes the existing record from the database.
							<br/>
                            <br/>
							The default behavior is
							<b>
                                <code>CREATE</code>
                            </b>
                        </div>
                    </Description>
                </Attribute>
                <Attribute DataType="CouponId" Name="PromotionID">
                    <Description>
                        <div>
							Unique identifier of a coupon.
							<Validation>
                                <Condition>
                                    <code>PromotionID</code>
									must be passed.
								</Condition>
                                <Error
                                    Description="Mandatory Parameters for the Operation are missing." ErrorCode="YPM10000"/>
                            </Validation>
                        </div>
                    </Description>
                </Attribute>
                <Attribute DataType="CouponId" Name="PromotionReference">
                    <Description>
                        <div>
							Unique identifier of a coupon.
						</div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
    </Promotion>
</PromotionUsage>
