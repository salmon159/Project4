<Order DocumentType="" EnterpriseCode="" IgnoreMinNotificationTime=""
    IgnoreServiceAvailability="" IgnoreUnpromised=""
    IncludeBundleParentInWorkOrders="" LocalShipNode=""
    OrderHeaderKey="" OrderNo="" OverrideReqDeliveryDate=""
    SortingType="" xmlns="http://www.sterlingcommerce.com/documentation/YCD/getOrderFulfillmentDetails/input">
    <yfc:doc>
        <Element EntityName="Order_Header">
            <Description>
                <div>
			        The <code>OrderHeaderKey</code> attribute <i>or</i> the <code>EnterpriseCode</code>, <code>DocumentType</code> and <code>OrderNo</code> attributes must be passed to identify the Order.
			 		<Validation>
                        <Condition>The order cannot be identified.</Condition>
                        <Error Description="YFS:Invalid Order." ErrorCode="YFS10003"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Flag" Name="IgnoreMinNotificationTime">
                <Description>
                    <div>This attribute will be propagated to getPossibleSchedules call from within this api.</div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="IgnoreServiceAvailability">
                <Description>
                    <div>If set to Y, check will be made only for products being included on the work order. If not passed, assumed N.</div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="IgnoreUnpromised">
                <Description>
                    <div>If <code>IgnoreUnpromised</code> is passed as <b>
                            <code>Y</code>
                        </b>, then <code>Y</code> is passed as the value of this attribute in the input to getPossibleSchedules API. Refer to javadocs of getPossibleSchedules API for more details on this attribute.
				<BR/>Default: <code>N</code>
                        <br/>Valid Values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="IncludeBundleParentInWorkOrders">
                <Description>
                    <div>If set to Y, bundle parent is included on the work orders. If not passed, assumed N.</div>
                </Description>
            </Attribute>
            <Attribute DataType="Text-24" Name="LocalShipNode">
                <Description>
                    <div>The Ship Node of the logged in user.</div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="OverrideReqDeliveryDate">
                <Description>
                    <div>If set to N, ReqDeliveryDate is not overridden at the header level. If not passed, assumed Y.</div>
                </Description>
            </Attribute>
            <Attribute DataType="String" Name="SortingType">
                <Description>
                    <div>
						This attribute is used to sort the Order Lines that are returned from the Api based on the criteria passed.				
						<br/>Valid Value: <b>
                            <code>ITEM</code>
                        </b>.
					</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <DeliveryMethods>
        <yfc:doc>
            <Element>
                <Description>
                    <div>If this element is not passed as the input, only the information about the Product items is displayed.</div>
                </Description>
            </Element>
        </yfc:doc>
        <DeliveryMethod DeliveryMethod="">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Text-40" Name="DeliveryMethod">
                        <Description>
                            <div>
					 			The delivery method of the product line.
					 		</div>
                            <div>
                                <br/>Valid Values: <b>
                                    <code>PICK</code>
                                </b> or <b>
                                    <code>DEL</code>
                                </b> or <b>
                                    <code>SHP</code>
                                </b> or <b>
                                    <code>SERVICE</code>
                                </b>
                            </div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </DeliveryMethod>
    </DeliveryMethods>
    <Modifications>
        <Modification StatusModificationType="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="Text-40" Name="StatusModificationType">
                        <Description>
					Modification Type
					 </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </Modification>
    </Modifications>
</Order>
