<!-- getDemandDetailsList input XML -->
<DemandDetails ConsiderAllNodes="Y|N" ConsiderUnassignedDemand="Y|N"
    DemandCancelDate="" DemandShipDate="" DemandType=""
    DistributionRuleId="" DocumentType="" EnterpriseCode=""
    ItemID="Required" MaximumRecords="" MinShipByDate="" OrderNo=""
    OrganizationCode="Required" ProductClass="" Segment=""
    SegmentType="" ShipNode="" UnitOfMeasure="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/getDemandDetailsList/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
					A view formed by joining the YFS_Order_Header, YFS_Order_Line, YFS_Inventory_Demand, YFS_Inventory_Item, and YFS_Invt_Demand_Details tables.<br>
					If <code>ItemID</code>, <code>ProductClass</code>, and/or <code>UnitOfMeasure</code> are passed, the list of demands is filtered, depending on the attribute passed.</br>
					If  <code>EnterpriseCode</code>,  <code>DocumentType</code> and <code>OrderNo</code> are passed, a list of demands for a particular order is returned.<br>
					If either the buyer or seller organization code is passed in the <code>OrganizationCode</code> attribute, a list of demands for a particular order organization is returned.</br>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Flag" Name="ConsiderAllNodes"/>
            <Attribute DataType="Flag" Name="ConsiderUnassignedDemand">
                <Description>
                    <div>
                        <Validation>
                            <Condition>
                                <code>ConsiderUnassignedDemand</code> cannot be passed if <code>ConsiderAllNodes</code> is passed as "Y".
				</Condition>
                            <Error
                                Description="ConsiderUnassignedDemand' cannot be passed if 'ConsiderAllNodes' is pass as 'Y'." ErrorCode="YFS10499"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Item_Ship_Node" Name="DistributionRuleId"/>
            <Attribute DataType="Integer" Name="MaximumRecords"/>
            <Attribute DataType="OrgCode" Name="OrganizationCode"/>
            <Attribute DataType="CommonCode" Name="Segment"/>
            <Attribute DataType="SegmentType" Name="SegmentType"/>
        </Attributes>
    </yfc:doc>
</DemandDetails>
