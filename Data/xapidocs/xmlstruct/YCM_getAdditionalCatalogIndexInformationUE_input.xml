<!-- YCMGetAdditionalCatalogIndexInformationUE Input XML -->
<SearchIndexTrigger CategoryDomain="" IncrementalBuildFromTriggerID=""
    IndexPath="" LocaleCode="Required" NumberOfErrors=""
    OrganizationCode="" SearchIndexTriggerID="" SearchIndexTriggerKey=""
    Status="" TriggerTimestamp="" xmlns="http://www.sterlingcommerce.com/documentation/YCM/getAdditionalCatalogIndexInformationUE/input">
    <yfc:doc>
        <Element EntityName="Search_Index_Trigger"/>
        <Attributes>
            <Attribute DataType="Locale" Name="LocaleCode">
                <Description>
                    <div>
						The locale code for which the additional catalog information is desired.
					</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <SearchIndexFieldList>
        <SearchField CanUseAsFilter="" GetExternalValue=""
            IndexFieldName="" Name="" Searchable="" Sortable="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:includeInParent IncludeXMLChildNodes="N"
                IncludeXMLFileName="YCM_getSearchIndexFieldList_output.xml" IncludeXMLPath="/SearchIndexFieldList/SearchField"/>
            <yfc:doc>
                <Element>
                    <Description>
                        <div>The search index field based on the CatalogSearchConfigProperties.</div>
                    </Description>
                </Element>
                <Attributes>
                    <Attribute DataType="Flag" Name="CanUseAsFilter">
                        <Description>
                            <div>The flag indicates that the field can be used as filter criteria in the input of the <code>searchCatalogIndex</code> API.</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Flag" Name="GetExternalValue">
                        <Description>
                            <div>
								This flag is defined in the <code>ExtnCatalogSearchConfigProperties</code> file to enable the search index building process to call user exit to obtain the value for the corresponding index field.
							</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-1000" Name="IndexFieldName">
                        <Description>
                            <div>The field name that is stored in the index.</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Text-100" Name="Name">
                        <Description>
                            <div>The display name of the searchable field.</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Flag" Name="Searchable">
                        <Description>
                            <div>The flag indicates that the field can be used for searching as a specific term in the input of the <code>searchCatalogIndex</code> API.</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="Flag" Name="Sortable">
                        <Description>
                            <div>The flag indicates that the field can be used for sorting as a sort criteria in the input of the <code>searchCatalogIndex</code> API.</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </SearchField>
    </SearchIndexFieldList>
    <ItemList>
        <Item GlobalItemID="" ItemGroupCode="" ItemID="" ItemKey=""
            OrganizationCode="" SubCatalogOrganizationCode=""
            UnitOfMeasure="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element EntityName="Item"/>
            </yfc:doc>
        </Item>
    </ItemList>
</SearchIndexTrigger>
