<ProductivityType ConsiderEfficiencyAs="" DeriveExecutionStandards=""
    DerivePlanningStandards="" EndDate="Required" EquipmentType=""
    OrganizationCode="Required" ProductivityType="Required"
    StartDate="Required" xmlns="http://www.sterlingcommerce.com/documentation/YCP/computeSAM/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="String" Name="ConsiderEfficiencyAs">
                <Description>
                    <div>
				The Standard that has to be set for the selected user(s) while deriving labor standards. Default value is 100. 
				</div>
                </Description>
            </Attribute>
            <Attribute DataType="String" Name="DeriveExecutionStandards">
                <Description>
                    <div>
				If this flag is set to 'Y',then computeSAM API derives Execution labor standards (SAM variables defined for Task Execution).
				</div>
                </Description>
            </Attribute>
            <Attribute DataType="String" Name="DerivePlanningStandards">
                <Description>
                    <div>
				If this flag is set to 'Y',then computeSAM API derives Planning labor standards (SAM variables defined for Planning purpose).
				</div>
                </Description>
            </Attribute>
            <Attribute DataType="String" Name="EndDate">
                <Description>
                    <div>
				End date for the time period to be considered to calculate the productivity.
				<Validation>
                            <Condition>
                                <code>EndDate</code> is not passed.
					</Condition>
                            <Error
                                Description="StartTime and EndTime must be passed." ErrorCode="YCP73_00024"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute Name="OrganizationCode">
                <Description>
                    <div>
				Node for which this productivity type is defined.
				<Validation>
                            <Condition>
                                <code>OrganizationCode</code> is not passed.
					</Condition>
                            <Error
                                Description="OrganizationCode must be passed." ErrorCode="YCP0154"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute Name="ProductivityType">
                <Description>
                    <div>
				Productivity Type.
				<Validation>
                            <Condition>
                                <code>ProductivityType</code> is not passed.
					</Condition>
                            <Error
                                Description="Productivity Type Details must be passed." ErrorCode="YCPPY0006"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="String" Name="StartDate">
                <Description>
                    <div>
				Start date for the time period to be considered to calculate the productivity.
				<Validation>
                            <Condition>
                                <code>StartDate</code> is not passed.
					</Condition>
                            <Error
                                Description="StartTime and EndTime must be passed." ErrorCode="YCP73_00024"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <UserList>
        <yfc:doc>
            <Element>
                <Description>
                    <div>
					Tasks executed by these users are considered to compute SAM.
					</div>
                </Description>
            </Element>
        </yfc:doc>
        <User UserId="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="String" Name="UserId">
                        <Description>
                            <div>
						UserId of the user .
						</div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </User>
    </UserList>
</ProductivityType>
