<!-- modifyCategoryItems Input XML -->
<ModifyCategoryItems CallingOrganizationCode="" xmlns="http://www.sterlingcommerce.com/documentation/YCM/modifyCategoryItem/input">
    <yfc:doc>
        <Attributes>
            <Attribute EntityName="Organization"
                Name="CallingOrganizationCode" NameInEntity="Organization_Code">
                <Description>Calling Organization used to apply entitlements.</Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <Category CategoryKey="" CategoryPath="" OrganizationCode="">
        <yfc:doc>
            <Element>
                <Description>
                    <div>
					Item category master table.
					<br>Either the <code>CategoryKey</code> attribute or both the <code>OrganizationCode</code> and <code>CategoryPath</code> attributes must be passed and must be valid.</br>
                        <Validation>
                            <Condition>
							If not passed:
							</Condition>
                            <Error
                                Description="Mandatory Parameters for the Operation are missing" ErrorCode="YCM0002"/>
                        </Validation>
                        <Validation>
                            <Condition>
							If not valid:
							</Condition>
                            <Error Description="Category Not Found" ErrorCode="YCM0034"/>
                        </Validation>
                        <Validation>
                            <Condition> 
							If an item is created by a sub-catalog organization and that same sub-catalog organization is not the authorized sub-catalog organization or the owner of the parent category or category domain:
							</Condition>
                            <Error Description="Invalid category owner" ErrorCode="YCM83_011"/>
                        </Validation>
                    </div>
                </Description>
            </Element>
        </yfc:doc>
        <CategoryItemList>
            <CategoryItem Action="Create|Delete" ItemID="" ItemKey=""
                OrganizationCode="" UnitOfMeasure="">
                <yfc:doc>
                    <Element>
                        <Description>
                            <div>
							Stores list of items belonging to a category.
							<br>Either the <code>ItemKey</code> attribute or the combination of the <code>OrganizationCode</code>, <code>ItemID</code>, and <code>UnitOfMeasure</code> attributes must be passed and must be valid.</br>
                                <Validation>
                                    <Condition>
									If an item cannot be uniquely identified given the input.
									</Condition>
                                    <Error Description="Item Not Found" ErrorCode="YCM0033"/>
                                </Validation>
                                <Validation>
                                    <Condition>
									If item belongs to an item with variations, it can only be added to a category that contains the item with variations and removed from a category that doesn't contain the item with variations.
									</Condition>
                                    <Error
                                    Description="Children of an item with variations must be assigned to the same categories as the item with variations" ErrorCode="YCM91_001"/>
                                </Validation>
                            </div>
                        </Description>
                    </Element>
                    <Attributes>
                        <Attribute DataType="Action" Name="Action">
                            <Description>Create/Delete</Description>
                        </Attribute>
                        <Attribute EntityName="Item" Name="ItemID" NameInEntity="Item_Id">
                            <Description>Along with OrganizationCode and UnitOfMeasure, it identifies a category item.</Description>
                        </Attribute>
                        <Attribute EntityName="Item" Name="ItemKey" NameInEntity="Item_Key">
                            <Description>Category item's primary key
							</Description>
                        </Attribute>
                        <Attribute EntityName="Item"
                            Name="OrganizationCode" NameInEntity="Organization_Code">
                            <Description>Organization that maintains catalog
							</Description>
                        </Attribute>
                        <Attribute EntityName="Item"
                            Name="UnitOfMeasure" NameInEntity="Uom">
                            <Description>Unit of measure for the category Item
							</Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </CategoryItem>
        </CategoryItemList>
    </Category>
</ModifyCategoryItems>
