<?xml version="1.0" encoding="UTF-8"?>
<!-- Either TaskQKey or one of WaveKey, (WaveNo, Node) is mandatory -->
<!-- BaseDropStatus is optional. When not specified, base drop status is read from the transaction configuration -->
<!-- TransactionId is optional when TaskQKey is passed. -->
<Wave BaseDropStatus="" Node="" TaskQKey="" TransactionId="" WaveKey=""
    WaveNo="" xmlns="http://www.sterlingcommerce.com/documentation/WMS/changeWaveStatus/input">
    <yfc:doc>
        <Element EntityName="Wave">
            <Description>
                <div>
                    <Validation>
                        <Condition>Either TaskQKey or one of WaveKey, (WaveNo, Node) is mandatory
						</Condition>
                        <Error
                            Description="WMS: Wave does not exist for the input passed." ErrorCode="WMS00129"/>
                    </Validation>
                    <Validation>
                        <Condition>Either TaskQKey or TransactionId is mandatory
						</Condition>
                        <Error Description="YCP:Field Mandatory" ErrorCode="YCP0046"/>
                    </Validation>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute EntityName="Pipeline_Definition"
                Name="BaseDropStatus" NameInEntity="Drop_Status">
                <Description>
                    <div>Value passed is used to determine the actual drop status that the transaction assigns to the wave. If <code>BaseStatus</code> is not passed, then the transaction must have only one base status defined as part of the setup.
					</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Task_Queue" Name="TaskQKey" NameInEntity="Task_Q_Key">
                <Description>Task Q request for wave status change.
				<div>
                        <Validation>
                            <Condition>Must be a valid <code>TaskQ</code> , in the table <code>YFS_TASK_Q</code>.
					</Condition>
                            <Error
                                Description="YFS: Invalid Task Q data." ErrorCode="YFS10406"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute EntityName="Transaction" Name="TransactionId" NameInEntity="Tranid">
                <Description>
                    <div>Identifies a transaction.  If <code>TaskQKey</code> is passed, any <code>TransactionId</code> passed is ignored.
				<Validation>
                            <Condition>If <code>TransactionId</code> is passed, the transaction identified must be derived from the abstract transaction <code>CHANGE_WAVE_STATUS</code>.
					</Condition>
                            <Error Description="Invalid Transaction." ErrorCode="YCP0063"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
</Wave>
