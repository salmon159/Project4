<!--validateItemForOrdering Input XML-->
<Order DocumentType="" EnterpriseCode="!OrganizationCode!"
    OrderHeaderKey="" OrderNo="" ShowValidLines="Y|N"
    SkipBOMValidations="N|Y" xmlns="http://www.sterlingcommerce.com/documentation/OMP/validateItemForOrdering/input">
    <yfc:doc>
        <Element EntityName="Order_Header">
            <Description>
                <div>
			Required. Contains the details of an order. Either {<code>OrderHeaderKey</code>} or {<code>DocumentType</code>, 
			<code>EnterpriseCode</code>, and <code>OrderNo</code>} must be passed. 
			<br/>If validation is successful, no output will be provided.
			<br/>
                </div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Flag" Name="ShowValidLines">
                <Description>
                    <div>
						This flag determines if valid order lines should be returned in output.
						Valid values: <b>
                            <code>Y</code>
                        </b> or <b>
                            <code>N</code>
                        </b>
						Default value: <b>
                            <code>Y</code>
                        </b>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="SkipBOMValidations">
                <Description>
                    <div>Determines whether BOM XML specific validations should be skipped. Default: N
        		</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <Item>
        <ItemAttributeGroupTypeList>
            <yfc:includeInParent IncludeXMLChildNodes="Y"
                IncludeXMLFileName="YCM_getItemList_input.xml" IncludeXMLPath="/Item/ItemAttributeGroupTypeList"/>
            <yfc:doc>
                <Element>
                    <Description>
                        <div>
				A list of ItemAttributeGroupType can be passed to be used as filter criteria to control the item attribute group types to return in the output XML.
				</div>
                    </Description>
                </Element>
            </yfc:doc>
            <ItemAttributeGroupType ClassificationPurposeCode=""
                ItemAttributeGroupType="" yfc:DTDOccurrence="ZeroOrMany"/>
        </ItemAttributeGroupTypeList>
    </Item>
</Order>
