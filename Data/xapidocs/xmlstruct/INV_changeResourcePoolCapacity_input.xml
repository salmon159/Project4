                <Element EntityName="Res_Pool_Service_Skill"/>
                <Attributes>
                    <Attribute DataType="Action" Name="Operation">
                        <Description>
                            <div>
                           Valid value is <b>
                                    <code>Delete</code>
                                </b>.  Set <code>Operation</code> = "<b>
                                    <code>Delete</code>
                                </b>" to delete the entity.
                          </div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
        </ServiceSkill>
    </ServiceSkills>
    <ServiceResources>
        <ServiceResource Notes="" Operation="" ServiceResourceId="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Attributes>
