<!-- YCP_getExceptionListForUser_Input.xml -->
<getExceptionListForUser IncludeAlertsAssignedToUser=""
    IncludeAlertsInUsersDepartmentQueue=""
    IncludeAlertsOwnedByUsersOrg="" MaximumRecords="" UserId="Required" xmlns="http://www.sterlingcommerce.com/documentation/YCP/getExceptionListForUser/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="Flag" Name="IncludeAlertsAssignedToUser">
                <Description>If this Attribute is Y,the api will list all exceptions assigned to the user in addition to those in his queues.</Description>
            </Attribute>
            <Attribute DataType="Flag" Name="IncludeAlertsInUsersDepartmentQueue">
                <Description>If this Attribute is Y,the api will list all exceptions in the users department in addition to those in his queues.</Description>
            </Attribute>
            <Attribute DataType="Flag" Name="IncludeAlertsOwnedByUsersOrg">
                <Description>If this Attribute is Y,the api will list all exceptions owned by users organization in addition to those in his queues.</Description>
            </Attribute>
            <Attribute DataType="String" Name="MaximumRecords"/>
            <Attribute EntityName="User" Name="UserId" NameInEntity="Loginid">
                <Description>User for whom the exception list is requested.</Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <Inbox ApiName="" AssignedToUserKey="" AutoResolvedFlag=""
        BillToID="" ConsolidationCount="" EnterpriseKey=""
        ErrorReason="" ErrorType="" ExceptionEscalatedFlag=""
        ExceptionType="" ExpirationDays="" FlowName="" FollowupDate=""
        GeneratedOn="" InboxKey="" InboxType="" ItemId=""
        LastExceedAlert="" LastOccurredOn="" LastUnassignAlert=""
        LastUnresolveAlert="" LoadNo="" LockedByUserKey="" LockedFlag=""
        LockedOn="" OrderHeaderKey="" OrderLineKey="" OrderNo=""
        OwnerKey="" OwnerType="" ParentInboxKey="" Priority=""
        ResolutionDate="" ResolveBy="" ShipmentNo="" ShipnodeKey=""
        Status="" SubFlowName="" SupplierKey="" TeamCode="" ViewId=""
        WaveKey="" WaveNo="" WorkOrderKey="" WorkOrderNo="" yfc:QryTypeSupported="Y">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="Text-24" Name="Status">
                    <Description>Status of the Alerts to be considered. This status filter is applied to all unresolved alerts with ActiveFlag = 'Y'.  </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
    </Inbox>
</getExceptionListForUser>
