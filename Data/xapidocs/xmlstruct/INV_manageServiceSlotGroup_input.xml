<!-- manageServiceSlotGroup input XML -->
<ServiceSlotGroup CallingOrganizationCode="" ItemGroupCode=""
    Operation="" OrganizationKey="Required" ServiceSlotGroupDesc=""
    ServiceSlotGroupId="" ServiceSlotGroupKey="" xmlns="http://www.sterlingcommerce.com/documentation/INV/manageServiceSlotGroup/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="Key" Name="CallingOrganizationCode">
                <Description>
                    <div>The code of the organization that will request a change for service slot</div>
                </Description>
            </Attribute>
            <Attribute DataType="Action" Name="Operation">
                <Description>
                    <div>Operation to perform
						<br/>Valid Values: 
						<br/>
                        <b>
                            <code>Manage</code>
                        </b> - Creates a new record if it does not exist, or modifies an existing record if it does.
						<br/>
                        <b>
                            <code>Create</code>
                        </b> - Creates a new record. 
						<br/>
                        <b>
                            <code>Modify</code>
                        </b> - Change values in an existing record.
						<br/>
                        <b>
                            <code>Delete</code>
                        </b> - Deletes an existing record.
						<br/>The default behavior is <b>
                            <code>Manage</code>
                        </b>.
						</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <ServiceSlotList ServiceSlotGroupDesc="">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="String" Name="ServiceSlotGroupDesc"/>
            </Attributes>
        </yfc:doc>
        <ServiceSlot EndTime="Required" ServiceSlotDesc=""
            ServiceSlotGroupKey="" ServiceSlotKey=""
            StartTime="Required" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Element>
                    <Description>
                        <div>
                            <Validation>
                                <Condition>If Operation is Create or Modify and no serviceSlot element specified 
								</Condition>
                                <Error Description="Invalid Input" ErrorCode="YFS10363"/>
                            </Validation>
                            <Validation>
                                <Condition>If Operation is Create or Modify and StartTime and EndTime attributes are not specified
								</Condition>
                                <Error
                                    Description="Missing Mandatory Parameters" ErrorCode="YFS10364"/>
                            </Validation>
                        </div>
                    </Description>
                </Element>
            </yfc:doc>
        </ServiceSlot>
    </ServiceSlotList>
</ServiceSlotGroup>
