<Promise ComputeCarryAvl="" ComputePickupAvl=""
    ComputeRealTimeAvailability="" ComputeShpAvl=""
    ComputeTotalAvailability="" DeliveryMethod="" OrderHeaderKey=""
    OrganizationCode="Required" ShipNode="" xmlns="http://www.sterlingcommerce.com/documentation/YCD/getItemAvailabilityForStore/input">
    <yfc:doc>
        <Attributes>
            <Attribute DataType="Flag" Name="ComputeCarryAvl">
                <Description>
                    <div>This flag has to be passed if pick up availability for current node has to be computed by getFulfillmentOptionsForLines. This has to be passed when OrderHeaderKey attribute is passed in the input. Default value is N </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="ComputePickupAvl">
                <Description>
                    <div>This flag has to be passed if pick up availability information has to be computed by getFulfillmentOptionsForLines. This has to be passed when OrderHeaderKey attribute is passed in the input. Default value is N </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="ComputeRealTimeAvailability">
                <Description>
                    <div>This flag indicates if item availability needs to be always computed in real time. The getFulfillmentOptionsForLines API will be called if this flag is set to Y.</div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="ComputeShpAvl">
                <Description>
                    <div>This flag has to be passed if Shipping availability information has to be computed by getFulfillmentOptionsForLines. This has to be passed when OrderHeaderKey attribute is passed in the input. Default value is N </div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="ComputeTotalAvailability">
                <Description>
                    <div> This flag has to be passed as Y if we need to compute the total inventory availability of the product in current store.</div>
                </Description>
            </Attribute>
            <Attribute DataType="Text-24" Name="DeliveryMethod">
                <Description>
                    <div>DeliveryMethod used for obtaining the promise line. valid values: CARRY,PICK and SHP. </div>
                </Description>
            </Attribute>
            <Attribute DataType="Key" Name="OrderHeaderKey">
                <Description>
                    <div>
						The primary key for the YFS_ORDER_HEADER table. This attribute corresponds to the PrimaryKey Fact. 
						<Validation>
                            <Condition>
                                <code>OrderHeaderKey</code> not provided.</Condition>
                            <Error
                                Description="OrderHeaderKey is mandatory when ComputeRealTimeAvailability is passed as Y." ErrorCode="YCD00109"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="OrgCode" Name="OrganizationCode">
                <Description>
                    <div>The Organization used to identify the fulfillment rules, ship nodes, and order/item information.
					<Validation>
                            <Condition>
                                <code>OrganizationCode</code> not provided.</Condition>
                            <Error
                                Description="Organization code is mandatory for this operation." ErrorCode="YCD00105"/>
                        </Validation>
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="ShipNode" Name="ShipNode">
                <Description>
                    <div> The node/store where the item availability needs to be checked for CARRY lines. This will be ignored for SHP and PICKUP fulfillment options.
					</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <PromiseLines>
        <PromiseLine ItemID="" ProductClass="" Quantity=""
            RequiredQty="" UnitOfMeasure="">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="ItemID" Name="ItemID">
                        <Description>
                            <div>
					The unique identifier for the item. 
					<Validation>
                                    <Condition>
                                    <code>ItemID</code> not provided.</Condition>
                                    <Error
                                    Description="ItemID is mandatory for this operation." ErrorCode="YCD00106"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="ProductClass" Name="ProductClass">
                        <Description>
                            <div>The product class associated with the item.</div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="String" Name="Quantity"/>
                    <Attribute DataType="Quantity" Name="RequiredQty">
                        <Description>
                            <div> Requested quantity.
					<Validation>
                                    <Condition>
                                    <code>Quantity</code> not provided.</Condition>
                                    <Error
                                    Description="Quantity is mandatory for this operation." ErrorCode="YCD00108"/>
                                </Validation>
                            </div>
                        </Description>
                    </Attribute>
                    <Attribute DataType="UOM" Name="UnitOfMeasure">
                        <Description>
                            <div>The unit of measure for item quantity. </div>
                        </Description>
                    </Attribute>
                </Attributes>
            </yfc:doc>
            <OrderLine DeliveryMethod="" OrderLineKey="">
                <yfc:doc>
                    <Element EntityName="Order_Line"/>
                    <Attributes>
                        <Attribute DataType="Key" Name="OrderLineKey">
                            <Description>
                                <Validation>
                                    <Condition>
                                    <code>OrderLineKey</code> not provided.</Condition>
                                    <Error
                                    Description="OrderLineKey is mandatory when ComputeRealTimeAvailability is passed as Y." ErrorCode="YCD00109"/>
                                </Validation>
                            </Description>
                        </Attribute>
                    </Attributes>
                </yfc:doc>
            </OrderLine>
            <ShipToAddress AddressID="" AddressLine1="" AddressLine2=""
                AddressLine3="" AddressLine4="" AddressLine5=""
                AddressLine6="" AlternateEmailID="" Beeper="" City=""
                Company="" Country="" DayFaxNo="" DayPhone=""
                Department="" EMailID="" EveningFaxNo="" EveningPhone=""
                FirstName="" IsCommercialAddress="" JobTitle=""
                LastName="" MiddleName="" MobilePhone="" OtherPhone=""
                PersonID="" State="" Suffix="" TaxGeoCode="" Title="" ZipCode="">
                <yfc:doc>
                    <Element EntityName="Person_Info"/>
                </yfc:doc>
            </ShipToAddress>
        </PromiseLine>
    </PromiseLines>
    <Overrides IsPickupAllowed="" IsShippingAllowed="">
        <yfc:doc>
            <Attributes>
                <Attribute DataType="Flag" Name="IsPickupAllowed">
                    <Description>
                        <div>This flag indicates whether the delivery method PICK is allowed for item. Valid values: Yes Y or No N. </div>
                    </Description>
                </Attribute>
                <Attribute DataType="Flag" Name="IsShippingAllowed">
                    <Description>
                        <div>
					This flag indicates whether the delivery method SHP is allowed for item. Valid values: Yes Y or No N. 
					</div>
                    </Description>
                </Attribute>
            </Attributes>
        </yfc:doc>
    </Overrides>
    <ShipNodeAddress AddressID="" AddressLine1="" AddressLine2=""
        AddressLine3="" AddressLine4="" AddressLine5="" AddressLine6=""
        AlternateEmailID="" Beeper="" City="" Company="" Country=""
        DayFaxNo="" DayPhone="" Department="" EMailID="" EveningFaxNo=""
        EveningPhone="" FirstName="" IsCommercialAddress="" JobTitle=""
        LastName="" MiddleName="" MobilePhone="" OtherPhone=""
        PersonID="" State="" Suffix="" TaxGeoCode="" Title="" ZipCode="">
        <yfc:doc>
            <Element EntityName="Person_Info"/>
        </yfc:doc>
    </ShipNodeAddress>
</Promise>
