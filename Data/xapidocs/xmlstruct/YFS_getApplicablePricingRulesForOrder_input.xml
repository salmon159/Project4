<!--getApplicablePricingRulesForOrder Input XML-->
<Order ApplyManualPricingRules="" DocumentType="Conditional"
    EnterpriseCode="Conditional" OrderHeaderKey="Conditional"
    OrderNo="Conditional" PricingDate="" RunCatalogOnlyRules="" xmlns="http://www.sterlingcommerce.com/documentation/YFS/getApplicablePricingRulesForOrder/input">
    <yfc:doc>
        <Element>
            <Description>
                <div>
			The <code>OrderHeaderKey</code>, or  the <code>EnterpriseCode</code>, <code>DocumentType</code> and the <code>OrderNo</code> must be passed to identify the <code>Order</code>.
			</div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Flag" Name="ApplyManualPricingRules">
                <Description>
                    <div>
						Default: <b>
                            <code>Y</code>
                        </b>
                        <br/>Valid Values:
						<br/>
                        <b>
                            <code>Y</code>
                        </b> - Suggest applicable manual pricing rules for the order configuration
						
                        
                        <!-- <br/>
						<b><code>N</code></b> - Do not suggest applicable manual pricing rules for the order configuration -->
                    </div>
                </Description>
            </Attribute>
            <Attribute DataType="TimeStamp" Name="PricingDate">
                <Description>
                    <div>Date on which the pricing is requested. If void it is defaulted to current date and time.</div>
                </Description>
            </Attribute>
            <Attribute DataType="Flag" Name="RunCatalogOnlyRules">
                <Description>
                    <div>
			  			If <code>RunCatalogOnlyRules</code> is passed as <b>
                            <code>Y</code>
                        </b> then rules that are applicable in item listing, i.e. 
						<ul>
                            <li> pricing rules with <code>RuleType</code> as <b>
                                    <code>ITEM_QUANTITY</code>
                                </b> are executed.</li>
                            <li> manual rules with <code>RuleType</code> as <b>
                                    <code>ITEM_QUANTITY</code>
                                </b> are executed for suggestion.</li>
                            <li> combination and order total pricing rules are suppressed.</li>
                            <li> shipping charge calculation, shipping rules execution and shipping coupon execution are suppressed.</li>
                        </ul>
						Default value is <b>
                            <code>N</code>
                        </b>. 
				  	</div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <OrderLines>
        <OrderLine DeliveryMethod="" ItemID=""
            OrderLineKey="Conditional" PrimeLineNo="Conditional"
            Quantity="" SubLineNo="Conditional" UnitOfMeasure="" yfc:DTDOccurrence="ZeroOrMany">
            <yfc:doc>
                <Attributes>
                    <Attribute DataType="String" Name="Quantity"/>
                </Attributes>
            </yfc:doc>
        </OrderLine>
    </OrderLines>
</Order>
