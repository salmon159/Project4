<Adjustment AdjustmentApplied="" AdjustmentAvailable="" AdjustmentID=""
    AdjustmentQuantity="" ApplyProratedAdjustment=""
    AssociateExclusionCategoryAttributeForTarget=""
    AssociateExclusionCategoryAttributeForTrigger=""
    AssociateInclusionCategoryAttributeForTarget=""
    AssociateInclusionCategoryAttributeForTrigger="" AwardQuantity=""
    CarrierServiceCode="" ChargeCategory="" ChargeName=""
    CommonTriggerQuantity="" CopyTriggerExclusionsToTargetExclusions=""
    CopyTriggerInclusionsToTargetInclusions="" Currency=""
    CustomerRedemptionLimit="" Description=""
    DiscountAllCombinationItems="" DistributeAdjustment=""
    DistributeAdjustmentAcrossCombo="" EnableMixNMatchItems=""
    EndDateActive="" EndTime="" ExclusivityId="" ExclusivityType=""
    IgnoreRuleOnManualAdjustment="" IgnoreRuleOnPriceLock=""
    IsActiveOnFriday="" IsActiveOnMonday="" IsActiveOnSaturday=""
    IsActiveOnSunday="" IsActiveOnThursday="" IsActiveOnTuesday=""
    IsActiveOnWednesday="" IsCouponRule="" IsCustomRule=""
    IsFreeGiftRule="" IsItemAttributeValueRule="" IsItemRule=""
    IsManualRule="" IsNonInstantDiscountRule="" ItemOperatorCode=""
    ManualAdjustmentOperation="" MinimizeNumberOfShipments=""
    OrganizationCode="!OrganizationCode!" OverallRedemptionLimit=""
    PaymentType="" PricingComplexity="" PricingRuleKey=""
    PricingRuleName="" PricingStatus="" Priority="" RuleCategory=""
    RuleType="" SellerOrganizationCode="" StartDateActive=""
    StartTime="" StatusMsgCode="" xmlns="http://www.sterlingcommerce.com/documentation/YPM/Adjustment_master">
    <yfc:includeInParent IncludeXMLChildNodes="N"
        IncludeXMLFileName="YPM_Pricing_Rule_master.xml" IncludeXMLPath="/PricingRule"/>
    <yfc:doc>
        <Element EntityName="Pricing_Rule">
            <Description>
                <div>The manual adjustment, coupon or pricing rule which has resulted in this adjustment.</div>
            </Description>
        </Element>
        <Attributes>
            <Attribute DataType="Price" Name="AdjustmentApplied">
                <Description>
                    <div>Total adjustment applied as because of pricing rule or coupon or the manual adjustment.</div>
                </Description>
            </Attribute>
            <Attribute DataType="Price" Name="AdjustmentAvailable">
                <Description>
                    <div>Total adjustment applicable because of pricing rule or coupon or manual adjustment.</div>
                </Description>
            </Attribute>
            <Attribute EntityName="Pricing_Rule" Name="AdjustmentID" NameInEntity="Pricing_Rule_Name">
                <Description>
                    <div>The identifier of an adjustment. 
						<br/>Possible Values: 
						<br/>
                        <b>
                            <code>PricingRuleName</code>
                        </b> - If adjustment has occurred because of a pricing rule.
						<br/>
                        <b>
                            <code>CouponID</code>
                        </b> - If adjustment has occurred because of a coupon. 
						<br/>
                        <b>
                            <code>AdjustmentID</code>
                        </b> - Manual adjustment identifier provided in the input.
					</div>
                </Description>
            </Attribute>
            <Attribute DataType="Quantity" Name="AdjustmentQuantity">
                <Description>
                    <div>Quantity of items to which this adjustment is applicable.</div>
                </Description>
            </Attribute>
            <Attribute DataType="Quantity" Name="AwardQuantity">
                <Description>
                    <div>For header level free gift promotions, indicates free gift quantity that may still be applied. If StatusMsgCode is YPM_RULE_FREE_GIFT_NOT_SELECTED but AwardQuantity is not present, then applicable quantity is unspecified.</div>
                </Description>
            </Attribute>
            <Attribute DataType="ChargeCategory" Name="ChargeCategory">
                <Description>
                    <div>The charge category. This attribute is used in the input of YPMOverrideGetOrderPrice User Exit.</div>
                </Description>
            </Attribute>
            <Attribute DataType="ChargeName" Name="ChargeName">
                <Description>
                    <div>The name of the charge. This attribute is used in the input of YPMOverrideGetOrderPrice User Exit. </div>
                </Description>
            </Attribute>
            <Attribute DataType="Operation" Name="ManualAdjustmentOperation">
                <Description>
                    <div>Used by user exit to add a new manual adjustment to the order, or remove an existing manual adjustment from the order.
					 <br/>Valid Values: 
						<br/>
                        <b>
                            <code>ADD</code>
                        </b> - Adds a new manual adjustment to the order.
						<br/>
                        <b>
                            <code>REMOVE</code>
                        </b> - Removes an existing adjustment from the order 
						<br/>
                        <br/>The default behavior is <b>
                            <code>ADD</code>
                        </b>.
					</div>
                </Description>
            </Attribute>
            <Attribute DataType="Text-100" Name="StatusMsgCode">
                <Description>
                    <div class="portlet"
                            style="width:90%">
					Indicates the status of the rule validation and application on the order. Following table lists the possible status codes: 
					<table
                            border="0" cellpadding="0" cellspacing="0" class="table">
                            <tr>
                                <td align="center" class="tablecolumn"
                                    style="border-bottom:1px solid #8C92C6" valign="top">YPM_RULE_FREE_GIFT_NOT_SELECTED</td>
                                <td align="center" class="tablecolumn"
                                    style="border-bottom:1px solid #8C92C6" valign="top">Free gift was not selected or only partially selected for rule. AwardQuantity attribute indicates the free gift quantity that can be applied for this rule.</td>
                                <td align="center" class="tablecolumn"
                                    style="border-bottom:1px solid #8C92C6" valign="top">None.</td>
                            </tr>
                        </table>
                    </div>
                </Description>
            </Attribute>
        </Attributes>
    </yfc:doc>
    <AdjustmentAction Adjustment="" AdjustmentType=""
        ApplyAdjustmentToRemainder="" ChargeCategory="" ChargeName=""
        MaxAbsoluteAdjustment="" MaximumManualAdjustment=""
        OrderTotal="" PricingRuleActionKey="" PricingRuleKey=""
        QualifierAmount="" QualifierAmountType="" Quantity=""
        Reference="" TargetItemDeterminationRule=""
        TargetOccurrenceLimit="" WhenToApply="">
        <yfc:includeInParent IncludeXMLChildNodes="N"
            IncludeXMLFileName="YPM_Pricing_Rule_Action_master.xml" IncludeXMLPath="/PricingRuleAction"/>
        <yfc:doc>
            <Element EntityName="Pricing_Rule_Action">
                <Description>
                    <div>Action of the pricing rule which is performed to generate the adjustment.
					</div>
                </Description>
            </Element>
        </yfc:doc>
    </AdjustmentAction>
</Adjustment>
