<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <xsl:output indent="yes" method="xml"/>
    <xsl:template match="TitanPaymentDetail">
        <xsl:variable name="OldAmountPerUnit" select="@OldAmountPerUnit"/>
        <xsl:variable name="Qty" select="@OrderedQty"/>
		<xsl:variable name="nAmountPerLine" select="@AmountPerLine"/>
        <xsl:variable name="NewAmountPerUnit" select="format-number($OldAmountPerUnit div $Qty, '0.00')"/>
		<xsl:variable name="amountPerLine" select="format-number($nAmountPerLine, '0.00')"/>
        
        <xsl:copy>
            <xsl:attribute name="AmountPerUnit">
                <xsl:value-of select="$NewAmountPerUnit"/>
            </xsl:attribute>
			<xsl:attribute name="AmountPerLine">
                <xsl:value-of select="$amountPerLine"/>
            </xsl:attribute>
            <xsl:apply-templates select="@*|node()"/>
        </xsl:copy>
    </xsl:template>
    <xsl:template match="@*|node()">
        <xsl:copy>
            <xsl:apply-templates select="@*|node()"/>
        </xsl:copy>
    </xsl:template>
</xsl:stylesheet>
